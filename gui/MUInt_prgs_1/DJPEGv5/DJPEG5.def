stack 8000
;     SCRIPT FILENAME: JPEG5.def

;     Set up the source and dest directories for LEFT and RIGHT
;     CHANGE THIS BEFORE TRYING THIS SCRIPT

echo  >ram:DJbuttons "                   Convert LEFT JPEG -->TO RIGHT                      ;execute D.convertLR.scp"
echo >>ram:DJbuttons "    DELETE LEFT    ;execute D.deleft.scp"
echo >>ram:DJbuttons "     VIEW LEFT     ;execute D.viewerL.scp"
echo >>ram:DJbuttons "     VIEW RIGHT    ;execute D.viewerR.scp"
echo >>ram:DJbuttons "    DELETE RIGHT   ;execute D.delright.scp"
echo >>ram:DJbuttons "   COPY Src->Dest  ;execute D.copyL2R.scp"
echo >>ram:DJbuttons "       HELP        ;Advice *"DJPEG Help*" D.help.txt POS CENTERSCR"
echo >>ram:DJbuttons "   COPY Dest->Src  ;execute D.copyR2L.scp"
echo >>ram:DJbuttons "       QUIT        "

echo  >ram:DJcheckbox "BLOCKSM;-block"
echo >>ram:DJcheckbox "ONEPASS;-onep"
echo >>ram:DJcheckbox "DEBUG  ;-debug"

echo  >ram:DJradio "TYPE;COLOR|GRAY;-gr"
echo >>ram:DJradio "SIZE;FULL|HALF;-scale 1/2|QUARTER;-scale 1/4|EIGHTH;-scale 1/8"
echo >>ram:DJradio "OUTFILE;GIF;-gif|TARGA;-tar|BMP;-os2|PBM PLUS;-prm"
echo >>ram:DJradio "DCT METHOD;Integer;|Fast Integer;-fast|Floating Pt;-float"
echo >>ram:DJradio "DITHER;FS;-dither fs|ORDERED;-dither ordered|NONE;-dither none"
echo >>ram:DJradio "# COLORS;NO LIMIT;|256;-colors 256|128;-colors 128|32;-colors 32"


;SET source "work:graphics/pictures/jpeg"

;========= Put your own directories here ========
;=========  This is the conversion path  ========

SET source "ram:"
SET dest "ram:"


echo  >ram:DJ.cl "BEGIN"
echo >>ram:DJ.cl "TITLE *"DJPEGv5 Convertor*"" 
echo >>ram:DJ.cl "LEFT SOURCE;$source"
echo >>ram:DJ.cl "RIGHT DESTINATION;$dest"
echo >>ram:DJ.cl "BODY D.djpeg.man"
echo >>ram:DJ.cl "BUTTONS ram:DJbuttons"
echo >>ram:DJ.cl "RADIO ram:DJradio"
echo >>ram:DJ.cl "CHECKBOX ram:DJcheckbox"
echo >>ram:DJ.cl "WIDTH 80"
echo >>ram:DJ.cl "NAME DJPEG"
echo >>ram:DJ.cl "END"



MUInt ram:DJ.cl

DELETE ram:DJ#? quiet

quit


