; SCRIPT FILENAME: C.COPYR2L.SCP 


IF EXISTS >nil: env:right
  IF EXISTS >nil: env:leftpath

    rtEZrequest "MUInt Advice:" BODY "Do you want to COPY:\n$right\nTO\n*"$leftpath*"" BUTTONTEXT "Copy|Cancel" NORETURNKEY POS CENTERSCR CENTERTEXT
    SET result $RC

    IF $Result EQ 1
      COPY $right TO $leftpath
    ENDIF

    QUIT 

  ENDIF
ENDIF

rtEZrequest TITLE "MUInt Advice:" BODY "ERROR: No File/Directory Selected" BUTTONTEXT "_Continue"  POS CENTERSCR

quit 