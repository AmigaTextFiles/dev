(set is_update 0)
(complete 0)

(SET @default-dest "SYS:")

(IF (< (/ (getversion) 65536) 37)

    (
      (message "\n Tut mir leid, dieses Paket benoetigt mind. OS2.04.\n")
      (exit (quiet))
    )
)


(SET MenDes_dest
        (askdir
                (prompt "In welche Disk/Schublade soll MenuDesigner installiert werden?")
                (help "\n Das Installationsprogramm erstellt das Verzeichnis \n"
                        " \"MenuDesigner\" in diesem Verzeichnis. Alle \n \"MenuDesigner\""
                        " Dateien werden in dieses Verzeichnis    kopiert. \n\n"
                        " Tip :\n "
                        "\"MenuDesigner\" kann später in ein beliebiges \n anderes "
                        "Verzeichnis verschoben werden, wenn der \n Inhalt nicht geändert wird.\n")
                (default @default-dest)
        )
)


; Neues Verzeichnis
(makedir (tackon MenDes_dest "MenuDesigner") (infos))

(SET MenDes_dest (tackon MenDes_dest "MenuDesigner"))
(set @default-dest MenDes_dest)

(copyfiles
        (source "")
        (dest MenDes_dest) (pattern "#?") (infos)
)       
(complete 70)
       ((SET zusatze (askoptions

            (prompt "\n Welche Zusätze sollen installiert werden ?\n")

            (choices
                " MenDes nach C:"
                " MenDes in die WB-Startup:"
                " Beispiel Script nach S:"
                " ESC nach C:"
                " WBArgRun nach C:"
                " JConMouse nach C:"
                " ShowGuide nach C:"
                " Configs nach S:"
            )

            (help (cat "\n"

                " 1. Wenn MenDes nach C: kopiert wird, haben Sie den \n"
                "    Vorteil das Sie jederzeit MenDes über die Shell \n"
                "    (ohne lange Pfadnamen aufrufen können) \n"
                "                                            \n"
                " 2. Das Programm MenDes wird beim Booten automatisch\n"
                "    gestartet. (MenDes wird über die Tooltypes \n"
                "    konfiguriert, mehr dazu in der Anleitung)  \n"
                "                                                   \n"
                " 3. Es wird eine Beispielkonfiguration nach S: \n"
                "    kopiert. \n"
                " \n"
                " 4. Ein Programm das Escape-Sequenzen zum Drucker.\n    schickt \n"
                " \n"
                " 5. Ein Programm das den WBStart simuliert.\n"
                " \n"
                " 6. Ein Programm das den Joystick zur Maussteuerung\n    benutzt.\n"
                " \n"
                " 7. Ein AmigaGuide Ersatz.\n"
                " \n"
                " 8. Dies ist eine Config für den MenDes\n"

            ))

            (DEFAULT 0)
        ))
    )

    (IF (IN zusatze 0) (

        (copyfiles

            (source "MenDes")
            (dest   "C:")
        )
    ))
    (complete 75)
    (IF (IN zusatze 1) (

        (copyfiles

            (source "MenDes")
            (dest   "SYS:WBStartup/")
        )
        (complete 77)
        (copyfiles

            (source "MenDes.info")
            (dest   "SYS:WBStartup/")
        )

    ))
    (complete 79)
    (IF (IN zusatze 2) (

        (copyfiles

            (source "WB-Prefs.cfg")
            (dest   "s:")
        )
    ))
    (complete 86)
    (IF (IN zusatze 3) (

        (copyfiles

            (source "C-Utilities/ESC")
            (dest   "c:")
        )
    ))
    (complete 90)
    (IF (IN zusatze 4) (

        (copyfiles

            (source "C-Utilities/WBArgRun")
            (dest   "c:")
        )
    ))
    (complete 93)
    (IF (IN zusatze 5) (

        (copyfiles

            (source "C-Utilities/JConMouse")
            (dest   "c:")
        )
    ))
    (complete 96)
       (IF (IN zusatze 6) (

        (copyfiles

            (source "C-Utilities/ShowGuide")
            (dest   "c:")
        )
    ))
     (complete 99)
       (IF (IN zusatze 7) (

        (copyfiles

            (source "S-Configs/MenDes.cfg")
            (dest   "s:")
        )
    ))


(complete 100)
(exit)

