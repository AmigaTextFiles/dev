(* ****************************************************************************** *)

(* ------------------------------------------------------------------------------ *)
(* library name and version                                                       *)
(* ------------------------------------------------------------------------------ *)

VAR     tritonVersion   : INTEGER;
        tritonBase      : ed.LibraryPtr;

CONST   tritonMinVersion= 1;
        tritonName      = "triton.library";


PROCEDURE AutoRequest
