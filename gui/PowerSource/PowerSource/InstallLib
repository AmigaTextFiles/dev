.K ""
echo "This script will install tool.library, after checking to see if"
echo "you already have one.  If so, it will check the version numbers"
echo "of the installed one, and the one in this directory, and give"
echo "you the option of installing the one found here."
echo ""

if not EXISTS libs:tool.library
	echo "No existing library, installing libs:tool.library..."
	copy libs/tool.library libs:tool.library
else
	echo "Examine the version numbers of each library."
	echo ""
	version libs:tool.library
	version libs/tool.library
	echo ""
	ask "Do you wish to overwrite libs:tool.library?"
	if WARN
		echo "Updating libs:tool.library..."
		copy libs/tool.library libs:tool.library
	endif
endif

echo "All Done.  Click close gadget to get rid of window."
endcli
