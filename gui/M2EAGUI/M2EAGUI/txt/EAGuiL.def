DEFINITION MODULE EAGuiL{"EAGUI.library",2};

(* IMPORTS ********************************************************************** *)

IMPORT  d       : EAGuiD;

IMPORT  ed      : ExecD,
        gd      : GraphicsD,
        id      : IntuitionD,
        R,
        S       : SYSTEM,
        ud      : UtilityD;

(* ****************************************************************************** *)

TYPE    StrPtr          = S.ADDRESS;      (* for readability *)

VAR     eaguiVersion    : INTEGER;
