DEFINITION MODULE EAGuiD; (*$ Implementation:= FALSE *)

(* IMPORTS ********************************************************************** *)

IMPORT  ed      : ExecD,
        gd      : GraphicsD,
        S       : SYSTEM,
        ud      : UtilityD;

(* ****************************************************************************** *)

(* ------------------------------------------------------------------------------ *)
(* library name and version                                                       *)
(* ------------------------------------------------------------------------------ *)

CONST   eaguiName               = "EAGUI.library";
        eaguiVersion            = 2;

(* ------------------------------------------------------------------------------ *)
(* eaObject.type definitions                                                      *)
(* ------------------------------------------------------------------------------ *)

CONST   eaTypeHGroup            = 1;
        eaTypeVGroup            = 2;
        eaTypeGTGadget          = 3;
        eaTypeBoopsiGadget      = 4;
        eaTypeCustomImage       = 5;
        eaTypeBoopsiImage       = 6;

(* ------------------------------------------------------------------------------ *)
(* various LONG attributes can have an unknown value at some point                *)
(* ------------------------------------------------------------------------------ *)

CONST   eaUnknown               = -1;

(* ------------------------------------------------------------------------------ *)
(* error return codes                                                             *)
(* ------------------------------------------------------------------------------ *)

CONST   eaErrorOK               = 0;
        eaErrorOutOfMemory      = 100;
        eaErrorBadObject        = 101;

(* ------------------------------------------------------------------------------ *)
(* flags for standard methods                                                     *)
(* ------------------------------------------------------------------------------ *)

CONST   eaSMNone                = 00000000H;
        eaSMMinSize             = 00000001H;
        eaSMBorder              = 00000002H;

(* ------------------------------------------------------------------------------ *)
(* tags                                                                           *)
(* ------------------------------------------------------------------------------ *)

CONST   eaTagBase               = ud.tagUser;


(* ------------------------------------------------------------------------------ *
 * These tags can be used under different circumstances. The characters in the    *
 * comments behind the tags indicate the allowed use:                             *
 *                                                                                *
 * I = Initialize: eaNewObjectA()                                                 *
 * S = Set:        eaSetAttrsA()                                                  *
 * G = Get:        eaGetAttrsA()                                                  *
 *                                                                                *
 * Most functions ignore tags they don't recognize, but don't count on that,      *
 * or side effects may occur in future versions.                                  *
 * ------------------------------------------------------------------------------ *)

CONST   (* EaTags *)
        eaDummy         = eaTagBase;
        eaParent        = eaTagBase + 1;       (* I.G *)
        eaType          = eaTagBase + 2;       (* ..G *)
        eaDisabled      = eaTagBase + 3;       (* ISG *)
        eaID            = eaTagBase + 4;       (* ISG *)
        eaMinWidth      = eaTagBase + 5;       (* ISG *)
        eaMinHeight     = eaTagBase + 6;       (* ISG *)
        eaBorderLeft    = eaTagBase + 7;       (* ISG *)
        eaBorderRight   = eaTagBase + 8;       (* ISG *)
        eaBorderTop     = eaTagBase + 9;       (* ISG *)
        eaBorderBottom  = eaTagBase + 10;      (* ISG *)
        eaLeft          = eaTagBase + 11;      (* .SG *)
        eaTop           = eaTagBase + 12;      (* .SG *)
        eaWidth         = eaTagBase + 13;      (* ISG *)
        eaHeight        = eaTagBase + 14;      (* ISG *)
        eaWeight        = eaTagBase + 15;      (* ISG *)
        eaInstance      = eaTagBase + 17;      (* ..G *)
        eaInstanceAddress= eaTagBase+ 18;      (* ISG *)

        eaMinSizeMethod = eaTagBase + 19;      (* ISG *)
        eaBorderMethod  = eaTagBase + 20;      (* ISG *)
        eaRenderMethod  = eaTagBase + 21;      (* ISG *)
        eaGetStateMethod= eaTagBase + 22;      (* ISG *)
        eaSetStateMethod= eaTagBase + 23;      (* ISG *)

        eaObject        = eaTagBase + 24;      (* I.. *)

        eaGTType        = eaTagBase + 25;      (* ISG *)
        eaGTTagList     = eaTagBase + 26;      (* ISG *)
        eaGTText        = eaTagBase + 27;      (* ISG *)
        eaGTTextAttr    = eaTagBase + 28;      (* ISG *)
        eaGTFlags       = eaTagBase + 29;      (* ISG *)

        eaBOOPSIPrivClass= eaTagBase+ 30;      (* ISG *)
        eaBOOPSIPubClass= eaTagBase + 31;      (* ISG *)
        eaBOOPSITagList = eaTagBase + 32;      (* ISG *)

        eaChild         = eaTagBase + 33;      (* I.. *)

        eaFirstChild    = eaTagBase + 34;      (* ..G *)
        eaNextObject    = eaTagBase + 35;      (* ..G *)

        eaStandardMethod= eaTagBase + 36;      (* IS. *)
        eaUserData      = eaTagBase + 37;      (* ISG *)

(* ------------------------------------------------------------------------------ *
 * Pointer to an object, which is used as a `handle' by a lot of functions.       *
 * The actual data structure of the object is hidden from the application         *
 * programmer.                                                                    *
 * ------------------------------------------------------------------------------ *)

TYPE    OPTR                    = S.ADDRESS;

TYPE    StrPtr                  = S.ADDRESS; (* for readability *)

(* ------------------------------------------------------------------------------ *)
(* This structure is READ-ONLY!                                                   *)
(* ------------------------------------------------------------------------------ *)

TYPE    EaRelationObjectPtr     = POINTER TO EaRelationObject;
        EaRelationObject        = RECORD

                                  (* private *)
                                  node          : ed.Node;

                                  (* attributes *)
                                  objectPtr     : OPTR;

                                  END; (* EaRelationObject *)


(* ------------------------------------------------------------------------------ *
 * Message structure as used by the Render hook. A pointer to this structure is   *
 * passed in the message parameter of the callback hook. For more information on  *
 * hooks, take a look at amiga.lib/CallHook() or utility.library/CallHookPkt().   *
 * ------------------------------------------------------------------------------ *)

TYPE    EaRenderMessagePtr      = POINTER TO EaRenderMessage;
        EaRenderMessage         = RECORD
                                  rootPtr       : OPTR;
                                  rastportPtr   : gd.RastPortPtr;
                                  END; (* EaRenderMessage *)


END EAGuiD.def

