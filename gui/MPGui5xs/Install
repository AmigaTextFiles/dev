(complete 10)

;Check where to install library
(Set #LibChoice
	(askchoice
		(prompt "Where do you want to install the libraries?\n\n"
			"You can choose to install the library required by MPGui "
			"in the current directory, "
			"your LIBS: directory, or some other directory.")
		(help @askchoice-help)
		(choices "In Place" "LIBS:" "Elsewhere")
		(default 1)
	)
)

(complete 20)

(if (= #LibChoice 2)
	(Set #LibDir
		(askdir
			(prompt "Select directory in which to install the MPGui libraries")
			(help @askdir-help)
			(default "LIBS:")
		)
	)
)

(complete 30)

; Set up directory names
(Set #DestDir (expandpath ""))

(complete 40)

(if (= #libchoice 0)
	(Set #LibDir #DestDir)
)

(complete 50)

(if (= #libchoice 1)
	(Set #LibDir "LIBS:")
)

(complete 60)

(set @default-dest 
	#DestDir
)

(complete 70)

(Set #SrcGui "libs/MPGui.library")

(complete 80)

(Set #DestGui "MPGui.library")

(complete 90)

; Copy library
(
	(copylib
		(source #SrcGui)
		(dest #LibDir)
		(newname #DestGui)
	)
)

(complete 100)
