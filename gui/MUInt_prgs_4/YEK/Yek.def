STACK 64000


;     SCRIPT FILENAME: Yek.def            
;     DATE           : 12-31-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Splits files   
;                      Uses Yek, by Daniel Kussendrager


;================ CHECK TO SEE IF PREFS HAVE BEEN SET  ===============

IF EXISTS >NIL: ENV:YEKSOURCE

     SET SOURCE $YEKSOURCE
     SET DESTINATION $YEKDESTINATION

ELSE

      SETENV NEW "TRUE"     
      EXECUTE YEK.PREFS.SCP

ENDIF


;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:Yek.buttons "  PERFORM SPLIT  ;execute YEK.conv.scp"
echo >>ram:Yek.buttons "      JOIN       ;execute Yek.join.scp"
echo >>ram:Yek.buttons "  RENAME A FILE  ;execute Yek.rename.scp"
echo >>ram:Yek.buttons "      DOCS       ;TextWin *"YEK*"Yek.txt"
echo >>ram:Yek.buttons "      HELP       ;Advice TITLE *"Yek.def Instructions*" Yek.MUInt.txt POS CENTERSCR"
echo >>ram:Yek.buttons "    SET PREFS    ;execute YEK.prefs.scp"
echo >>ram:Yek.buttons "VIEW PREFS;execute YEK.viewprefs.scp"
echo >>ram:Yek.buttons "   QUIT   "

;=================   WRITE THE RADIO FILE TO RAM: ====================

echo  >ram:Yek.radio "OUTFILE SIZE;Standard    ;|730K;-l 730000|880K;-l 880000"
echo >>ram:Yek.radio "BUFFER SIZE;100K     ;|500K;-b 500000|One Meg;-b 1000000|Two Meg;-b 2000000"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:Yek.cl "BEGIN"
echo  >>ram:Yek.cl "TITLE *"Yek - A File Splitting Utility (12-31)*"" 
echo  >>ram:Yek.cl "LEFT  SOURCE;$SOURCE"
echo  >>ram:Yek.cl "RIGHT DESTINATION;$DESTINATION"
echo  >>ram:Yek.cl "RADIO ram:Yek.radio"
echo  >>ram:Yek.cl "BUTTONS ram:Yek.buttons"
echo  >>ram:Yek.cl "CHECKBOX ram:Yek.checkbox"
echo  >>ram:Yek.cl "NAME YEK"
echo  >>ram:Yek.cl "END"


MUInt ram:Yek.cl 


IF EXISTS >nil: $NEW
     DELETE ENV:NEW
ENDIF


DELETE ram:Yek.#? quiet

IF EXISTS ENV:JOIN
     DELETE ENV:JOIN QUIET
ENDIF


QUIT


