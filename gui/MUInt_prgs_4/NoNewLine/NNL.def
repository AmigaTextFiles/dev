STACK 8000


;     SCRIPT FILENAME: NNL.def            
;     DATE           : 12-30-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Removes New Line Characters from a text file
;                      and writes the new file with a .nnl suffix.   
;                      Use this to Import formatted Text into ProPage.  
;     REQUIRES       : NoNewLine (included)
;                      2.04 and up

;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:NNL.buttons "CONVERT;EXECUTE NNL.conv.scp "
echo >>ram:NNL.buttons "VIEW LEFT;RUN >NIL: SYS:UTILITIES/AmigaGuide $LEFT"
echo >>ram:NNL.buttons "VIEW RIGHT;RUN >NIL: SYS:UTILITIES/AmigaGuide $RIGHT"
echo >>ram:NNL.buttons "HELP;Advice *"Examples*" NNL.help.txt "
echo >>ram:NNL.buttons "QUIT"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:NNL.cl "BEGIN"
echo  >>ram:NNL.cl "TITLE *"NoNewLine - Removes New Line Characters from text*"" 
echo  >>ram:NNL.cl "BUTTONS ram:NNL.buttons"
echo  >>ram:NNL.cl "LEFT SOURCE;ram:"
echo  >>ram:NNL.cl "RIGHT DESTINATION;ram:"
echo  >>ram:NNL.cl "NAME NoNewLine"
echo  >>ram:NNL.cl "END"


MUInt ram:NNL.cl 

DELETE ram:NNL.#? quiet

QUIT


