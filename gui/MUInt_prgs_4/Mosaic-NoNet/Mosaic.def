STACK 8000

;     SCRIPT FILENAME: Mosaic.def            
;     DATE           : 01-30-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Select a HTML file and read it with Mosaic-NoNet   

;
;========= SEE IF MOSAIC IS INSTALLED, IF SO, SET THE ===============
;========= DIRECTORY WHERE THE HTML DOCS ARE LOCATED ================

ASSIGN >NIL: MOSAIC: EXISTS
IF NOT WARN
   SETENV LOCATION Mosaic:docs
ELSE
   RTEZREQUEST "ERROR:" "YOU DO NOT HAVE MOSAIC INSTALLED" BUTTONTEXT "_CONTINUE"
   ADVICE "INSTALLATION INSTRUCTIONS:" MO.HELP.TXT
QUIT
ENDIF

;================ LOAD THE LISTVIEW FROM THIS DIRECTORY   ============
;================       %F IS PATH, %N IS FILENAME        ============

LIST >RAM:MOSAICLVDIR $LOCATION/#?.HTML  LFORMAT "%N" ALL

;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:Mosaic.buttons "READ FILE;execute Mo.LV.scp []"
echo >>ram:Mosaic.buttons "HELP;Advice Mosaic Mo.help.txt"
echo >>ram:Mosaic.buttons "QUIT"

;==================  WRITE THE STRING FILE TO RAM: ===================
;===== Set the path to your directory of HTML files here =============

echo  >ram:Mosaic.string "STRING0;HTML docs are here:;100;64;$LOCATION"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:Mosaic.cl "BEGIN"
echo  >>ram:Mosaic.cl "TITLE *"Pick a Hot Metal file to read*"" 
echo  >>ram:Mosaic.cl "LV RAM:MosaicLVDIR SORT"
echo  >>ram:Mosaic.cl "BUTTONS  ram:Mosaic.buttons"
echo  >>ram:Mosaic.cl "STRING   ram:Mosaic.string"
echo  >>ram:Mosaic.cl "END"


MUInt ram:Mosaic.cl 

DELETE RAM:Mosaic.#? quiet
DELETE ENV:LOCATION quiet

QUIT


