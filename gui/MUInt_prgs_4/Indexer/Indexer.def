;================   WRITE THE BUTTON FILE TO RAM: ====================

;echo  >ram:IND.buttons "SAVE TO FILE;Execute IndexerLV.scp"
echo >ram:IND.buttons "PRINT;Execute IND.printLV.scp []"
echo >>ram:IND.buttons "HELP;Advice Indexer IND.help.txt"
;echo >>ram:IND.buttons "  ; "
echo >>ram:IND.buttons "QUIT"

 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:IND.cl "BEGIN"
echo  >>ram:IND.cl "TITLE *"Indexer: Look up CLI Tools from the AmiNet*"" 
echo  >>ram:IND.cl "LV IND.List.txt SORT MULTI"
echo  >>ram:IND.cl "BUTTONS ram:IND.buttons"
echo  >>ram:IND.cl "NAME Indexer"
echo  >>ram:IND.cl "END"


MUInt ram:IND.cl 

DELETE ram:IND.#? quiet

QUIT


