STACK 8000


;     SCRIPT FILENAME: ASCII.def            
;     DATE           : 12-30-95 
;     AUTHOR         : COLIN THOMPSON
;     DESCRIPTION    : Displays ASCII text art   

;
;================ LOAD THE LISTVIEW FROM THIS DIRECTORY   ============
;================ `CD` IS THE DIR THIS .DEF FILE LIVES IN ============
;================     %P IS REL/PATH, %N IS FILENAME      ============


SET LOCATION text
list >ram:LVdir $LOCATION  lformat "%P%N" 


;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:ASC.buttons "VIEW;execute ASC.view.scp []"
echo >>ram:ASC.buttons "HELP;ADVICE *" Just how much Help did you need?*" ASC.help.txt POS CENTERSCR"
echo >>ram:ASC.buttons "SAY HELP;SAY -x ASC.help.say"
echo >>ram:ASC.buttons "QUIT"


;=================   WRITE THE RADIO FILE TO RAM: ====================

echo  >ram:ASC.radio "VIEWER CHOICE;None      ;-rt|More;-more|PPMore;-pp|MuchMore;-much"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:ASC.cl "BEGIN"
echo  >>ram:ASC.cl "TITLE *"ASCII TEXT ART VIEWER   (12-30)*"" 
echo  >>ram:ASC.cl "LV RAM:LVDIR SORT MULTISELECT"
echo  >>ram:ASC.cl "BUTTONS ram:ASC.buttons"
echo  >>ram:ASC.cl "RADIO ram:ASC.radio"
echo  >>ram:ASC.cl "NAME ASCII"
echo  >>ram:ASC.cl "END"


MUInt ram:ASC.cl 

DELETE ram:ASC.#? quiet

QUIT


