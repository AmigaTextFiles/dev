stack 8000
;     SCRIPT FILENAME: IconViewer.def
;     DATE: 12-24-94 
;     DESCRIPTION: VIEW AMIGA ICONS WITH MULTIVIEW

SET location `CD`
list >ram:LocalDir $location/ICONS/#?.info  lformat "%F%N" ALL
SORT FROM ram:LocalDir TO ram:LocalDir



;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:IVbuttons "VIEW W/MULTIVIEW;RUN >NIL: SYS:UTILITIES/Multiview []"
echo  >ram:IVbuttons "VIEW ICON /VIEWTEK;RUN >NIL: vt []"
echo >>ram:IVbuttons "infoDataType Docs;TextWin *"Info.Datatype*" IconReadme.txt"
echo >>ram:IVbuttons "HELP;Advice *"System Requirements*" IconViewer.txt" POS CENTERSCR
echo >>ram:IVbuttons "QUIT"

;================  WRITE THE DEFINITION FILE TO RAM: ====================

echo   >ram:IV.cl "BEGIN"
echo  >>ram:IV.cl "TITLE *"IconViewer by Oliver Seiler - MUInt GUI  by BOTH Software*"" 
echo  >>ram:IV.cl "LV ram:LocalDir MULTI SORT"
echo  >>ram:IV.cl "BUTTONS ram:IVbuttons"
echo  >>ram:IV.cl "END"

MUINT ram:IV.cl

DELETE ram:IV#? quiet

QUIT


