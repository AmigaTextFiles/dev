;********************Here's some functions***********************************************

echo  >ram:GPAbuttons "SET;execute GPA.scp"
echo >>ram:GPAbuttons "VIEW BITS;execute GPA.view.scp"                                      
echo >>ram:GPAbuttons "HELP;Advice GPA GPA.help.txt"                                      
echo >>ram:GPAbuttons "Ciao!"                                      

echo >ram:GPAcycle "ON or OFF;+ PROTECT;ADD|- UNPROTECT;SUB"

echo  >ram:GPAcheckbox "READ   ;R"
echo >>ram:GPAcheckbox "WRITE  ;W"
echo >>ram:GPAcheckbox "EXECUTE;E"
echo >>ram:GPAcheckbox "DELETE ;D"
echo >>ram:GPAcheckbox "ARCHIVE;A"
echo >>ram:GPAcheckbox "PURE   ;P"
echo >>ram:GPAcheckbox "SCRIPT ;S"
                                
;********************Here's the variables************************************************

SETENV SOURCE SYS:

ECHO  >RAM:GPA.CL "BEGIN"
ECHO >>RAM:GPA.CL "TITLE    *"Guido's Protection Agency ... by Peter Bagnato *""
ECHO >>RAM:GPA.CL "CENTER   *"Who Will You (Un)Protect?*;$SOURCE"
ECHO >>RAM:GPA.CL "BUTTONS  ram:GPAbuttons"
ECHO >>RAM:GPA.CL "CHECKBOX ram:GPAcheckbox"
ECHO >>RAM:GPA.CL "CYCLE    ram:GPAcycle"
ECHO >>RAM:GPA.CL "NAME GPA"
ECHO >>RAM:GPA.CL "END"

;*************Call MUInt************

MUInt ram:GPA.cl

DELETE ram:GPA#? quiet

QUIT




