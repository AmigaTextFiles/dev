stack 8000



;     SCRIPT FILENAME: XtoILBM.def
;     DATE 12-17-94

;-------------------------------------------------------
;    CHECK TO SEE IF THE SYSTEM HAS BEEN INSTALLED
;-------------------------------------------------------

IF EXISTS ENV:XTLEFT

     SKIP START
ELSE

     SETENV NEW ""
     EXECUTE Xconfig.scp
     QUIT

ENDIF

LAB START

;-------------------------------------------------------
;    LOAD THE LISTVIEW FROM THIS DIRECTORY
;-------------------------------------------------------

list >ram:X2.LVdir $XTLV  lformat "%F%N" ALL

;-------------------------------------------------------
;    WRITE THE BUTTON FILE TO RAM:
;-------------------------------------------------------

echo  >ram:X2.buttons "  VIEW LEFT   ;$XTVIEWER $LEFT"
echo >>ram:X2.buttons " VIEW CENTER  ;$XTVIEWER $CENTER"
echo >>ram:X2.buttons "  VIEW RIGHT  ;$XTVIEWER $RIGHT"
echo >>ram:X2.buttons "   VIEW LV    ;$XTVIEWER []"

echo >>ram:X2.buttons " CONVERT LEFT ;execute Xconvleft.scp"
echo >>ram:X2.buttons "CONVERT CENTER;execute Xconvcenter.scp"
echo >>ram:X2.buttons "CONVERT RIGHT ;execute Xconvright.scp"
echo >>ram:X2.buttons "  CONVERT LV  ;execute XconvLV.scp []"

echo >>ram:X2.buttons "DELETE FROM RAM;execute Xdeletelast.scp"
echo >>ram:X2.buttons "MOVE TO DISK;execute Xmove2disk.scp"
echo >>ram:X2.buttons "VIEW LAST;execute Xviewlast.scp"
echo >>ram:X2.buttons "PREFS;execute Xconfig.scp"
echo >>ram:X2.buttons "HELP;execute Xhelp.scp"
echo >>ram:X2.buttons "QUIT"  

;-------------------------------------------------------
;    WRITE THE DEFINITION FILE TO RAM:
;-------------------------------------------------------

echo  > ram:X2.cl "BEGIN"
echo >> ram:X2.cl "TITLE *"XtoILBM - Requires WB3.0 - Convert pictures by Datatype to ILBM format*""
echo >> ram:X2.cl "LISTVIEW ram:X2.LVdir SORT"   
echo >> ram:X2.cl "LEFT LEFT;$XTLEFT" 
echo >> ram:X2.cl "CENTER CENTER;$XTCENTER" 
echo >> ram:X2.cl "RIGHT RIGHT;$XTRIGHT"  
echo >> ram:X2.cl "BUTTONS ram:X2.buttons" 
echo >> ram:X2.cl "NAME X2ILBM"
echo >> ram:X2.cl "END"

;-------------------------------------------------------
;     MAKE THE CALL TO MUINT
;-------------------------------------------------------


MUInt ram:X2.cl

;-----------------------------------------------------------------
;    THIS SECTION CLEANS UP RAM:
;-----------------------------------------------------------------

DELETE ram:X2.#? quiet

QUIT


