    gadget = GTX_CreateGadgetA( handle, kind, pred, newgad, tags );

    struct Gadget *GTX_CreateGadgetA
               ( HOTKEYHANDLE, UWORD, struct Gadget *,
                 A0            D0     A1
                                        struct NewGadget *, struct TagItem * );
                                        A2                  A3

    struct Gadget * GTX_CreateGadget
               ( HOTKEYHANDLE, UWORD, struct Gadget *,
