PROG = LayerHook
OBJS = ImageBackFill.o LayerHook.o
LIBS = LIB:sc.lib LIB:amiga.lib
#DEBUG = DEBUG=NONE
DEBUG = DEBUG=FULLFLUSH DEFINE KDEBUG=1 DEFINE DEBUG=1 DEFINE DEBUGLEVEL2=1

$(PROG): $(OBJS)
	SC LINK OBJECT=$(OBJS) TO=$(PROG) SMALLCODE SMALLDATA
	@Run >NIL: Echo >SPEAK: "Linking completed!"

.c.o:
	SC $* $(DEBUG)
	@Run >NIL: Echo >SPEAK: "Compiled $*!"

.ONERROR:
	@Run >NIL: Echo >SPEAK: "Oh, Oh, errors found. Process aborted!"
