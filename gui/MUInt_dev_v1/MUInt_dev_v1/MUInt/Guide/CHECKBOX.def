stack 8000
;     SCRIPT FILENAME: CHECKBOX.def
;     DATE: 12-30-94 

; 
;================   WRITE THE CHECKBOX FILE TO RAM: ==================
;=============== FORMAT: <FILENAME> "<LABELTEXT>;<FLAG>" =============

echo  >ram:DEMOcheckbox "BOLD      ;-b "
echo >>ram:DEMOcheckbox "ITALIC    ;-i "
echo >>ram:DEMOcheckbox "UNDERLINE ;-u "
echo >>ram:DEMOcheckbox "REVERSE   ;-r "
 

;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:DEMObuttons "HELP;advice *"This is a DEMO*" guide/demo.txt" POS CENTERSCR
echo >>ram:DEMObuttons "QUIT"

;================   WRITE THE DEFINITION FILE TO RAM: ====================

echo   >ram:DEMO.cl "BEGIN"
echo  >>ram:DEMO.cl "TITLE *"The Checkbox Gadget-  by BOTH Software (12-20)*"" 
echo  >>ram:DEMO.cl "CHECKBOX ram:DEMOcheckbox"
echo  >>ram:DEMO.cl "BUTTONS ram:DEMObuttons"
echo  >>ram:DEMO.cl "END"


RUN >NIL: MUInt ram:DEMO.cl 

DELETE ram:DEMO#? quiet

QUIT


