;demo.version

set reply "More|Quit"

LAB MAIN

rtEZRequest "Learn about your system" "Find out what Version you are running\nwith a single click" "ReqToolsLib|Workbench|AmigaguideLib|Cancel" centertext position pointer 

SET Result $RC

If $result EQ 0 
 QUIT
ENDIF

if $result eq 1
  version reqtools.library >ENV:rt
  rtEZrequest "Information" "$RT" $reply
  SET Result $RC
  SKIP DECIDE
ENDIF

IF $result eq 2
  rtEZrequest "Information" "Your WorkBench is version $Workbench" $Reply
SET Result $RC
  SKIP DECIDE 
ENDIF

IF $result eq 3
  version amigaguide.library >ENV:AG
  rtEZrequest "Information" "$AG" $Reply
  SET Result $RC
  SKIP DECIDE
ENDIF


LAB DECIDE


IF $Result eq 0
  Quit
ELSE
  SKIP BACK MAIN
ENDIF