.KEY TOPROTECT/a
.BRA {
.KET }





; SCRIPT FILENAME: WRIprotectlLV.scp 
; Sets the protect bit ON

IF EXISTS >nil: {TOPROTECT}

  rtEZrequest "WRITER Advice:" BODY "Set the (S)cript Protection bit on \n{TOPROTECT} ?" BUTTONTEXT "_Set +S|_Cancel" NORETURNKEY POS CENTERSCR

  SET result $RC
  IF $Result EQ 1
    PROTECT {TOPROTECT} +S
    QUIT
  ENDIF

  quit 

ENDIF

rtEZrequest "WRITER Advice:" BODY "ERROR: No File Selected" BUTTONTEXT "_Continue"  POS CENTERSCR

quit 