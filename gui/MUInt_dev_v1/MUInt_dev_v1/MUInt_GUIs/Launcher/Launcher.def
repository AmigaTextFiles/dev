STACK 8000


;     SCRIPT FILENAME: LAUNCHER.def            
;     DATE           : 02-14-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : MUInt program launcher   

;
;============ CD UP ONE DIRECTORY, THEN SCAN ALL THE      ============
;============ LOWER DIRECTORIES FOR .DEF FILES.           ============
;============ LOAD THE LISTVIEW WITH ALL THE .DEF FILES.  ============


IF NOT EXISTS >nil: master

     ADVICE HELP L.HELP.TXT

     CD /
     LIST >launcher/master `cd` PAT #?.def lformat "%F%N" ALL  
     CD launcher

ENDIF

;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:L.buttons "LAUNCH;EXECUTE L.LV.scp []"
echo >>ram:L.buttons "UPDATE LIST;EXECUTE L.UPDATE.SCP "
echo >>ram:L.buttons "HELP;ADVICE HELP L.HELP.TXT"
echo >>ram:L.buttons "QUIT"

;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:L.cl "BEGIN"
echo  >>ram:L.cl "TITLE *"Launch a MUInt Program*"" 
echo  >>ram:L.cl "LV MASTER SORT"
echo  >>ram:L.cl "BUTTONS  ram:L.buttons"
echo  >>ram:L.cl "END"


RUN >nil: MUInt ram:L.cl 

DELETE ram:L.#? quiet

QUIT


