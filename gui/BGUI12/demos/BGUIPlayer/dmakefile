OD     = dtmp:BGP/
EXE    = BGP
CFLAGS = -proto -ms -mi -3.0 -I$(OD) -Ht:BGUIPlayer.m=BGUIPlayer.h
PROTOS = $(OD)BGUIPlayer_protos.h

SRCS  = main.c playergui.c cdcode.c timer.c config.c disk.c
OBJS  = $(SRCS:"*.c":"$(OD)*.o")

all: $(PROTOS) $(EXE)

$(EXE) : $(OBJS)
    dcc $(CFLAGS) %(right) -o %(left) -lbgui

$(OBJS) : $(SRCS)
    dcc $(CFLAGS) %(right) -o %(left) -c

$(PROTOS) : $(SRCS)
    -delete t:BGUIPlayer.m
    makeproto -o %(left) %(right)

