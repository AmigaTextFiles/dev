WINDOW
SIZE 0 11 508 104
NAME "Install or remove include files for GadUtil"

BUTTON POSITION 6 12 144 14 FREQ DIR LABEL "Asm Include Dir" #

STRING
    POSITION 152 12 350 14
    LOCAL AsmDir
    ENTRY
    Data:Include.i
#

BUTTON POSITION 6 27 144 14 FREQ DIR LABEL "C Include Dir" #
STRING
    POSITION 152 27 350 14
    LOCAL CDir
    ENTRY
    Data:Include.h
#

MX
    LOCAL ToInstall
    POSITION 16 53 11 27
    LABEL
    PLACETEXT RIGHT
    SPACING 2
    ENTRY
    "Only Asm-Includes"
    "Only C-Includes"
    "Both Asm and C"
#

TEXT
    POSITION 40 43 0 0
    NOBOX
    LABEL "Install / Remove"
    PLACETEXT RIGHT
#

HIBOX 6 42 180 44

BUTTON
    POSITION 187 42 315 14
    LABEL "Install selected Include files"
    SYNCRUN "execute install.script install"
#

BUTTON
    POSITION 187 57 315 14
    LABEL "Remove selected Include files"
    SYNCRUN "execute install.script remove"
#

CYCLE
    LOCAL AsmType
    POSITION 187 72 157 14
    ENTRY
    "Misc Assemblers"
    "Aztec Asm"
#

CYCLE
    LOCAL CType
    POSITION 345 72 157 14
    ENTRY
    "SAS-C"
    "DICE-C"
    "Aztec-C"
    "Maxon-C"
    "StormC"
#

BUTTON
    POSITION 6 87 247 14
    LABEL "Edit function files"
    SYNCRUN "execute install.script editfunc EDITOR prog:wordpro/cygnused/ced"
#

BUTTON
    POSITION 255 87 247 14
    LABEL "Edit main include files"
    SYNCRUN "execute install.script editincl EDITOR prog:wordpro/cygnused/ced"
#
