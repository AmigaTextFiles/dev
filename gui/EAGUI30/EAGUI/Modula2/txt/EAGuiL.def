        R,
        S       : SYSTEM,
        ud      : UtilityD;

(* ****************************************************************************** *)

VAR     eaguiVersion    : INTEGER;
        eaguiBase       : ed.LibraryPtr;

CONST   eaguiMinVersion = 3;
        eaguiName       = "EAGUI.library";

