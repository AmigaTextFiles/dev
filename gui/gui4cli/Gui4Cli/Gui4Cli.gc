xROUTINE checkSlash var ; convert to valid slash string
	local v/vlen
	repvar $var "-" "/" cs  ; convert to "/"..
	repvar $var " " "/" cs	; & try to cleanup..
	repvar $var "//" "/" cs
	v = \$$var
	if $v = "/"				; leading /
		$var = $v[1]
	endif
	v = \$$var
	if $v[-1][1] = "/"	; trailing /
		info variable v
		vlen == $$var.length - 1
		$var = $v[0][$vlen]
	endif

