; ================================================================
;	Save all settings
;	- construct a gui called "Gui4Cli.prefs", autoloaded at start.
; ================================================================

XTEXTBOX 8 186 281 27 "" "Save Prefs & Settings"
	gadid 80
	attr tbstyle 2/1/shadow/left
	attr tbox    2/1/3/icondrop/in

XBUTTON 192 192 85 14 "Save"
	gadhelp 'Save all Prefs & Settings in file Guis:Gui4Cli.prefs'
	gadid 80

	delete guis:gui4cli.prefs		; if it existed..

	.temp = 'G4C\n\n; Generated by Gui4Cli.gc on $$sys.date\n\nxONLOAD\n'

	; save starting palette 
	if $palfile > ''
		append env:.temp '\n; Set palette\nPalette load $palfile tempfile\n'
		append env:.temp "Palette set tempfile '*'\n"
		append env:.temp 'freeimage tempfile\n'
	endif

	; set paths
	append env:.temp '\n; Paths\n'
	append env:.temp 'Set TAB $tab\nSet GRID $grid\n'
	append env:.temp 'Set EDITOR $$G4C.EDITOR\n'
	append env:.temp 'Set FILEPATTERN $$G4C.FILEPATTERN\n'
	append env:.temp 'Set GUIPATTERN $$G4C.GUIPATTERN\n'
	append env:.temp 'Set GUILOADDIR $$G4C.GUILOADDIR\n'
	append env:.temp 'Set DEFSCREEN $$G4C.DEFSCREEN\n'
	append env:.temp 'Set OUTPUT $$G4C.OUTPUT\n'

	; save sound effects
	append env:.temp '\n; Sound fx\n'
	gosub #this StoreSound SNDGAD
	gosub #this StoreSound SNDOPEN
	gosub #this StoreSound SNDCLOSE
	gosub #this StoreSound SNDRMB
	gosub #this StoreSound SNDKEY

	; save LVDir image
	append env:.temp '\n; LVDir images\n'
	gosub #this StoreImg IMDEV
	gosub #this StoreImg IMVOL
	gosub #this StoreImg IMASN
	gosub #this StoreImg IMDIR
	gosub #this StoreImg IMFILE

	; various stuff..
	append env:.temp '\n; Various..\n'
	if $volhide = ON ; hide volumes - off is default
		append env:.temp 'set NOVOL ON\n'
	endif
	if $lvfill = OFF ; def=ON
		append env:.temp 'set LVFILL OFF\n'
	endif
	if $sortmode > ''
	and $sortmode != NORMAL
		append env:.temp 'set LVSORT $sortmode\n'
	endif
	if $margins > ''
		gosub #this CheckSlash margins
		append env:.temp 'set MARGINS $margins\n'
	endif
	if $tbmargins > ''
		gosub #this CheckSlash tbmargins
		append env:.temp 'set TBMARGINS $tbmargins\n'
	endif

	append env:.temp '\nGuiQuit #this\n'
	copy env:.temp GUIs:Gui4Cli.prefs
	delete env:.temp


; ----------- storage routines

xRoutine StoreSound name	; ie "SNDGAD"
	local t
	t = '\$*$name' ; ie '$*SNDGAD'
 	if $t > ''
 		append env:.temp 'loadsound $t $name\n'
 		append env:.temp 'set $name $name\n'
 		append env:.temp '*$name = $t\n'
 	endif

xRoutine StoreImg name  	; ie "IMDIR"
	local t
	t = '\$*$name' ; ie '$*IMDIR'
 	if $t > ''
 		append env:.temp 'loadimage $t $name NOREMAP\n'
 		append env:.temp 'set $name $name\n'
 		append env:.temp '*$name = $t\n'
 	endif

