xROUTINE LoadImage
	FreeImage $imgtype					; free old, if any
	if $imgname > ''
		LoadImage $imgname $imgtype NOREMAP
		*$imgtype = $imgname				; store filename in var with type name
		Set $imgtype $imgtype			; use it
	endif
	update #this 65 $imgname

