xRoutine setpalette
	lvuse #this 903
	if $palnum < 0
		palnum == $$lv.tot - 1
	elseif $palnum >= $$lv.tot
		palnum = 0
	endif
	lvmulti none		; cause the lv to select palnum file
	lvgo #$palnum
	lvmulti on
	lvmulti first
   if $palfile H= "G4C"						; support old type palettes..
      guiload $palfile Gui4Cli.gc
	elseif $palfile H= "FORM????ILBM"
		palette load $palfile tempimage	; load it into a image (created)
		palette set tempimage '*'			; set the current screen
		freeimage tempimage					; free palette
	else
		ezreq 'File: $palfile\nis neither a IFF or a Gui4Cli file' Naughty! ''
	endif

