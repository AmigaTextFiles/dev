STACK 128000


;     SCRIPT FILENAME: PC.def            
;     DATE           : 03-09-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Sends Printer Codes to Epson FX-85 or FX-185
;     REQUIREMENTS   : ixemul.library v40.4 or up
;                      GNU utility echo renamed as ekho
;                      MUI
;                      MUInt_user_x

IF NOT EXISTS RAM:ekho
COPY ekho RAM:
ENDIF



;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:PC.buttons "PICA 10 CPI     ;ekho >par: -e -n \022\033\120"
;echo >>ram:PC.buttons "CONDENSED OFF   ;ekho >par: -e -n  \022"
echo >>ram:PC.buttons "ITALIC    ;ekho >par: -e -n \033\064"
echo >>ram:PC.buttons "ITALIC OFF;ekho >par: -e -n \033\065"
echo >>ram:PC.buttons "6 LPI     ;ekho >par: -e -n \033\062"
echo >>ram:PC.buttons "8 LPI     ;ekho >par: -e -n \033\060"

echo >>ram:PC.buttons "ELITE 12 CPI    ;ekho >par: -e -n \022\033\115"
echo >>ram:PC.buttons "BOLD      ;ekho >par: -e -n \033\105"
echo >>ram:PC.buttons "BOLD OFF  ;ekho >par: -e -n \033\106"
echo >>ram:PC.buttons "LINE FEED ;ekho >par: -e  \010"
echo >>ram:PC.buttons "FORM FEED ;ekho >par: -e  \012"

echo >>ram:PC.buttons "CONDENSED 17 CPI;ekho >par: -e -n \017"
echo >>ram:PC.buttons "DRAFT     ;ekho >par: -e -n \033\170\000"
echo >>ram:PC.buttons "NLQ       ;ekho >par: -e -n \033\170\001"
;echo >>ram:PC.buttons "SELECT    ;ekho >par: -e -n \021"
;echo >>ram:PC.buttons "DESELECT  ;ekho >par: -e -n \023"
;echo >>ram:PC.buttons "SET LEFT MARGIN ;ekho -e -n>par: \033\154\005"
;echo >>ram:PC.buttons "SET RIGHT MARGIN;ekho -e -n >par: *"\033\121*" ; $numstring1"
echo >>ram:PC.buttons "BELL;ekho >par: -e -n \007"
echo >>ram:PC.buttons "RESET ALL;ekho >par: -e -n \033\100"

echo >>ram:PC.buttons "HELP;advice title HELP PC.help.txt"
echo >>ram:PC.buttons "  TEST  ;echo >par: *"This is a test of the Emergency Broadcast System*""
echo >>ram:PC.buttons "PRINT;type >par: $LEFT"
echo >>ram:PC.buttons "MaxLineLen;execute PC.len.scp"
echo >>ram:PC.buttons "QUIT"

;echo >>ram:PC.buttons "REVERSE LINE FEED;ekho >par: -e  \033\152"
;echo >>ram:PC.buttons ";"
;echo >>ram:PC.buttons ";"

;==================  WRITE THE STRING FILE TO RAM: ===================
;FORMAT: <FILENAME> "<TYPE>;<LABELTEXT>;<WIDTH>;<NUM CHARS>;<PRELOAD>" 
;========================= ONE TYPE PER LINE =========================

;echo  >ram:PC.string "NUMSTRING0;LEFT MARGIN;20;20"
;echo >>ram:PC.string "NUMSTRING1;RIGHT MARGIN;20;20"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:PC.cl "BEGIN"
echo  >>ram:PC.cl "TITLE *"EPSON FX-85 & FX-185 Printer Controller, by BOTH Software*"" 
;echo  >>ram:PC.cl "BODY "
;echo  >>ram:PC.cl "LV "
;echo  >>ram:PC.cl "LV RAM:PC.LVDIR"
echo  >>ram:PC.cl "LEFT *"Pick a File to Print;ram:*""
;echo  >>ram:PC.cl "CENTER ;"
;echo  >>ram:PC.cl "RIGHT  ;"
echo  >>ram:PC.cl "BUTTONS  ram:PC.buttons"
echo  >>ram:PC.cl "STRING   ram:PC.string"
;echo  >>ram:PC.cl "RADIO    ram:PC.radio"
;echo  >>ram:PC.cl "CYCLE    ram:PC.cycle"
;echo  >>ram:PC.cl "CHECKBOX ram:PC.checkbox"
;echo  >>ram:PC.cl "WIDTH 66"
;echo  >>ram:PC.cl "DEBUG"
echo  >>ram:PC.cl "NAME PC-Epson"
echo  >>ram:PC.cl "END"


MUInt ram:PC.cl 

DELETE ram:PC.#? quiet
DELETE ram:ekho quiet
QUIT


