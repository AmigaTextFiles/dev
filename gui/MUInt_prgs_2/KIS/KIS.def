STACK 8000


;     SCRIPT FILENAME: KIS.def            
;     DATE           : 03-01-95
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Views Icons with KIS   

;
;================ LOAD THE LISTVIEW FROM THIS DIRECTORY   ============
;================ `CD` IS THE DIR THIS .DEF FILE LIVES IN ============
;================  %M IS BASE FILENAME                    ============


SET LOCATION `CD`/Icons
list >ram:KIS.LVdir $LOCATION/#?.info  lformat "%M" ALL


;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:KIS.buttons "VIEW ICON; EXECUTE KIS.displayLV.scp []"
echo >>ram:KIS.buttons "HELP;Advice TITLE MUInt_HELP KIS.help.txt POS CENTERSCR"
echo >>ram:KIS.buttons "DOCS;TextWin  TITLE *"KIS README*" KIS.docs.txt"
echo >>ram:KIS.buttons "QUIT"


;=================   WRITE THE RADIO FILE TO RAM: ====================
;======= FORMAT: <FILENAME> "<TITLETEXT>;<LABELTEXT>;<FLAG>" =========
;======= SEPARATE <LABELTEXT><FLAG> GROUPS WITH VERTICAL BAR =========

echo  >ram:KIS.radio "Screen Position;Centered;CENTRE|Use X-Y Coordinates;"
echo >>ram:KIS.radio "Images;Both Images;BOTH|Selected only;"
echo >>ram:KIS.radio "Border Style;Normal;|Borderless;BORDERLESS"
; 

;==================  WRITE THE STRING FILE TO RAM: ===================
;FORMAT: <FILENAME> "<TYPE>;<LABELTEXT>;<WIDTH>;<NUM CHARS>;<PRELOAD>" 
;========================= ONE TYPE PER LINE =========================

echo  >ram:KIS.string "NUMSTRINGX;X Position;15;20;50"
echo >>ram:KIS.string "NUMSTRINGY;Y Position;15;20;50"
echo >>ram:KIS.string "STRING0;Pubscreen Name;100;40;Workbench"

 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:KIS.cl "BEGIN"
echo  >>ram:KIS.cl "TITLE *"KarmaIconShow by Christopher Landmark Naas *"" 
echo  >>ram:KIS.cl "LV RAM:KIS.LVDIR MULTI"
echo  >>ram:KIS.cl "BUTTONS  ram:KIS.buttons"
echo  >>ram:KIS.cl "STRING   ram:KIS.string"
echo  >>ram:KIS.cl "RADIO    ram:KIS.radio"
echo  >>ram:KIS.cl "NAME KIS"
echo  >>ram:KIS.cl "END"


MUInt ram:KIS.cl 

DELETE ram:KIS.#? QUIET
QUIT


