STACK 128000


;     SCRIPT FILENAME: PC.def            
;     DATE           : 03-09-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Sends Printer Codes to Star SJ48 InkJet 
;     REQUIREMENTS   : ixemul.library v40.4 or up
;                      GNU Utility pr
;                      GNU utility echo renamed as ekho
;                      MUI
;                      MUInt_user_x

IF NOT EXISTS RAM:ekho
COPY ekho RAM:
ENDIF



;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:PC.buttons "  10 CPI  ;ekho >par: -e -n \022\033\120"
echo >>ram:PC.buttons "  12 CPI  ;ekho >par: -e -n \022\033\115"
echo >>ram:PC.buttons "  15 CPI  ;ekho >par: -e -n \033\147"
echo >>ram:PC.buttons "  17 CPI  ;ekho >par: -e -n \017"
echo >>ram:PC.buttons "  ITALIC  ;ekho >par: -e -n \033\064"
echo >>ram:PC.buttons "ITALIC OFF;ekho >par: -e -n \033\065"
echo >>ram:PC.buttons "  6 LPI   ;ekho >par: -e -n \033\062"
echo >>ram:PC.buttons "  8 LPI   ;ekho >par: -e -n \033\060"

echo >>ram:PC.buttons "EMPHASIZE ;ekho >par: -e -n \033\105"
echo >>ram:PC.buttons "EMPHAS OFF;ekho >par: -e -n \033\106"
echo >>ram:PC.buttons "DOUBLE ST ;ekho >par: -e -n \033\107"
echo >>ram:PC.buttons "DOUBLE OFF;ekho >par: -e -n \033\110"

echo >>ram:PC.buttons "LINE FEED ;ekho >par: -e  \010"
echo >>ram:PC.buttons "FORM FEED ;ekho >par: -e  \012"
echo >>ram:PC.buttons "  ROMAN   ;ekho >par: -e -n \033\153\060"
echo >>ram:PC.buttons "  GOTHIC  ;ekho >par: -e -n \033\153\014" 
echo >>ram:PC.buttons "  ON LINE ;ekho >par: -e -n \021"
echo >>ram:PC.buttons " OFF LINE ;ekho >par: -e -n \023"

echo >>ram:PC.buttons "          ;" ;ekho >par: -e  \033\154\000 *"$numstring0*""
echo >>ram:PC.buttons "          ;" ; ekho >par: -e -n \033\121 $numstring1"
echo >>ram:PC.buttons "RESET ALL ;ekho >par: -e -n \033\100"
echo >>ram:PC.buttons " LEFT JUST;ekho >par: -e -n \033\141\060\033\141\000"
echo >>ram:PC.buttons "CENTER JUS;ekho >par: -e -n \033\141\061\033\141\001"
echo >>ram:PC.buttons "RIGHT JUST;ekho >par: -e -n \033\141\062\033\141\002"

echo >>ram:PC.buttons "HIGH QUAL ;ekho >par: -e -n \033\170\061"
echo >>ram:PC.buttons " ECONOMY  ;ekho >par: -e -n \033\170\060"
echo >>ram:PC.buttons "PROPORTION;ekho >par: -e -n \033\170\003"
echo >>ram:PC.buttons "  FIXED   ;ekho >par: -e -n \033\160\000"
echo >>ram:PC.buttons "   HELP   ;advice HELP PC.help.txt"
echo >>ram:PC.buttons "   TEST   ;echo >par: *"This is a test of the Emergency Broadcast System*""
echo >>ram:PC.buttons "PRINT;type >prt: $left"
echo >>ram:PC.buttons "   QUIT   "

;echo >>ram:PC.buttons "REVERSE LINE FEED;ekho >par: -e  \033\152"
;echo >>ram:PC.buttons ";"
;echo >>ram:PC.buttons ";"
;echo >>ram:PC.buttons "   BELL   ;ekho >par: -e -n \007"

;==================  WRITE THE STRING FILE TO RAM: ===================
;FORMAT: <FILENAME> "<TYPE>;<LABELTEXT>;<WIDTH>;<NUM CHARS>;<PRELOAD>" 
;========================= ONE TYPE PER LINE =========================

;echo  >ram:PC.string "NUMSTRING0;LEFT MARGIN;20;20"
;echo >>ram:PC.string "NUMSTRING1;RIGHT MARGIN;20;20"
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:PC.cl "BEGIN"
echo  >>ram:PC.cl "TITLE *"StarJet 48 Printer Controller, by BOTH Software*"" 
;echo  >>ram:PC.cl "BODY "
;echo  >>ram:PC.cl "LV "
;echo  >>ram:PC.cl "LV RAM:PC.LVDIR"
echo  >>ram:PC.cl "LEFT *"Pick a File to Print;RAM:*""
;echo  >>ram:PC.cl "CENTER ;"
;echo  >>ram:PC.cl "RIGHT  ;"
echo  >>ram:PC.cl "BUTTONS  ram:PC.buttons"
;echo  >>ram:PC.cl "STRING   ram:PC.string"
;echo  >>ram:PC.cl "RADIO    ram:PC.radio"
;echo  >>ram:PC.cl "CYCLE    ram:PC.cycle"
;echo  >>ram:PC.cl "CHECKBOX ram:PC.checkbox"
;echo  >>ram:PC.cl "WIDTH 58"
echo  >>ram:PC.cl "NAME PC StarJet48"
echo  >>ram:PC.cl "END"


MUInt ram:PC.cl 

DELETE ram:PC.#? QUIET
DELETE ram:ekho  QUIET

QUIT


