stack 8000
;     SCRIPT FILENAME: Label.def
;     DATE: 01-26-95 



NEWDATE FORMAT "%m-%d-%y" TO ENV:DATE
SET DOLLAR "$"

;=================== ASK USER WHICH LIST TO SELECT ===================

RTFILEREQUEST "Select a label list" DRAWER Lists PATTERN "#?.list" PATGAD TO env:Label
SET Result $RC
IF $Result EQ 0
     QUIT
ENDIF

EQUALSNULL $LABEL
IF WARN
 RTEZREQUEST "ERROR:" "YOU MUST SELECT A FILE" 
 QUIT
ENDIF


;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:LABbuttons "Print Label;execute LAB.print.scp []"
echo >>ram:LABbuttons "Print COD Tag;execute LAB.cod.scp []"
echo >>ram:LABbuttons "Add to Label List;execute LAB.update.scp"
echo >>ram:LABbuttons "Edit the Label List;execute LAB.edit.scp"
echo >>ram:LABbuttons "HELP;advice *" Label Maker*" LAB.help.txt"
echo >>ram:LABbuttons "QUIT"

;================   WRITE THE RADIO FILE TO RAM: ====================

echo  >ram:LABradio "Label Size;Standard;-std|Large;-lge"
echo >>ram:LABradio "How Many Times;1           ;1|4;4|8;8|12;12|Variable;-v"

;================   WRITE THE STRING FILE TO RAM: ====================

echo  >ram:LABstring "STRING1;Name;80;30"
echo >>ram:LABstring "STRING2;Address;100;35"
echo >>ram:LABstring "NEWLINE"
echo >>ram:LABstring "STRING3;City;100;30"
echo >>ram:LABstring "STRING4;State;2;2"
echo >>ram:LABstring "NUMSTRING1;ZIP;10;5"
echo >>ram:LABstring "NEWLINE"
echo >>ram:LABstring "STRING7;Amount;20;8;$dollar"
echo >>ram:LABstring "STRING5;Instructions;30;20;Company Check OK"
echo >>ram:LABstring "NUMSTRING6;Date;10;8;$date"
 
;================   WRITE THE DEFINITION FILE TO RAM: ====================

echo   >ram:LAB.cl "BEGIN"
echo  >>ram:LAB.cl "TITLE *"Label and UPS COD tag printer - BOTH Software*"" 
echo  >>ram:LAB.cl "LV $label MULTISELECT SORT"
echo  >>ram:LAB.cl "BUTTONS ram:LABbuttons"
echo  >>ram:LAB.cl "RADIO ram:LABradio"
echo  >>ram:LAB.cl "STRING ram:LABstring"
echo  >>ram:LAB.cl "WIDTH 80"
echo  >>ram:LAB.cl "NAME LABEL"
echo  >>ram:LAB.cl "END"


MUInt ram:LAB.cl 

DELETE ENV:DATE  QUIET
DELETE ENV:LABEL QUIET
DELETE RAM:LAB#? QUIET

QUIT


