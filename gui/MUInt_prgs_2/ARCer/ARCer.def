stack 8000

;     SCRIPT FILENAME: ARCer.def
;     DATE: 02-10-94 


;================ LOAD THE LISTVIEW FROM THIS DIRECTORY ==============
;=================== DISPLAY ONLY COMPRESSED FILES ===================
;SET LOCATION `CD`
;list >ram:ARC.LVdir $LOCATION/#?.Z lformat "%F%N" ALL

SET source ram:

;================   WRITE THE BUTTON FILE TO RAM: ====================

echo  >ram:ARCbuttons "  UNARC   ;execute A.unarcL.scp"
echo >>ram:ARCbuttons " LhaARC   ;execute A.arcL.scp"
echo >>ram:ARCbuttons " LISTARC  ;execute A.listarcL.scp"
echo >>ram:ARCbuttons " TESTARC  ;execute A.testarcL.scp"

echo >>ram:ARCbuttons "UNCOMPRESS;execute A.uncompressL.scp"
echo >>ram:ARCbuttons " COMPRESS ;execute A.compressL.scp"
echo >>ram:ARCbuttons " UUDECODE ;execute A.uudecodeL.scp"
echo >>ram:ARCbuttons " UUENCODE ;execute A.uuencodeL.scp"

echo >>ram:ARCbuttons "  DELETE  ;execute A.deleteL.scp"
echo >>ram:ARCbuttons "   HELP   ;Advice *"TODO*" A.help.txt"
echo >>ram:ARCbuttons "   QUIT   ;"

;================   WRITE THE DEFINITION FILE TO RAM: ====================

echo   >ram:ARC.cl "BEGIN"
echo  >>ram:ARC.cl "TITLE *"ARCer The multipurpose Archiving Utility  by BOTH Software*"" 
;echo  >>ram:ARC.cl "BODY A.arcbody.txt" 
;echo  >>ram:ARC.cl "LV ram:ARC.lvdir SORT MULTI" 
echo  >>ram:ARC.cl "LEFT *"SOURCE DIRECTORY - SELECT FILE;$source *""   
echo  >>ram:ARC.cl "BUTTONS ram:ARCbuttons"
echo  >>ram:ARC.cl "WIDTH 40"
echo  >>ram:ARC.cl "NAME ARCer"
echo  >>ram:ARC.cl "END"


MUInt ram:ARC.cl 

DELETE ram:ARC#? quiet

QUIT


