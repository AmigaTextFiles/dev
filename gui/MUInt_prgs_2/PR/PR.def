STACK 128000

;     SCRIPT FILENAME: PR.def            
;     DATE           : 02-20-95 
;     AUTHOR         : Colin Thompson
;     DESCRIPTION    : Prints docs with PR   


;================   WRITE THE BUTTON FILE TO RAM: ====================
;========== FORMAT: <FILENAME> "<BUTTONTEXT>;<DOS_COMMAND>" ==========

echo  >ram:PR.buttons "PRINT;execute PR.print.scp"
echo >>ram:PR.buttons "HELP;Advice HELP PR.help.txt"
echo >>ram:PR.buttons "DOCS;TextWin PR PR.docs.txt"
echo >>ram:PR.buttons "QUIT"

;=================   WRITE THE CYCLE FILE TO RAM: ====================

echo  >ram:PR.cycle "Header;Standard;-std|Custom;*"-h $string0*"|None;-t"
; 
;================   WRITE THE CHECKBOX FILE TO RAM: ==================

;echo  >ram:PR.checkbox "No Header/Trailer;-t"
;echo >>ram:PR.checkbox "     Double Space;-d"

;==================  WRITE THE STRING FILE TO RAM: ===================

echo  >ram:PR.string "STRING0;Custom Header;100;80"
echo >>ram:PR.string "NEWLINE"
echo >>ram:PR.string "NUMSTRING0;Page Length;20;10;60"
echo >>ram:PR.string "NUMSTRING1;Page Width;20;10;80"
echo >>ram:PR.string "NUMSTRING2;Left Margin;20;10;0";
 
;================   WRITE THE DEFINITION FILE TO RAM: ================

echo   >ram:PR.cl "BEGIN"
echo  >>ram:PR.cl "TITLE *"PR the UNIX Printing Utility*"" 
echo  >>ram:PR.cl "LEFT SOURCE;ram:"
echo  >>ram:PR.cl "BUTTONS  ram:PR.buttons"
echo  >>ram:PR.cl "STRING   ram:PR.string"
;echo  >>ram:PR.cl "RADIO    ram:PR.radio"
echo  >>ram:PR.cl "CYCLE    ram:PR.cycle"
;echo  >>ram:PR.cl "CHECKBOX ram:PR.checkbox"
;echo  >>ram:PR.cl "WIDTH 66"
;echo  >>ram:PR.cl "DEBUG"
echo  >>ram:PR.cl "NAME PR"
echo  >>ram:PR.cl "END"


MUInt ram:PR.cl 

DELETE ram:PR.#? quiet

QUIT


