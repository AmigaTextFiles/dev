#
# DMakeFile for the GadToolsBox v1.00 program.
#

LINK =	gtbz

CFLAGS = -v -O dice:gtb-src

SRCC =	main.c resources.c func.c globals.c setpalette.c about.c \
      	screenselect.c eareq.c button.c checkbox.c strint.c listview.c \
      	getfont.c mx.c dripen.c cycle.c palette.c scroller.c slider.c \
      	binary.c prefs.c coords.c windowtext.c genc.c windowspecial.c \
     	screenspecial.c idcmp.c wflags.c new.c genasm.c menued.c itemed.c

EXE  =	GadToolsBox

all:	$(LINK)

$(LINK) : $(SRCC)
	dcc $(CFLAGS) -o $(LINK) -new $(SRCC) 
	copy $(LINK) test
	copy $(LINK) apps:bin/gtb
