CFLAGS = resopt nostackcheck stringmerge optimize optsize data=faronly
LFLAGS = smallcode smalldata nodebug noicons

OBJS = debug-handler.o
LIBS = lib:scnb.lib lib:amiga.lib lib:debug.lib

all: debug-handler

clean:
	delete \#?.o debug-handler(%|.map)

debug-handler : $(OBJS)
	slink $(OBJS) to $@ lib $(LIBS) $(LFLAGS) \
		map $@.map,fhx fwidth 32 pwidth 32 swidth 32
