#
#	Makefile for , for SAS/C 6.2
#

FILE     = FindHit

CFLAGS   = uchar strmer parms=r nostrt data=fo opt optinlocal
LINKFLAGS= SC SD VERBOSE NOICONS
LIBS     = lib:scnb.lib lib:debug.lib lib:small.lib # use amiga.lib if you don't have small

OBJS     = $(FILE).o 

.a.o:
	hx68 FROM $*.a TO $*.o DEBUG

.c.o:
	sc dbg=s $(CFLAGS) nostkchk gst=headers.gst $*.c

.h.gst:
	sc dbg=s $(CFLAGS) mgst=headers.gst headers.h 

$(FILE):  headers.gst $(OBJS) lmkfile
	SLINK <WITH <
		ND
		TO $(FILE) FROM $(OBJS) LIBRARY $(LIBS) $(LINKFLAGS)
		MAP $(FILE).map H
		<
	protect $(FILE) +p

debug:
	SLINK <WITH <
		ADDSYM
		TO $(FILE) FROM $(OBJS) LIBRARY $(LIBS) $(LINKFLAGS)
		MAP $(FILE).map H
		<
