		sub 'Macros' 'attc'
		sub 'Crashed Programs' 'crsh'
		sub 'Debug Tasks' 'dbug'
		sub 'Structure Defs' 'stru'
	item 'System Structures'
		sub 'ExecBase' 'exec'
		sub 'IntuitionBase' 'intb'
		sub 'GraphicsBase' 'graf'

