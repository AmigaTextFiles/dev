; $VER:NL_Merge V1 - © Spidersoft 1995

(set drv
   (askbool
      (prompt "Do you have one or more than one floppy disk drive?")
      (help "This is so the computer knows whether to copy to the RAM"
" Disk, then to the other disk, or copy straight from one disk to another")
      (choices "One" "More Than One")
   )
)
(if drv (
   (askbool
      (Prompt "Please insert your SHAREWARE NL_Winner disk into any drive")
      (help @askdisk-help)
      (choices "Proceed" "Proceed")
   )
   (makedir "Ram:NL_Data")
   (copyfiles
      (source "NL_Winner:S/NL_Data")
      (dest "ram:NL_Data")
      (all)
   )
   (askbool
      (prompt "PLEASE REMOVE DISK BEFORE CONTINUING")
      (help "Remove disk to prevent files copying back to the same disk!")
      (choices "Proceed" "Proceed")
   )
   (askdisk
      (Prompt "Please insert your REGISTERED NL_Winner disk into any drive")
      (help @askdisk-help)
      (dest "NL_Winner")
   )
   (copyfiles
      (source "ram:NL_Data")
      (dest "NL_Winner:s/NL_Data")
      (all)
   )
(delete "ram:NL_Data")
(complete 100)
(exit)
))

(askbool
   (prompt "Please insert your SHAREWARE NL_Winner disk into your"
           " internal drive (DF0:), and your REGISTERED NL_Winner"
           " disk into your external drive (DF1:).  Insert BOTH "
           "disks before continuing")
   (help "YOU MUST INSERT BOTH DISKS INTO THE CORRECT DRIVES."
           "  If you don't, the procedure will either fail or the "
           "wrong files will be copied.  " @askdisk-help)
   (choices "Proceed" "Proceed")
)
(askdisk
   (prompt "Please insert your SHAREWARE NL_Winner disk into your"
           " internal drive (DF0:), and your REGISTERED NL_Winner"
           " disk into your external drive (DF1:)")
   (help @askdisk-help)
   (dest "NL_Winner")
)
(copyfiles
   (source "df0:s/NL_Data")
   (dest "df1:s/NL_Data")
   (all)
)

(complete 100)
(exit)
