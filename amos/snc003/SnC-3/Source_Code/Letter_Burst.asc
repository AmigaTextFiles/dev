'--------------------------------------------------------------------------
'              LETTERBURST ROUTINE BY JOHN HARDIE (JOK/NFA)  
'--------------------------------------------------------------------------
'

Load "Letter_Burst.abk"

Screen Open 0,320,256,4,0
Flash Off : Curs Off : Hide : Cls 0
Double Buffer 
Palette $0,$FFF,$22F,$9
'
Dim A$(13),TXT$(10)
Shared A$(),ID,TXT$()
'
AD=1 : X=20 : ID=1
'
_TEXT
_MOVE
'
Do 
   Amal Off : Bob Off 
   '
   TXT$(ID)=Upper$(TXT$(ID))
   D$=Mid$(TXT$(ID),AD,1)
   A=Asc(D$)-64
   '
   If A=-32 : A=27 : End If 
   '
   Paste Bob X,100,A
   Inc AD : Add X,25
   '
   If ID>=10 : X=20 : ID=1 : AD=1 : End If 
   '
   If AD>Len(TXT$(ID)) : AD=1 : X=0 : Inc ID
      _GET_BITS
      X=20
      Wait 50
   End If 
   '
   Wait Vbl 
Loop 
'
'
Procedure _TEXT
   For A=1 To 10 : Read TXT$(A) : Next A
   Data "  frentic  "
   Data "  presents "
   Data "letterburst"
   Data "           "
   Data " a routine "
   Data "created by "
   Data "john hardie"
   Data "  hello to "
   Data "   e s p   "
   Data "           "
End Proc
Procedure _MOVE
   A$(1)="L:M-240,0,50;JL"
   A$(2)="L:M220,40,25;JL"
   A$(3)="L:M-200,80,50;JL"
   A$(4)="L:M-180,-120,25;JL"
   A$(5)="L:M300,160,50;JL"
   A$(6)="L:M-140,200,25;JL"
   A$(7)="L:M-220,-120,50;JL"
   A$(8)="L:M140,-300,75;JL"
   A$(9)="L:M160,80,50;JL"
   A$(10)="L:M-180,260,25;JL"
   A$(11)="L:M200,40,50;JL"
   A$(12)="L:M0,-120,25;JL"
   A$(13)="L:M240,0,75;JL"
End Proc
Procedure _GET_BITS
   Wait 50
   X=20 : Y=100
   '
   For A=50 To 61 : Get Bob A,X,Y To X+25,Y+24
      Add X,25
   Next A
   X=20
   '
   For A=1 To 11
      Channel A To Bob A
      Add X,25
      Bob A,X,100,A+50
      Amal A,A$(A)
   Next A
   Amal On 
   Cls 0
End Proc





