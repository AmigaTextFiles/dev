.KEY USER/K,HOST/K,NOSWAP/S
.BRA «
.KET »
.DEF USER geek
.DEF HOST miggy
.DEF NOSWAP
; Geek Gadgets Lite environment initialisation script
;
; You can execute this script form  'startup-sequence'
; too. Try  it like this  after all major assign have
; been established:
;
;   cd GG-Lite-?.?-bin-m68k/GG/
;   gg_init
;   cd SYS:
;
; Additionally you can use the  NOSWAP switch if this
; environment is on a CD-ROM.
;

resident >NIL: pure C:assign
assign >NIL: exists GG:
if warn
  if exists home/«USER»
    assign            GG: ""
    assign        AmiTCP: GG:
    assign   add  AmiTCP: GG:/
    assign           ADE: GG:
    assign           GNU: GG:
    assign   add      GG: GG:emul-include
    assign          HOME: GG:home/«USER»
    assign           ETC: GG:etc
    assign           TMP: GG:tmp
    assign         SHARE: GG:share
    assign           LIB: GG:lib
    assign           USR: GG:usr
    assign           BIN: GG:bin
    assign   add       C: GG:bin
    assign   add     BIN: C:
    assign   add    DEVS: GG:/devs
    assign   add    LIBS: GG:/libs
    assign   add       L: GG:/l
    assign   add     SYS: GG:/
    if not «NOSWAP»
      assign          T2: T:
      assign           T: GG:tmp
      assign add       T: T2:
      assign          T2:
    endif
    setenv PS1      "«USER»@«HOST»:$PWD$ "
    setenv HOME     "/gg/home/«USER»"
    setenv IXSTACK  131072
    setenv HOSTNAME «HOST»
    setenv TERM     amiga-f
    setenv TERMCAP  amiga
    resident pure BIN:sh
    mount IXPIPE: from DEVS:mountlist.ixpipe
    if exists bin:startnet
      execute bin:startnet
    endif
  else
    echo "E: Not in GG-Lite-?.?-bin-m68k/ directory!"
    quit 10
  endif
endif
