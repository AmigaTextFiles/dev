#   Syntax

#   TYPE "Src Ada"
#       SUBTYPE "Text"
#       INSERTAFTER "Script"
#       ICONNAME "def_Src Ada"  # path internaly expanded to "ENV:Sys/def_Src Ada.info"
#       NAMEPATTERN *.ada
#   # or OPTNAMEPATTERN *.ada
#   # The 4 upper lines are optional but order MUST be kept.
#   # Lower lines are for information about syntax, and if used order MUST be kept.
#       # COMPAREBYTE OFFSET BYTES
#       COMPAREBYTE 12 $ABADCAFE    # hex bytes, offset decimal
#       COMPAREBYTE $23 "Coucou"    # string bytes, offset in hex
#       SEARCHBYTE  "Salut"
#       SEARCHBYTE  $DEADBEEF
#       SEARCHPATTERN [CASE] "ST-??"
#       MATCHPATTERN [CASE] 45 "ST-??"
#   ENDTYPE


TYPE "Source C"
    SUBTYPE     Text
    ICONNAME    def_C
    NAMEPATTERN "#?.c"
ENDTYPE

TYPE "Include C"
    SUBTYPE     Text
    INSERTAFTER "Source C"
    ICONNAME    def_H
    NAMEPATTERN "#?.h"
ENDTYPE

TYPE Asm
    SUBTYPE     Text
    ICONNAME    def_Asm
    NAMEPATTERN "#?.(asm|s|a)"
ENDTYPE

TYPE "Incld Asm"
    SUBTYPE     Text
    ICONNAME    def_I
    NAMEPATTERN "#?.i"
ENDTYPE

TYPE Doc
    SUBTYPE Text
    ICONNAME def_doc
    NAMEPATTERN "#?.Doc#?"
ENDTYPE

TYPE "PP Doc"
    SUBTYPE "PP Data"
    ICONNAME def_doc
    NAMEPATTERN "#?.(Doc#?.pp|Doc)"
ENDTYPE

TYPE ReadMe
    SUBTYPE Text
    INSERTAFTER Doc
    ICONNAME def_doc
    NAMEPATTERN "Read#?Me#?"
ENDTYPE

TYPE Guide
    SUBTYPE Text
    INSERTAFTER ReadMe
    ICONNAME def_Guide
    NAMEPATTERN "#?.guide"
ENDTYPE

TYPE "Tex"
    SUBTYPE "Text"
    ICONNAME    "def_Tex"
    NAMEPATTERN "#?.Tex"
ENDTYPE

TYPE Rexx
    SUBTYPE Text
    ICONNAME def_Rexx
    NAMEPATTERN "#?.(rexx|ced)"
ENDTYPE

TYPE Basic
    NAMEPATTERN "#?.bas"
ENDTYPE

TYPE GFA
    NAMEPATTERN "#?.GFA"
ENDTYPE

TYPE "Tex Font"
    COMPAREBYTE 0 $F7593647
ENDTYPE

TYPE "Tex DVI"
    OPTNAMEPATTERN "#?.dvi"
    COMPAREBYTE 0 $F7020183
ENDTYPE

TYPE "Warp"
    OPTNAMEPATTERN "#?.wrp"
    COMPAREBYTE 0 "Warp"
ENDTYPE

TYPE "Zoom"
    OPTNAMEPATTERN "#?.zoom"
    COMPAREBYTE 0 "ZOOM"
ENDTYPE

TYPE "ZIP"
    OPTNAMEPATTERN "#?.zip"
    COMPAREBYTE 0 $504B0304
ENDTYPE

TYPE "GST"
    OPTNAMEPATTERN "#?.gst"
    COMPAREBYTE 6 "GST"
ENDTYPE

TYPE "PPM V1.8"
    COMPAREBYTE 0 $07231988
ENDTYPE

TYPE "PPM V2.1"
    COMPAREBYTE 0 $07231988
ENDTYPE

TYPE "STSong"
    COMPAREBYTE 0 "PACK"
ENDTYPE

TYPE "ST Mod"
    NAMEPATTERN "#?.(mod|mod.pp)"
ENDTYPE

TYPE "JPEG"
    OPTNAMEPATTERN "#?.(jpeg|jpg)"
    COMPAREBYTE 0 $FFD8FFE0
ENDTYPE

TYPE "PCX"
    COMPAREBYTE 0 $0a050108
ENDTYPE

TYPE "GIF"
    COMPAREBYTE 0 "GIF8"
ENDTYPE

TYPE "MaxiPlan"
    COMPAREBYTE 0 $474c424c
ENDTYPE

TYPE "Mnx5.0Obj"
    INSERTAFTER "Object"
    ICONNAME "def_Mnx5.0Obj"
    COMPAREBYTE 0 $434a
ENDTYPE

TYPE "Imagine"
    SUBTYPE "IFF"
    INSERTAFTER "FTXT"
    ICONNAME "def_Imagine"
    COMPAREBYTE 8 "TDDD"
ENDTYPE

