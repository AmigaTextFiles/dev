@NODE "WBenchToBack" "intuition.library/WBenchToBack()"
@{b}

    NAME@{ub}
        @{"WBenchToBack" LINK "gg:doc/NDK/Guide/Include/inline/intuition.h/File" 235} -- Send the Workbench screen in back of all screens.@{b}

    SYNOPSIS@{ub}
        Success = @{"WBenchToBack" LINK "gg:doc/NDK/Guide/Include/inline/intuition.h/File" 235}()
        D0

        @{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91} @{"WBenchToBack" LINK "gg:doc/NDK/Guide/Include/inline/intuition.h/File" 235}( @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} );@{b}

    FUNCTION@{ub}
        Causes the Workbench screen, if it's currently opened, to go behind
        all other screens.  This does not 'move' the screen up or down,
        instead only affects the depth-arrangement of the screens.@{b}

    INPUTS@{ub}
        None@{b}

    RESULT@{ub}
        If the Workbench screen was opened, this function returns @{"TRUE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 95},
        otherwise it returns @{"FALSE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 98}.@{b}

    BUGS@{ub}@{b}

    SEE ALSO@{ub}
        @{"WBenchToFront()" LINK "WBenchToFront"}, @{"ScreenToFront()" LINK "ScreenToFront"}

