        @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} @{"EraseImage" LINK "gg:doc/NDK/Guide/Include/inline/intuition.h/File" 443}( @{"struct RastPort" LINK "gg:doc/NDK/Guide/Include/graphics/rastport.h/File" 52} *, @{"struct Image" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 705} *, @{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54}, @{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54} );@{b}

