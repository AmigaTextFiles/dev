   IO REQUEST RESULT@{ub}
       io_Error - 0 for success, or an error code as defined in
                  <@{"devices/cd.h" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File"}>
       io_Actual - 0 means the disk is @{"NOT" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 1500} write-protected, while any other
                   value indicates it is.

@ENDNODE
@NODE "CD_QCODELSN" "cd.device/CD_QCODELSN"
@{b}

   NAME@{ub}
       @{"CD_QCODELSN" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 62} -- Report current disk position.@{b}

   IO REQUEST@{ub}
       io_Device       preset by the call to @{"OpenDevice()" LINK "OpenDevice"}
       io_Unit         preset by the call to @{"OpenDevice()" LINK "OpenDevice"}
       io_Command      @{"CD_QCODELSN" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 62}
       io_Data         pointer to QCode structure
       io_Length       0 - MUST be zero (for future compatability)@{b}

   RESULTS@{ub}
       io_Error        0 for success, or an error code as defined in
                       <@{"devices/cd.h" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File"}>@{b}

   FUNCTION@{ub}
       This command reports current subcode Q channel time information.  This
       command only returns data when CD Audio is playing (or paused).  At
       any other time, an error is returned.  The Q-Code packet consists of:

       @{"struct QCode" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 285} {

           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        CtlAdr;        /* Data type / QCode type           */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Track;         /* Track number                     */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Index;         /* Track subindex number            */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Zero;          /* The "Zero" byte of Q-Code packet */
           @{"union LSNMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 202} TrackPosition; /* Position from start of track     */
           @{"union LSNMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 202} DiskPosition;  /* Position from start of disk      */
           };@{b}

   EXAMPLE@{ub}

       @{"struct QCode" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 285} qcode;

       ior->io_Command = @{"CD_QCODELSN" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 62};  /* Retrieve TOC information */
       ior->io_Length  = 0;            /* MUST be zero             */
       ior->io_Data    = (@{"APTR" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 49})qcode;  /* Here's where we want it  */
       @{"DoIO" LINK "gg:doc/NDK/Guide/exec/DoIO"} (ior);

       if (!ior->io_Error) {           /* Command succeeded        */

           @{"printf" LINK "gg:doc/NDK/Guide/amiga_lib/printf"}("Current position is: %ld\\n", qcode.DiskPosition.LSN);
           }@{b}

   NOTES@{ub}
       This function may not return immediately.  It may take several frames
       to pass by before a valid Q-Code packet can be returned.  Use @{"SendIO()" LINK "gg:doc/NDK/Guide/exec/SendIO"}
       and @{"CheckIO()" LINK "gg:doc/NDK/Guide/exec/CheckIO"} if response time is critical, and the information is
       not.@{b}

   BUGS@{ub}@{b}

   SEE ALSO@{ub}
       @{"CD_PLAYMSF" LINK "CD_PLAYMSF"}, @{"CD_PLAYLSN" LINK "CD_PLAYLSN"}, @{"CD_PLAYTRACK" LINK "CD_PLAYTRACK"}, <@{"devices/cd.h" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File"}>

@ENDNODE
@NODE "CD_QCODEMSF" "cd.device/CD_QCODEMSF"
@{b}

   NAME@{ub}
       @{"CD_QCODEMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 61} -- Report current disk position.@{b}

   IO REQUEST@{ub}
       io_Device       preset by the call to @{"OpenDevice()" LINK "OpenDevice"}
       io_Unit         preset by the call to @{"OpenDevice()" LINK "OpenDevice"}
       io_Command      @{"CD_QCODEMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 61}
       io_Data         pointer to QCode structure
       io_Length       0 - MUST be zero (for future compatability)@{b}

   RESULTS@{ub}
       io_Error        0 for success, or an error code as defined in
                       <@{"devices/cd.h" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File"}>@{b}

   FUNCTION@{ub}
       This command reports current subcode Q channel time information.  This
       command only returns data when CD Audio is playing (or paused).  At
       any other time, an error is returned.  The Q-Code packet consists of:

       @{"struct QCode" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 285} {

           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        CtlAdr;        /* Data type / QCode type           */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Track;         /* Track number                     */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Index;         /* Track subindex number            */
           @{"UBYTE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 62}        Zero;          /* The "Zero" byte of Q-Code packet */
           @{"union LSNMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 202} TrackPosition; /* Position from start of track     */
           @{"union LSNMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 202} DiskPosition;  /* Position from start of disk      */
           };@{b}

   EXAMPLE@{ub}

       @{"struct QCode" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 285} qcode;

       ior->io_Command = @{"CD_QCODEMSF" LINK "gg:doc/NDK/Guide/Include/devices/cd.h/File" 61};  /* Retrieve TOC information */
