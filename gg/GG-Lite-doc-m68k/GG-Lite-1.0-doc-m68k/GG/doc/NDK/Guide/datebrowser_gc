@NODE "datasheet" "datebrowser.gadget/datasheet (information)"


     NAME
        @{"datebrowser.gadget" LINK "gg:doc/NDK/Guide/datebrowser_gc/MAIN"}--Monthly calendar gadget

     SUPERCLASS
        gadgetclass

     DESCRIPTION
        The datebrowser gadget class is used to display a month-based array
        of days in the visual style of traditional calendarss.

     METHODS
        @{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63}--Create the gadget.  Passed to superclass, then @{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65}.

        @{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65}--Set object attributes.  Passed to superclass first.

        @{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70}--Set object notification attributes.  Passed to superclass
            first.

        @{"GM_LAYOUT" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 318}--Calculate relative gadget coordinates.  Passed to
            superclass first.  Requires V39 or beyond of Intuition.

        @{"GM_RENDER" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 302}--Renders the gadget imagry.  Overrides the superclass.

        @{"GM_HITTEST" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 298}--Determines if mouse is within the gadget rectangle.
            Overrides the superclass.

        @{"GM_GOACTIVE" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 305}--Handles activation, mutual-exclusion and date-select.
            Overrides the superclass.

        @{"GM_HANDLEINPUT" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 308}--Handles input events once active. Overrides the
            superclass.

        @{"GM_GOINACTIVE" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 311}--Deselects the button.  Overrides the superclass.

        @{"GM_DOMAIN" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 323}--Obtain the minimum, nominal and maximum size of a datebrowser
            object.

        GM_KEYACTIVE--private method for handling keyboard control activation.

        GM_KEYINACTIVE--private method for handling keyboard control
            termination.

        @{"GM_CLIPRECT" LINK "gg:doc/NDK/Guide/Include/reaction/reaction_class.h/File" 33}--method needed to use this gadget in virtual groups. New
            for v45.

        All other methods are passed to the superclass, including @{"OM_DISPOSE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 64}.

     ATTRIBUTES
        @{"GA_Disabled" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 78} (@{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91}) -- Determines whether the datebrowser is disabled or
            not.  Changing disable state will invoke @{"GM_RENDER" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 302}.  A disabled
            datebrowser's border and label are all rendered in @{"SHADOWPEN" LINK "gg:doc/NDK/Guide/Include/intuition/screens.h/File" 98} and then
            dusted in a ghosting pattern that is rendered in @{"SHADOWPEN" LINK "gg:doc/NDK/Guide/Include/intuition/screens.h/File" 98}.
            Defaults to @{"FALSE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 98}.

        @{"GA_TextAttr" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 185} (@{"struct TextAttr" LINK "gg:doc/NDK/Guide/Include/graphics/text.h/File" 65} *) -- Text attribute for the font to
            use for the labels.

        @{"GA_ReadOnly" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 189} (@{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91}) -- Indicate whether datebrowser has selectable days
            or is for display only.  Defaults to @{"FALSE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 98} (selectable days).

        @{"DATEBROWSER_Day" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 38} (@{"UWORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 55}) -- Set the current day of the month. Defaults
            to 1. Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65},@{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70},@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_Month" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 44} (@{"UWORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 55}) -- Set the current month of the year.
            Defaults to 1. Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65},@{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70},@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_Year" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 49} (@{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51}) -- Calendar year to display. Defaults to 1978.
            Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65},@{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70},@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_SelectedDays" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 55} (@{"ULONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 52}) -- A 32 bit value, each bit represents
            a day of the month, if set, the corresponding calendar day is
            selected. This is useful for multi-select mode to find out what
            days are selected via one packed value.
            Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65},@{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70},@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_FirstWDay" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 70} (@{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51}) -- Gets the first day of the week. 0 is
            Sunday. Applicability is (@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_NumDays" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 77} (@{"UWORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 55}) -- Returns the number of days in the
            currently set month. A better solution may be using datebrowser's
            public julian date functions.
            Applicability is (@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_WeekDay" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 63} (@{"UWORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 55}) -- Returns the day of the week for the
            currently selected '@{"DATEBROWSER_Day" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 38}'. A better solution may be
            using datebrowser's public julian date functions.
            Applicability is (@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

        @{"DATEBROWSER_ShowTitle" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 84} (@{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91}) -- Enables display of the week-day title
            bar. NOTE: If turned on after layout group creation, you must be
            sure to @{"FlushLayoutDomainCache()" LINK "gg:doc/NDK/Guide/layout_gc/FlushLayoutDomainCache"} and @{"RethinkDisplay()" LINK "gg:doc/NDK/Guide/intuition/RethinkDisplay"}, and
            potentionally increase the window size to accomodate the possibly
            larger layout. Simply toggling iconify on/off, or close & open of
            the window class will archieve similiar results.
            Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65}).

        DATEBROWSR_MultiSelect (@{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91}) -- Enables multi-selection of calendar
            days. Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65}).

        @{"DATEBROWSER_DayTitles" LINK "gg:doc/NDK/Guide/Include/gadgets/datebrowser.h/File" 100} (@{"STRPTR" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 67} *) -- Pointer to an array of @{"STRPTR" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 67}
            containing day titles. Defaults to non-localized internal "Mon",
            "Tue", etc., if @{"locale.library" LINK "gg:doc/NDK/Guide/locale/MAIN"} cannot be opened.
            Applicability is (@{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63},@{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65},@{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70},@{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66}).

     NOTES
        Relative support requires V39 and beyond of Intuition.

