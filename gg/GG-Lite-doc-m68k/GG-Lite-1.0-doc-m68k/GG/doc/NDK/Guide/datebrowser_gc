@NODE "DATEBROWSER_GetClass" "datebrowser.gadget/DATEBROWSER_GetClass()"
@{b}

    NAME@{ub}
        @{"DATEBROWSER_GetClass" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 23} -- Gets the pointer to the datebrowser class.@{b}

    SYNOPSIS@{ub}
        datebrowser_class = @{"DATEBROWSER_GetClass" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 23}();
        D0

        Class * @{"DATEBROWSER_GetClass" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 23}(@{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24});@{b}

    FUNCTION@{ub}
        Obtains the pointer to the datebrowser gadget class for use with
        @{"NewObject()" LINK "gg:doc/NDK/Guide/intuition/NewObject"}.  This function always returns a valid pointer so
        you do not need to check it.  The reason is that if the library
        opens fine, then the pointer returned is already setup.  (Of course
        this implies that if opening the library fails, you shouldn't be
        calling this.)

        Note that this function does not create the class, that is done
        when the class library is opened.@{b}

    INPUTS@{ub}
        Nothing.@{b}

    RESULT@{ub}
        datebrowser_class - Pointer to the datebrowser gadget class.@{b}

    SEE ALSO@{ub}

@ENDNODE
@NODE "JulianMonthDays" "datebrowser.gadget/JulianMonthDays()"
@{b}

    NAME@{ub}
        @{"JulianMonthDays" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 31} -- Returns the length of a month.@{b}

    SYNOPSIS@{ub}
        days = @{"JulianMonthDays" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 31}(month, year);
        D0                     D0     D1

        @{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54} @{"JulianMonthDays" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 31}(@{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54}, @{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51});@{b}

    FUNCTION@{ub}
        Based on the input parameters "month" and "year", this
        function returns the length of the given month.@{b}

    INPUTS@{ub}
        month -- the month.
        year -- the year.@{b}

    RESULT@{ub}
        days -- the length of the given month.@{b}

    SEE ALSO@{ub}

@ENDNODE
@NODE "JulianLeapYear" "datebrowser.gadget/JulianLeapYear()"
@{b}

    NAME@{ub}
        @{"JulianLeapYear" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 35} -- Checks for a leap-year.@{b}

    SYNOPSIS@{ub}
        isleapyear = @{"JulianLeapYear" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 35}(year);
        D0                          D0

        @{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91} @{"JulianLeapYear" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 35}(@{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51});@{b}

    FUNCTION@{ub}
        This function will return @{"TRUE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 95} if the given year is a leap year.@{b}

    INPUTS@{ub}
        year -- the year.@{b}

    RESULT@{ub}
        days -- @{"TRUE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 95} when the given year is a leap-year, otherwise @{"FALSE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 98}.@{b}

    SEE ALSO@{ub}

@ENDNODE
@NODE "JulianWeekDay" "datebrowser.gadget/JulianWeekDay()"
@{b}

    NAME@{ub}
        @{"JulianWeekDay" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 27} -- Checks for leap-year.@{b}

    SYNOPSIS@{ub}
        wday = @{"JulianWeekDay" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 27}(day,month,year);
        D0                   D0  D1    D2

        @{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54} @{"JulianWeekDay" LINK "gg:doc/NDK/Guide/Include/inline/datebrowser.h/File" 27}(@{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54},@{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54},@{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51});@{b}

    FUNCTION@{ub}
        Return the weekday of the given date.@{b}

    INPUTS@{ub}
        day -- the day (1-31).
        month -- the month (1-12).
        year -- the year.@{b}

    RESULT@{ub}
        wday -- the weekday of the given date, with 0 being Sunday and
           6 being Saturday.@{b}

    SEE ALSO@{ub}

@ENDNODE
