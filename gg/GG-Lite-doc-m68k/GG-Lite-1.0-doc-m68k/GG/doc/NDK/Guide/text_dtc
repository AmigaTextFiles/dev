@NODE "text.datatype" "text.datatype/text.datatype()"
@{b}

    NAME@{ub}
        text.datatype -- Root data type for text.@{b}

    FUNCTION@{ub}
        The text.datatype is the super-class for any text related classes.@{b}

    METHODS@{ub}
        @{"OM_NEW" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 63} -- Create a new text object.

        @{"OM_GET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 66} -- Obtain the value of an attribute.

        @{"OM_SET" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 65} -- Set the values of multiple attributes.

        @{"OM_UPDATE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 70} -- Update the values of multiple attributes.

        @{"OM_DISPOSE" LINK "gg:doc/NDK/Guide/Include/intuition/classusr.h/File" 64} -- Dispose of a text object.

        @{"GM_LAYOUT" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 318} -- Layout the object and notify the application of the
            title and size.

        @{"GM_HITTEST" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 298} -- Determine if the object has been hit with the
            mouse.

        @{"GM_GOACTIVE" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 305} -- Tell the object to go active.

        @{"GM_HANDLEINPUT" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 308} -- Handle input.

        @{"GM_RENDER" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 302} -- Cause the text to render.

        @{"DTM_PROCLAYOUT" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 288} -- Layout (remap) the text on the application's
            process.

        @{"DTM_FRAMEBOX" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 285} -- Obtain the display environment that the text
            requires.

        @{"DTM_SELECT" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 296} -- Select an area in the text.

        @{"DTM_CLEARSELECTED" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 297} -- Deselect the selected area of the text.

        @{"DTM_COPY" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 299} -- Copy the selected area of the text to the clipboard
            as FTXT.  If no area is selected, then the entire text
            is copied.

        @{"DTM_PRINT" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 300} -- Print the selected area of the text.  If no area
            is selected, then the entire text is printed.

        @{"DTM_WRITE" LINK "gg:doc/NDK/Guide/Include/datatypes/datatypesclass.h/File" 313} -- Write the selected area of the text to a file.
            If no area is selected, then the entire text is saved.@{b}

