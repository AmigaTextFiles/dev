@NODE "ReadBattClock" "battclock.resource/ReadBattClock()"
@{b}

   NAME@{ub}
        @{"ReadBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 24} -- Read time from clock chip.  (V36)@{b}

   SYNOPSIS@{ub}
        AmigaTime = @{"ReadBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 24}( )

        @{"ULONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 52} @{"ReadBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 24}( void );
        D0@{b}

   FUNCTION@{ub}
        This routine reads the time from the clock chip and returns it
        as the number of seconds from 01-jan-1978.@{b}

   INPUTS@{ub}@{b}

   RESULTS@{ub}
        AmigaTime       The number of seconds from 01-Jan-1978 that
                            the clock chip thinks it is.@{b}

   NOTES@{ub}
        If the clock chip returns an invalid date, the clock chip is
        reset and 0 is returned.@{b}

   SEE ALSO@{ub}@{b}

   BUGS@{ub}

@ENDNODE
@NODE "ResetBattClock" "battclock.resource/ResetBattClock()"
@{b}

   NAME@{ub}
        @{"ResetBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 20} -- Reset the clock chip.  (V36)@{b}

   SYNOPSIS@{ub}
        @{"ResetBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 20}( )

        void @{"ResetBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 20}( void );@{b}

   FUNCTION@{ub}
        This routine does whatever is neeeded to put the clock chip
        into a working and usable state and also sets the date on the
        clock chip to 01-Jan-1978.@{b}

   INPUTS@{ub}@{b}

   RESULTS@{ub}@{b}

   NOTES@{ub}@{b}

   SEE ALSO@{ub}@{b}

