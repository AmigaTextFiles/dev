@NODE "WriteBattClock" "battclock.resource/WriteBattClock()"
@{b}

   NAME@{ub}
        @{"WriteBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 28} -- Set the time on the clock chip.  (V36)@{b}

   SYNOPSIS@{ub}
        @{"WriteBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 28}( AmigaTime )
                        D0

        void @{"WriteBattClock" LINK "gg:doc/NDK/Guide/Include/inline/battclock.h/File" 28}( @{"ULONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 52} );@{b}

   FUNCTION@{ub}
        This routine writes the time given in AmigaTime to the clock
        chip.@{b}

   INPUTS@{ub}
        AmigaTime       The number of seconds from 01-Jan-1978 to the
                            time that should be written to the clock
                            chip.@{b}

   RESULTS@{ub}@{b}

   NOTES@{ub}@{b}

