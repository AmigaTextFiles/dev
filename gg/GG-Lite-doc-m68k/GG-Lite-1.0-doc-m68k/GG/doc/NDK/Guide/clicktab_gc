@NODE "GetClickTabNodeAttrsA" "clicktab_gc/GetClickTabNodeAttrsA()"
@{b}

    NAME@{ub}
        @{"GetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 49} -- Get attributes about a ClickTab node.@{b}

    SYNOPSIS@{ub}
        @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} @{"GetClickTabNodeAttrs" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 54}(@{"struct Node" LINK "gg:doc/NDK/Guide/Include/exec/nodes.h/File" 22} *, Tag, ...)
        @{"GetClickTabNodeAttrs" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 54}(node, firsttag, ...)

        @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} @{"GetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 49}(@{"struct Node" LINK "gg:doc/NDK/Guide/Include/exec/nodes.h/File" 22} *, @{"struct TagItem" LINK "gg:doc/NDK/Guide/Include/utility/tagitem.h/File" 32} *)
        @{"GetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 49}(node, taglist)@{b}

    FUNCTION@{ub}
        The ClickTab uses a private node structure and all attributes
        are hidden, and must therefore be accessed with this function.@{b}

    INPUTS@{ub}
        node - The ClickTab node to get the information on.
        taglist - A tag list of attributes to get.  ti_Tag is the attribute
            to get and ti_Data is a pointer to a location to copy the result
            to.  The exception is @{"LBNA_Column" LINK "gg:doc/NDK/Guide/Include/gadgets/listbrowser.h/File" 124}, which is used to specify a
            column to get attributes on.@{b}

    SEE ALSO@{ub}
        @{"SetClickTabNodeAttrsA()" LINK "SetClickTabNodeAttrsA"}

@ENDNODE
@NODE "SetClickTabNodeAttrsA" "clicktab_gc/SetClickTabNodeAttrsA()"
@{b}

    NAME@{ub}
        @{"SetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 40} -- Set attributes of a ClickTab node.@{b}

    SYNOPSIS@{ub}
        @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} @{"SetClickTabNodeAttrs" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 45}(@{"struct Node" LINK "gg:doc/NDK/Guide/Include/exec/nodes.h/File" 22} *, Tag, ...)
        @{"SetClickTabNodeAttrs" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 45}(node, firsttag, ...)

        @{"VOID" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 24} @{"SetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 40}(@{"struct Node" LINK "gg:doc/NDK/Guide/Include/exec/nodes.h/File" 22} *, @{"struct TagItem" LINK "gg:doc/NDK/Guide/Include/utility/tagitem.h/File" 32} *)
        @{"SetClickTabNodeAttrsA" LINK "gg:doc/NDK/Guide/Include/inline/clicktab.h/File" 40}(node, taglist)@{b}

    FUNCTION@{ub}
        Changes attributes for a ClickTab node.  Since the ClickTab
        class uses a private node structure, this is the only way to change
        node attributes.

        You may @{"NOT" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 1500} change node attributes when the node is in a list
        attached to a ClickTab gadget.  You must first detach the list
        with @{"CLICKTAB_Labels" LINK "gg:doc/NDK/Guide/Include/gadgets/clicktab.h/File" 60}, ~0 before you can change attributes, and
        then re-attach the list, and re-render the gadget to reflect
        any changes. This should include re-domaining the gadget.
        If used in a layout group, turn off domain caching for the
        clicktab object if you intend to dynamically alter the tabs
        and refresh the layout group with @{"RethinkLayout()" LINK "gg:doc/NDK/Guide/layout_gc/RethinkLayout"}.@{b}

    TAGS@{ub}
        @{"TNA_Text" LINK "gg:doc/NDK/Guide/Include/gadgets/clicktab.h/File" 42} (@{"STRPTR" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 67})

            Text string to appear as a line in the ClickTab menu node.

        @{"TNA_Number" LINK "gg:doc/NDK/Guide/Include/gadgets/clicktab.h/File" 45} (@{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54})

            ID Number assigned to a ClickTab menu node

        @{"TNA_TextPen" LINK "gg:doc/NDK/Guide/Include/gadgets/clicktab.h/File" 48} (@{"WORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 54})

            Specifies pen number to use for the label.

            Defaults to pens[@{"TEXTPEN" LINK "gg:doc/NDK/Guide/Include/intuition/screens.h/File" 96}].@{b}

    INPUTS@{ub}
        node - Node whose attributes you are changing.
        taglist - Tag list of attributes to change.@{b}

    SEE ALSO@{ub}
        @{"GetClickTabNodeAttrsA()" LINK "GetClickTabNodeAttrsA"}

@ENDNODE
