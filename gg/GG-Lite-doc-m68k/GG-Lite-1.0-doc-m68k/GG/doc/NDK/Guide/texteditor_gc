@NODE "GA_TEXTEDITOR_DoubleClickHook" "texteditor.gadget/GA_TEXTEDITOR_DoubleClickHook"
@{b}

    NAME@{ub}
        @{"GA_TEXTEDITOR_DoubleClickHook" LINK "gg:doc/NDK/Guide/Include/gadgets/texteditor.h/File" 36} -- [IS.], @{"struct Hook" LINK "gg:doc/NDK/Guide/Include/utility/hooks.h/File" 28} *@{b}

    FUNCTION@{ub}
        If you use the gadget in ReadOnly mode then you may want a special
        action to take place when the user doubleclick certain words.
        For example a mail or news client, using this gadget to show mails,
        may want the user to be able to click on URL's to lookup the link.

        The hook will be called with A1 pointing to a ClickMessage, and A0
        will point to the hook itself.
        Your hook should return @{"TRUE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 95} if it wants to stop the editor from
        blocking.@{b}

    EXAMPLE@{ub}
        /* This hook will test if the user doubleclicked an http address */

        @{"BOOL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 91} URLHookCode (register __a1 @{"struct ClickMessage" LINK "gg:doc/NDK/Guide/Include/gadgets/texteditor.h/File" 134} *clickmsg)
        {
              @{"UWORD" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 55} pos = clickmsg->ClickPosition;

           while(pos && *(clickmsg->LineContents+pos-1) != ' ' && *(clickmsg->LineContents+pos-1) != '<')
           {
              pos--;
           }

           if(strncmp(clickmsg->LineContents+pos, "http:", 5))
           {
              return(@{"FALSE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 98});
           }
           LookupURL(clickmsg->LineContents+pos);
           return(@{"TRUE" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 95});
        }@{b}

    SEE ALSO@{ub}
        @{"GA_TEXTEDITOR_ReadOnly" LINK "GA_TEXTEDITOR_ReadOnly"}, mui/TextEditor_mcc.h

@ENDNODE
