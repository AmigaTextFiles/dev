@NODE "IEEEDPTst" "mathieeedoubbas.library/IEEEDPTst()"
@{b}

   NAME@{ub}
        IEEEDPTst -- compare IEEE double precision value to 0.0@{b}

   SYNOPSIS@{ub}
          c   = IEEEDPTst(  y  );
          d0              d0/d1

        double  y;
        long    c;@{b}

   FUNCTION@{ub}
        Compare y to 0.0, set the condition codes for less than, greater
        than, or equal to 0.0.  Set the return value c to -1 if less than,
        to +1 if greater than, or 0 if equal to 0.0.@{b}

   INPUTS@{ub}
        y -- IEEE double precision floating point value@{b}

   RESULT@{ub}
        c = 1   cc = gt         for (y > 0.0)
        c = 0   cc = eq         for (y == 0.0)
        c = -1  cc = lt         for (y < 0.0)@{b}

   BUGS@{ub}@{b}

   SEE ALSO@{ub}

@ENDNODE
