@NODE "IEEEDPFix" "mathieeedoubbas.library/IEEEDPFix()"
@{b}

   NAME@{ub}
        IEEEDPFix -- convert IEEE double float to integer@{b}

   SYNOPSIS@{ub}
        x   = IEEEDPFix(  y  );
        d0              d0/d1

        long    x;
        double  y;@{b}

   FUNCTION@{ub}
        Convert IEEE double precision argument to a 32 bit signed integer
        and return result.@{b}

   INPUTS@{ub}
        y -- IEEE double precision floating point value@{b}

   RESULT@{ub}
        if no overflow occured then return
                x -- 32 bit signed integer
        if overflow return largest +- integer
                For round to zero@{b}

   BUGS@{ub}@{b}

   SEE ALSO@{ub}
        @{"IEEEDPFlt()" LINK "IEEEDPFlt"}

@ENDNODE
