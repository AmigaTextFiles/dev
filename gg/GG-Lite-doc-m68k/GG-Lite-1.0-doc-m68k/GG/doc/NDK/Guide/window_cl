           @{"SCROLLER_Total" LINK "gg:doc/NDK/Guide/Include/gadgets/scroller.h/File" 36} and @{"SCROLLER_ArrowDelta" LINK "gg:doc/NDK/Guide/Include/gadgets/scroller.h/File" 48}.

