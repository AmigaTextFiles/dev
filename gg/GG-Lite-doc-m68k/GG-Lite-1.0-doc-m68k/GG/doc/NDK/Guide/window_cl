       @{"WINDOW_InputEvent" LINK "gg:doc/NDK/Guide/Include/classes/window.h/File" 138} (@{"struct InputEvent" LINK "gg:doc/NDK/Guide/Include/devices/inputevent.h/File" 257} *)
