@{b}

   NAME@{ub}
       @{"RefreshPageGadget" LINK "gg:doc/NDK/Guide/Include/inline/layout.h/File" 59} -- Refresh gadget in a paged layout@{b}

   SYNOPSIS@{ub}
       @{"RefreshPageGadget" LINK "gg:doc/NDK/Guide/Include/inline/layout.h/File" 59}(gad, page, win, req)
                         A0     A1       A2   A3

       void @{"RefreshPageGadget" LINK "gg:doc/NDK/Guide/Include/inline/layout.h/File" 59}(@{"struct Gadget" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 214} *, Object *,
               @{"struct Window" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 909} *, @{"struct Requester" LINK "gg:doc/NDK/Guide/Include/intuition/intuition.h/File" 144} *)@{b}

   FUNCTION@{ub}
       Like @{"RefreshGList" LINK "gg:doc/NDK/Guide/intuition/RefreshGList"}(gad,win,req,1), but passes a @{"NULL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 101} window and
       requester pointer if the gadget is not on the currently visible
       page.

@ENDNODE
