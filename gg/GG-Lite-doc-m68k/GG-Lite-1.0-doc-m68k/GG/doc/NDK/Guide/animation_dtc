            @{"ADTM_LOADFRAME" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 181}.

        @{"ADTM_START" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 187} -- Start the animation.  This MUST be passed to the
            super-class AFTER the sub-class has started.

        @{"ADTM_PAUSE" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 190} -- Pause the animation.  This MUST be passed to the
            super-class BEFORE the sub-class pauses.

        @{"ADTM_STOP" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 193} -- Stop the animation.  This MUST be passed to the
            super-class BEFORE the sub-class stops.

        @{"ADTM_LOCATE" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 196} -- Used to locate a frame of the animation.

        @{"ADTM_LOADNEWFORMATFRAME" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 199} -- Load a new format frame of the animation,
