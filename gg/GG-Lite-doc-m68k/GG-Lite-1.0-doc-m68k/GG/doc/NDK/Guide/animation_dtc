        @{"ADTM_UNLOADNEWFORMATFRAME" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 202} -- Deallocate any memory allocated by
            @{"ADTM_LOADNEWFORMATFRAME" LINK "gg:doc/NDK/Guide/Include/datatypes/animationclass.h/File" 199}. (V44)@{b}

