@NODE "GetAGString" "amigaguide.class/GetAGString()"
@{b}

    NAME@{ub}
        GetAGString - Obtain localized AmigaGuide text  (V34)@{b}

    SYNOPSIS@{ub}
        string = GetAGString (id);
        d0                      d0

        @{"STRPTR" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 67} GetAGString (@{"LONG" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 51});@{b}

    FUNCTION@{ub}
        This function is used to obtain a pointer to the string
        associated with the given ID.@{b}

    INPUTS@{ub}
        id        - Catalog entry to obtain.@{b}

    RETURNS@{ub}
        Returns a pointer to the @{"NULL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 101} terminated string. @{"NULL" LINK "gg:doc/NDK/Guide/Include/exec/types.h/File" 101} on
        failure.@{b}

    SEE ALSO@{ub}

@ENDNODE
