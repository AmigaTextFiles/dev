        @{"GM_HANDLEINPUT" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 308} -- Overrides superclass.

        @{"GM_HITTEST" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 298} -- Overrides superclass, returns GMR_HITTEST.

        @{"GM_RENDER" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 302} -- Renders or erases checkmark glyph.

        @{"GM_DOMAIN" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 323} -- Returns @{"GDOMAIN_MINIMUM" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 486}, @{"GDOMAIN_NOMINAL" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 489} and
            @{"GDOMAIN_MAXIMUM" LINK "gg:doc/NDK/Guide/Include/intuition/gadgetclass.h/File" 492} dimensions.

        GM_KEYACTIVE -- Private method for keyboard control.

        GM_KEYINACTIVE -- Private method for keyboard control.

