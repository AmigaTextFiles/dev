@DATABASE
@NODE main "conv/toCBM"
; HypAss 1.0, © 1998 RST Ralf Steines Trier, ALL RIGHTS RESERVED !
;
; Amiga to PET/VC20/C64 character conversion "conv/toCBM"
;------------------------------------------------------------

 .conv $00, $FF, $20    ; fill illegal chars with space

 .conv $00,         $00 ; NUL
 .conv $0A,         $0D ; LF -> CR
 .conv $20, $40,    $20 ; " !"#$%&'()*+,-./0123456789:;<=>?@"
 .conv $41, $5A,    $61 ; "ABCDEFGHIJKLMNOPQRSTUVWXYZ" C64 uppercase
 .conv $5B,         $5B ; [
 .conv $5D,         $5D ; ]
 .conv $5E,         $5E ; ^   C64 arrow up
 .conv $5F,         $5F ; _   C64 arrow left
 .conv $60,         $5F ; `   C64 arrow left
 .conv $61, $7A,    $41 ; "abcdefghijklmnopqrstuvwxyz" C64 lowercase
 .conv $A3,         $5C ; £   C64 pound


@ENDNODE
