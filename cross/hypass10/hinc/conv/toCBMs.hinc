@DATABASE
@NODE main "conv/toCBMs"
; HypAss 1.0, © 1998 RST Ralf Steines Trier, ALL RIGHTS RESERVED !
;
; Amiga to PET/VC20/C64 screen code conversion "conv/toCBMs"
;------------------------------------------------------------
; Add $80 to reverse character!

 .conv $00, $FF, $20    ; fill illegal chars with space

 .conv $20, $3F,    $20 ; " !""#$%&'()*+,-./0123456789:;<=>?"
 .conv $40,         $00 ; @
 .conv $41, $5A,    $41 ; "ABCDEFGHIJKLMNOPQRSTUVWXYZ" C64 uppercase
 .conv $5B,         $1B ; [
 .conv $5D,         $1D ; ]
 .conv $5E,         $1E ; ^   C64 arrow up
 .conv $5F,         $1F ; _   C64 arrow left
 .conv $60,         $1F ; `   C64 arrow left
 .conv $61, $7A,    $01 ; "abcdefghijklmnopqrstuvwxyz" C64 lowercase
 .conv $A3,         $1C ; £   C64 pound

@ENDNODE
