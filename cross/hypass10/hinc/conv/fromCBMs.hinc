@DATABASE
@NODE main "conv/fromCBMs"
; HypAss 1.0, © 1998 RST Ralf Steines Trier, ALL RIGHTS RESERVED !
;
; PET/VC20/C64 screen code to Amiga conversion "conv/fromCBMs"
;-------------------------------------------------------------
; Reverse characters get "unreversed"!

 .conv $00, $FF, $20    ; fill illegal chars with space

 .conv $00,         $40 ; @
 .conv $01, $1A,    $61 ; "abcdefghijklmnopqrstuvwxyz" C64 lowercase
 .conv $1B,         $5B ; [
 .conv $1C,         $A3 ; £   C64 pound
 .conv $1D,         $5D ; ]
 .conv $1E,         $5E ; ^   C64 arrow up
 .conv $1F,         $5F ; _   C64 arrow left
 .conv $20, $3F,    $20 ; " !""#$%&'()*+,-./0123456789:;<=>?"
 .conv $41, $5A,    $41 ; "ABCDEFGHIJKLMNOPQRSTUVWXYZ" C64 uppercase

 .conv $80,         $40 ; @
 .conv $81, $9A,    $61 ; "abcdefghijklmnopqrstuvwxyz" C64 lowercase
 .conv $9B,         $5B ; [
 .conv $9C,         $A3 ; £   C64 pound
 .conv $9D,         $5D ; ]
 .conv $9E,         $5E ; ^   C64 arrow up
 .conv $9F,         $5F ; _   C64 arrow left
 .conv $A0, $BF,    $20 ; " !""#$%&'()*+,-./0123456789:;<=>?"
 .conv $C1, $DA,    $41 ; "ABCDEFGHIJKLMNOPQRSTUVWXYZ" C64 uppercase


@ENDNODE
