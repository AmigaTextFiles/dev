@DATABASE
@NODE main "conv/fromCBM"
; HypAss 1.0, © 1998 RST Ralf Steines Trier, ALL RIGHTS RESERVED !
;
; PET/VC20/C64 to Amiga character conversion "conv/fromCBM"
;------------------------------------------------------------

 .conv $00, $FF, $20    ; fill illegal chars with space

 .conv $00,         $00 ; NUL
 .conv $0D,         $0A ; CR->LF

 .conv $20, $40,    $20 ; " !"#$%&'()*+,-./0123456789:;<=>?@"
 .conv $41, $5A,    $61 ; "abcdefghijklmnopqrstuvwxyz" C64 lowercase
 .conv $5B,         $5B ; [
 .conv $5C,         $A3 ; £   C64 pound
 .conv $5D,         $5D ; ]
 .conv $5E,         $5E ; ^   C64 arrow up
 .conv $5F,         $5F ; _   C64 arrow left
 .conv $61, $7A,    $41 ; "ABCDEFGHIJKLMNOPQRSTUVWXYZ" C64 uppercase


@ENDNODE
