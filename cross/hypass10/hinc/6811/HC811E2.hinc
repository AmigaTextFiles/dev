@NODE HC811E2_MEMORY
****************************
*        MEMORY MAP        *
****************************

; 38 port lines, 52 pins

; YOU MAY DEFINE REGS/RAM_BOT/IRQS IN YOUR SOURCE, OTHERWISE
; THE DEFAULT ADDRESSES FOR SINGLE CHIP MODE GET USED.

 .IFND REGS             ;
  REGS      = $1000    ;   64 BYTES REGS
 .ENDIF                 ;

 .IFND RAM_BOT          ;
  RAM_BOT   = $0000    ;
 .ENDIF                 ;
  RAM_SIZE  = $0100    ;  256 BYTES RAM

  EEP_BOT   = $B600    ;
  EEP_SIZE  = $0800    ; 2048 BYTES EEPROM
  EEP_TOP   = $BE00    ;

 .IFND IRQS             ;
  IRQS      = $BDC0    ;   64 BYTES IRQS
 .ENDIF                 ;

  HAS_BPROT = 1        ;   ENABLE BPROT REGISTER

@ENDNODE

