@NODE HC11F1_MEMORY
****************************
*        MEMORY MAP        *
****************************

; 54 port lines, 68 pins

; YOU MAY DEFINE REGS/RAM_BOT/EEP_BOT/IRQS IN YOUR SOURCE, OTHERWISE
; THE DEFAULT ADDRESSES FOR SINGLE CHIP MODE GET USED.

 .IFND REGS            ;
  REGS      = $1000    ;   96 BYTES REGS
 .ENDIF                ;

 .IFND RAM_BOT         ;
  RAM_BOT   = $0000    ;
 .ENDIF                ;
  RAM_SIZE  = $0100    ;  256 BYTES RAM
  RAM_TOP = RAM_BOT+$100

 .IFND EEP_BOT         ;
  EEP_BOT   = $FE00    ;
 .ENDIF                ;
  EEP_SIZE  = $0200    ;  512 BYTES EEPROM
  EEP_TOP = EEP_BOT+$200

 .IFND IRQS            ;
  IRQS      = $BDC0    ;   64 BYTES IRQS
 .ENDIF                ;

  HAS_TIC4  = 1        ;   ENABLE TIC4 INPUT
  HAS_BPROT = 1        ;   ENABLE BPROT REGISTER
  HAS_F1REG = 1        ;   ENABLE HC11F1 REGISTERS

@ENDNODE

