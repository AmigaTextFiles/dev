@NODE HC11A0_MEMORY
****************************
*        MEMORY MAP        *
****************************

; 38 port lines, 52 pins

; YOU MAY DEFINE REGS/RAM_BOT/IRQS IN YOUR SOURCE, OTHERWISE
; THE DEFAULT ADDRESSES FOR SINGLE CHIP MODE GET USED.

 .IFND REGS            ;
  REGS      = $1000    ;   64 BYTES REGS
 .ENDIF                ;

 .IFND RAM_BOT         ;
  RAM_BOT   = $0000    ;
 .ENDIF                ;
  RAM_SIZE  = $0100    ;  256 BYTES RAM
  RAM_TOP = RAM_BOT+$100

 .IFND IRQS            ;
  IRQS      = $FFC0    ;   64 BYTES IRQS
 .ENDIF                ;

@ENDNODE

