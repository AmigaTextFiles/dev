@NODE HC11E9_MEMORY
****************************
*        MEMORY MAP        *
****************************

; 38 port lines, 52 pins

; YOU MAY DEFINE REGS/RAM_BOT/IRQS IN YOUR SOURCE, OTHERWISE
; THE DEFAULT ADDRESSES FOR SINGLE CHIP MODE GET USED.

 .IFND REGS            ;
  REGS      = $1000    ;   64 BYTES REGS
 .ENDIF                ;

 .IFND RAM_BOT         ;
  RAM_BOT   = $0000    ;
 .ENDIF                ;
  RAM_SIZE  = $0200    ;  512 BYTES RAM
  RAM_TOP = RAM_BOT+$200

  ROM_BOT   = $D000    ;
  ROM_SIZE  = $3000    ;12288 BYTES ROM
  ROM_TOP  = $10000    ;

  EEP_BOT   = $B600    ;
  EEP_SIZE  = $0200    ;  512 BYTES EEPROM
  EEP_TOP   = $B800    ;

 .IFND IRQS            ;
  IRQS      = $FFC0    ;   64 BYTES IRQS
 .ENDIF                ;

  HAS_TIC4  = 1        ;   ENABLE TIC4 INPUT
  HAS_BPROT = 1        ;   ENABLE BPROT REGISTER

@ENDNODE

