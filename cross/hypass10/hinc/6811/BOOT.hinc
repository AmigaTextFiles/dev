  ; THESE ARE NO VECTORS BUT PROGRAM MEMORY LOCATIONS THE CPU JUMPS TO
  ; MUST CONTAIN OBJECT CODE TO JUMP TO YOUR RELATING ROUTINES !

  C_RES     = $00 ; RESET

  C_SCI     = $C4 ; SCI SERIAL SYSTEM
  C_SPI     = $C7 ; SPI SERIAL TRANSFER COMPLETE

  C_PAI     = $CA ; PULSE ACC INPUT EDGE
  C_PAO     = $CD ; PULSE ACC OVERFLOW
  C_TOV     = $D0 ; TIMER OVERFLOW
 .IFD HAS_TIC4
  C_TI4O5   = $D3 ; TIMER INPUT CAPTURE 4 / TIMER OUTPUT COMPARE 5
 .ENDIF
  C_TO5     = $D3 ; TIMER OUTPUT COMPARE 5
  C_TO4     = $D6 ; TIMER OUTPUT COMPARE 4
  C_TO3     = $D9 ; TIMER OUTPUT COMPARE 3
  C_TO2     = $DC ; TIMER OUTPUT COMPARE 2
  C_TO1     = $DF ; TIMER OUTPUT COMPARE 1
  C_TI3     = $E2 ; TIMER INPUT CAPTURE 3
  C_TI2     = $E5 ; TIMER INPUT CAPTURE 2
  C_TI1     = $E8 ; TIMER INPUT CAPTURE 1
  C_RTI     = $EB ; REAL TIME INTERRUPT

  C_IRQ     = $EE ; IRQ
  C_XIRQ    = $F1 ; XIRQ
  C_SWI     = $F4 ; SWI
  C_ILL     = $F7 ; ILLEGAL OPCODE TRAP
  C_COP     = $FA ; COP FAILURE (RESET)
  C_CMF     = $FD ; COP CLOCK MONITOR FAIL (RESET)


@ENDNODE
