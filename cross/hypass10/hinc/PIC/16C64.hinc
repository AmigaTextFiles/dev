****************************
*        MEMORY MAP        *
****************************

; 33 port lines, 40 pins

  REGS      = $0000    ;   64 BYTES REGS   (2 PAGES),
  REG0      = $0000    ;
  REG1      = $0000    ;

  RAM_BOT   = $0020    ;
  RAM_PBOT  = $0020    ;
  RAM_SIZE  = $0080    ;  128 BYTES RAM    (2 PAGES $20-$80/$20-$40)
  RAM_TOP   = $0080    ;
  RAM_PAGES =     2    ;

  ROM_BOT   = $0000    ;
  ROM_SIZE  = $0800    ; 2048 WORDS ROM_14 (4 PAGES)
  ROM_TOP   = $0200    ;
  ROM_PAGES =     4    ;
  ROM_BITS  =    14    ;

