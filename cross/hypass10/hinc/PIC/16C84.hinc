  REG0      = $0000    ;
  REG1      = $0000    ;

  RAM_BOT   = $000C    ;
  RAM_PBOT  = $000C    ;
  RAM_SIZE  = $0024    ;   36 BYTES RAM    (UNPAGED)
  RAM_TOP   = $0030    ;
