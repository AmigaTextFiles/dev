  ROM_BOT   = $0000    ;
  ROM_SIZE  = $0400    ; 1024 WORDS ROM_14 (UNPAGED)
  ROM_TOP   = $0400    ;
  ROM_PAGES =     1    ;
  ROM_BITS  =    14    ;

  HAS_PROM  = 1        ;   ENABLE EEPROM INTERFACE

