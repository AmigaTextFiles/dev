@SYS_Divide_s16_mask            #$002a  ; WORD, sysArg[6:7]

@SYS_ScanMemory                 #$00e6  ; Search byte in memory region
@SYS_ScanMemory_Cycles          #50
@SYS_ScanMemory_StartAddr       #$0024  ; WORD, sysArg[0:1], in
@SYS_ScanMemory_Find            #$0026  ; BYTE, sysArg[2]
