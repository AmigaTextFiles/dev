@SYS_CopyMemory                 #$00e9  ; Copy memory region
@SYS_CopyMemory_Cycles          #80
@SYS_CopyMemory_Dst             #$0024  ; WORD, sysArg[0:1], in
@SYS_CopyMemory_Src             #$0026  ; WORD, sysArg[2:3], in
