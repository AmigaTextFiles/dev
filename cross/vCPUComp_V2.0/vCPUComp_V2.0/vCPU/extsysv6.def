; x:s16 = x:s16 / y:s16
; rem:s16 = x:s16 % y:s16
@SYS_Divide_s16                 #$00a1  ; 15 bits unsigned division (from at67)
@SYS_Divide_s16_Cycles          #80
@SYS_Divide_s16_x               #$0024  ; WORD, sysArg[0:1], in/out
@SYS_Divide_s16_y               #$0026  ; WORD, sysArg[2:3], in
