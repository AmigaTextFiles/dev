;
; $VER: 64tass 1.54 r1900
;
;=============================================================================
; Set defaults

(set #app "C/64tass")
(set #defaultDest "RAM:")
(set #destination "C:")

;=============================================================================
; Copy 64tass
(complete 50)

(copyfiles
    (prompt "Install 64tass")
	(source #app)
	(dest (tackon #app #destination))
	(help @copyfiles-help)
	(confirm)
)
;=============================================================================
; Final message
(complete 100)

(message "Installation complete!")

;----------------------------------------------------------------------------
(exit (QUIET))
