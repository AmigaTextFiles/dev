;
; $VER: RASM 1.3
;
;=============================================================================
; Set defaults

(set #appName "rasm")
(set #defaultDest "RAM:")
(set #destination "C:")

;=============================================================================
; Copy main executable
(complete 50)

(copyfiles
    (prompt "Install app")
	(source #appName)
	(newname #appName)
	(dest (tackon #appName #destination))
	(help @copyfiles-help)
	(confirm)
)
;=============================================================================
; Final message
(complete 100)

(message "Installation complete!")

;----------------------------------------------------------------------------
(exit (QUIET))
