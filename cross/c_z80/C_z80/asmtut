;*************************
;** procedura per compilare
;** con c_z80 tutti i file
;** .asm nella directory
;** corrente
;*************************
;** by BiancaSoft
;*************************

list >asmlist #?.asm lformat "c_z80 >%s%s.esi %s%s"

echo >asmedit "9999[f/.asm/ e/.asm//] q"

echo >asma "edit asmlist TO asmexec ver nil: WITH asmedit"

run execute asma >nil:

wait 1 secs

echo "... COMPILO"
execute asmexec

delete asmexec asmedit asmlist asma


