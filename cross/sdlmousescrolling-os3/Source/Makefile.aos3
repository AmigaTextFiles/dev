CC = g++
LD = g++
CFLAGS = -noixemul -s -O2
LDFLAGS = -lSDL_image -lpng -ljpeg -lz -lSDL_ttf -lfreetype -lz -lsdl -lauto -lm
RM   = /bin/rm -f
OBJS = scrolling.o strtod.o
PROG = scrolling
VERS = 0.1.0

.PHONY: clean distclean
all: $(PROG)
$(PROG): $(OBJS)
	$(LD) -o $(PROG) $(OBJS) $(LDFLAGS)
scrolling.o: scrolling.cpp 
	$(CC) $(CFLAGS) -O2 -c scrolling.cpp 
clean:
	$(RM) *~ $(OBJS) $(PROG)
.PHONY: clean
