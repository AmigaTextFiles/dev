; Quote
SETENV Binarquote """

; Compose command line
ECHO >T:Binarcmd "Binar " NOLINE

; Ask file names
REQUESTFILE >ENV:Binarsrc TITLE="Select source file..." DRAWER="RAM:" NOICONS
IF WARN
 SKIP Exit
ENDIF
REQUESTFILE >ENV:Binartrg TITLE="Save As..." DRAWER="RAM:" SAVEMODE NOICONS
IF WARN
 SKIP Exit
ENDIF

; Compose command line
ECHO >>T:Binarcmd ">" NOLINE
ECHO >>T:Binarcmd $Binartrg NOLINE
ECHO >>T:Binarcmd " " NOLINE
TYPE >>T:Binarcmd ENV:Binarquote
ECHO >>T:Binarcmd $Binarsrc NOLINE
TYPE >>T:Binarcmd ENV:Binarquote

; Execute command line
EXECUTE T:Binarcmd

; Clean up
DELETE ENV:Binarsrc QUIET
DELETE ENV:Binartrg QUIET
DELETE ENV:Binarquote QUIET
DELETE T:Binarcmd QUIET

; Inform user
RequestChoice >NIL: TITLE="BinarGUI" BODY="Disassembling successfully completed." GADGETS="Ok"

LAB Exit
