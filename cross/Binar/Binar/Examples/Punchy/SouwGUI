; Compose command line
ECHO >T:Souwcmd "rx Souw " NOLINE

; Ask file names
REQUESTFILE >ENV:Souwsrc TITLE="Select binary file..." DRAWER="RAM:" NOICONS
IF WARN
 SKIP Exit
ENDIF
REQUESTFILE >ENV:Souwdef TITLE="Select deflector file..." DRAWER="RAM:" SAVEMODE NOICONS
IF WARN
 SKIP Exit
ENDIF
REQUESTFILE >ENV:Souwtrg TITLE="Save source as..." DRAWER="RAM:" SAVEMODE NOICONS
IF WARN
 SKIP Exit
ENDIF

; Compose command line
ECHO >>T:Souwcmd ">" NOLINE
ECHO >>T:Souwcmd $Souwtrg NOLINE
ECHO >>T:Souwcmd " " NOLINE
ECHO >>T:Souwcmd $Souwsrc NOLINE
ECHO >>T:Souwcmd " " NOLINE
ECHO >>T:Souwcmd $Souwdef

; Execute command line
EXECUTE T:Souwcmd

; Clean up
DELETE ENV:Souwsrc QUIET
DELETE ENV:Souwdef QUIET
DELETE ENV:Souwtrg QUIET
DELETE T:Souwcmd QUIET

; Inform user
RequestChoice >NIL: TITLE="SouwGUI" BODY="Extraction successfully completed." GADGETS="Ok"

LAB Exit
