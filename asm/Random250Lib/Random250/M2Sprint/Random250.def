DEFINITION MODULE Random250;

(* Random250 random number generator library bindings
   by Alexander G. M. Smith. *)

FROM Libraries IMPORT LibraryPtr;

FROM SYSTEM IMPORT ADDRESS;

CONST
  Random250Name = "random250.library";

VAR
  Random250Base : LibraryPtr;


PROCEDURE Random250Long () : LONGCARD;
INLINE (Random250Base,-30);
  (* Returns 32 random bits using the R250 random number generator. *)

PROCEDURE Random250Array (ArrayLongWordSize : LONGCARD; Array : ADDRESS);
INLINE (Random250Base, -36, 0, 8);
  (* Fills the given array with random 32 bit words.  The size of the
  array is in long words, so divide the number of bytes by four to get
  the size in long words. *)

END Random250.
