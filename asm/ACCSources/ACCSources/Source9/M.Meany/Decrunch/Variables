
; VARIABLES include file for DecrunchDir program. © M.Meany Jan 91.

;-------------- String data

usage_text	dc.b		$0a,'Directory Decruncher. © M.Meany Jan 91',$0a
		dc.b		$0a,'Decrunches all data files from a directory on df0: to a directory on',$0a
		dc.b		'drive df1:. Run from the CLI only !!!!!',$0a,$0a
		dc.b		'Usage:    DecrunchDir <dirname>',$0a,$0a
		dc.b		'Where <dirname>is the full pathname of a directory on drive 0 ( df0: ).'
		dc.b		$0a,$0a,'Eg.   DecrunchDir df0:source',$0a
		dc.b		$0a,$0a,'This will create a directory df1:source and then decrunch all files',$0a
		dc.b		'from df0:source to df1:source.'
		dc.b		$0a,$0a,' NOTE df0: must ALWAYS be specified and it MUST be lower case !!!!!'
		dc.b		$0a,$0a,'  Thanks must go to Nico Francois for PowerPacker and its library.'
		dc.b		$0a,$0a
usage_len	equ		*-usage_text
		even

;--------------	Variables.


_ArpBase	ds.l		1
_PPBase		ds.l		1

ppname		dc.b		'powerpacker.library',0
		even
		
		rsreset

info_buffer	rs.l		1
dir_key		rs.l		1


con_handle	rs.l		1
		
num_lines	rs.l		1	number of entries in dictionary

node		rs.l		1	used by list subroutines

start_list	rs.l		1	the list head structure
		rs.l		1
		rs.b		1
		
		rs.b		1	make pc even
		
end_list	rs.l		1	the list tail structure
		rs.l		1
		rs.b		1
		
		rs.b		1	make pc even

file_handle	rs.l		1	handle of text file


dirname		rs.l		1
filename	rs.b		200	space for directory+file names

buffer		rs.l		1
length		rs.l		1

vars_SIZEOF	rs.b		0
		
