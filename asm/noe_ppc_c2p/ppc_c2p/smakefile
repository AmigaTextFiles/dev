#

ASM=	pasm
CC=	scppc
LINK=	ppc-amigaos-ld -r -o

ASRC=	c2p_asm.s
CSRC=	c2p.c

OBJS=
OUT=	HowToUse.elf

#

AOBJ=	ppc_c2p_12bit.o ppc_c2p_8bit.o
COBJ=	HowToUse.o

#

$(OUT):	$(COBJ) $(AOBJ) $(OBJS)
	$(LINK) $(OUT) lib:c_ppc.o $(COBJ) $(AOBJ) $(OBJS) lib:scppc.a lib:end.o
	protect $(OUT) +e

#

HowToUse.o: HowToUse.c
	$(CC) HowToUse.c

ppc_c2p_12bit.o: ppc_c2p_12bit.s
	$(ASM) ppc_c2p_12bit.s

ppc_c2p_8bit.o: ppc_c2p_8bit.s
	$(ASM) ppc_c2p_8bit.s

