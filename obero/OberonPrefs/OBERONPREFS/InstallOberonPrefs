.key ""
.bra {
.ket }
failat 21
copy clone OberonPrefs(%|.info|.dok|.dok.info|.doc|.doc.info) OBERON:
copy clone (catalogs) all OBERON:
version >NIL: locale.library
if not fail
  copy clone (catalogs) all locale:
endif


version >nil: oberonsupport.library
if not warn
  echo "You have installed `version oberonsupport.library` "
else
  echo "You haven't installed oberonsupport.library in your system"  
endif
ask "Do you want to install oberonsupport.library 5.0 (Y/N)?"
if warn
  copy libs/(oberonsupport.library) libs: clone
endif

version >nil: reqtools.library
if not warn
  echo "You have installed `version reqtools.library` "
else
  echo "You haven't installed reqtools.library in your system"  
endif
ask "Do you want to install reqtools.library 38.1042 (Y/N)?"
if warn
  copy libs/(reqtools.library) libs: clone
endif


ask "*nWollen Sie die CygnusEd-ARexx-Skripte für die Steuerung*nvon Amiga-Oberon installieren?*nDou you want to install the ARexx scripts to control Amiga-Oberon*nfrom CygnusEd?*n(Y/N)"
if warn
  copy clone rexx all rexx:
  echo "Die ARexx-Skripte benötigen im übrigen die oberonsupport.library...*nThe rexx scripts require the oberonsupport.library, by the way... "
  ask "*nWollen Sie die Funktionstastenbelegung für CygnusEd installieren*n(überschreibt eine bereits bestehende)?*nDo you want to install the function key mapping for*nCygnusEd (will overwrite an existing one)?*n(Y/N)"
  if warn
    copy clone s/(RexxCommands) s:
  endif
endif
echo "Fertig - Finished."


