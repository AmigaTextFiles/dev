.key file/a,desc/a,nopath/s,nodate/s,fidlen/s,logfile
.def logfile="t:ViewDiz_log"
if not <nodate>
 set nd "(`c:date`) "
else
 set nd ""
endif
if <fidlen>
 if exists "<desc>"
  set fl "`list "<desc>" lformat "%-6.5l"`"
 endif
else
 set fl ""
endif
if <nopath>
 set np %n
else
 set np %f%n
endif
list "<file>" lformat "$nd$fl*"$np*"" >>"<logfile>"
