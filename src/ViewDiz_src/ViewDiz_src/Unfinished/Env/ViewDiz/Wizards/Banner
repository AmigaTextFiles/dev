.key FILE/A,DESC/A,BANNER/K,BOTTOM/S,FRESH/S
.bra {
.ket }
If exists "{BANNER}"
 IF {FRESH}
  Copy >NIL: "{BANNER}" "{DESC}"
  Skip end
 Endif
 If {BOTTOM}
  Type "{BANNER}" >>"{DESC}"
 Else
  Copy "{BANNER}" TO T:Temp.{$$}
  Type "{DESC}" >>T:Temp.{$$}
  Copy T:Temp.{$$} TO "{DESC}"
  Delete >NIL: T:Temp.{$$}
 Endif
Else
 Echo "Couldn't open banner: {BANNER}"
Endif
Lab end
