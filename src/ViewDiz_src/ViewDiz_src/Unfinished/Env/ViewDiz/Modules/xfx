.key FILE/A,CMD,DESC
.def desc=file_id.diz
.bra {
.ket }
if {cmd} EQ "READ"
 execute env:viewdiz/modules/xpk "{file}" CMD=read DESC="{desc}"
endif
if {cmd} EQ "WRITE"
 execute env:viewdiz/modules/xpk "{file}" CMD=write DESC="{desc}"
endif
if {cmd} EQ "DELETE"
 execute env:viewdiz/modules/xpk "{file}" CMD=delete DESC="{desc}"
endif
if {cmd} eq "execute"
 execute env:viewdiz/modules/.getdrive
 xfx write $drive FILE "{file}" >con:0/0/500/70/ViewDIZ<>xFX/nosize
endif
if {cmd} eq "info"
 setenv viewdiz/.minf "*"{file}*"" rwxd 9 _UnXfx (#?.xfx) xFX-diskimage
endif
;$VER: ViewDIZ-xFX.module 1.2 (1.9.98) Mikael Lund