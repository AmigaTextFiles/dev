.key file/a,cmd,desc
.def desc=file_id.diz
.bra {
.ket }
if {cmd} eq "read"
 textract e "{desc}" "{file}" >nil:
endif
if {cmd} eq "write"
 textract k "{file}" >nil:
 textract a "{desc}" "{file}" >nil:
endif
if {cmd} eq "delete"
 textract k "{file}" >nil:
endif
if {cmd} eq "execute"
 failat 15
 Rx >nil: 'address DOPUS.1 command doubleclick "{file}"'
 if warn
  if exists sys:utilities/multiview
   sys:utilities/multiview "{file}"
  else
   if exists sys:utilities/amigaguide
    sys:utilities/amigaguide "{file}"
   endif
  endif
 endif
endif
if {cmd} eq "info"
 setenv viewdiz/.minf "*"{file}*"" rwxd 8 _Read (#?.txt|#?.doc|#?.nfo) Textfile
 endif
;$VER: ViewDIZ-TXT.module 1.2 (1.9.98) Mikael Lund