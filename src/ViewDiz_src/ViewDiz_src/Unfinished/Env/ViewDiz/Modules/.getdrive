which >nil: CatStr
if warn
 echo >Ram:CatStr ".key a,b,c*nEcho <c>"
 protect ram:catstr s add
endif
unset choice
unsetenv drive
set t1 "`CatStr viewdiz.catalog 14 "Select drive:"`"
set t2 "`CatStr viewdiz.catalog 15 Cancel`"
set drives "DF0:|DF1:|FF0:|FF1:|RAD:"
set choice `requestchoice title="ViewDiz" body="$t1" gadgets="$drives|$t2"`
if not val $choice EQ 0
 echo >env:drive "$drives" first=`eval ($choice-1)*5+1` len=4
 assign >nil: $drive exists
 if warn
  mount $drive
  if warn
   quit
  endif
 endif
else
 quit
endif
