

OD  = obj/
OBJ = $(OD)EnforcerFreeze.o $(OD)TrapStubs.o $(OD)BGTask.o $(OD)FGTask.o $(OD)SV_Shorties.o

## *rgn* why is there no option to say 'all sources' in an action line?

EnforcerFreeze : $(OBJ)
    $(CC) LINK TO EnforcerFreeze $(OBJ)

$(OD)SV_Shorties.o    : SV_Shorties.asm

$(OD)TrapStubs.o      : TrapStubs.asm

$(OD)EnforcerFreeze.o : EnforcerFreeze.c

$(OD)BGTask.o         : BGTask.c

$(OD)FGTask.o         : FGTask.c

.c.o
    $(CC) $(CFLAGS) $<

.asm.o
    $(CC) $(CFLAGS) $<


Hitting: Hitting.c
    $(CC) OPTIMIZE $(CFLAGS) TO Hitting Hitting.c LINK STARTUP=C





