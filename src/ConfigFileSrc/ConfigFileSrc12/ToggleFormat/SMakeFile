EXE = ToggleFormat

#CPU		= 060
CPU		=

OPTIMIZE	= OPT OPTSCHED OPTINLOCAL OPTSIZE OPTCOMP=1 OPTDEP=1 OPTRDEP=1
#OPTIMIZE	= 

$(EXE): $(EXE).o Startup.o
	SLink Startup.o $(EXE).o SC SD NOICONS TO $@
	DelDataHunks $(EXE)
	Copy $(EXE) TO C: QUIET

$(EXE).o: $(EXE).c
	SC RESOPT $(OPTIMIZE) CPU=$(CPU) CNEST NOSTARTUP PPBUF=524288 MEMSIZE=H PARMS=R MATH=S \
	GST=INCLUDE:All.GST STREQ NOSTKCHK STRMER NOVER NOMINC DISASM=$(EXE).s $?

Startup.o: Startup.asm
	ASM $?

br:
	SC:C/BumpRev 2 $(EXE)
