.key -?/S,CLEAR/S,MAKE/S

IF <CLEAR>
  delete #?.m emog scanner yyparse.e
ENDIF

IF <-?>

  echo "Commandlineoptions:"
  echo ""
  echo "  CLEAR     : Remove modules and binaries"
  echo "  MAKE      : Make all necessary compilations"
  echo "  -?        : This help"
  echo ""

ENDIF

IF <MAKE>

  echo "Compiling tools..."
  ec33a tools.e IGNORECACHE QUIET
  ec33a lomo.e IGNORECACHE QUIET
  ec33a absy.e IGNORECACHE QUIET

  echo "Making the scanner..."
  makescanner
  ec33a scanner.e IGNORECACHE QUIET

  echo "Making the parser..."
  eyacc parser.y
  ec33a yyparse.e IGNORECACHE QUIET
  ec33a parser.e IGNORECACHE QUIET

  echo "Generating the binary..."
  ec33a egen.e IGNORECACHE QUIET
  ec33a emog.e IGNORECACHE QUIET

ENDIF
