; Installer-Script for OS2-Unit
;
; ©1996 by Björn Schotte

(set @default-dest "")

(message "Welcome to the Installer-Script\n"
         "for the OS2-Unit V0.050!\n"
         "\nOS2-Unit und the files\n"
         "are (C) 1995,96 by\n\n"
         "Björn Schotte\n"
         "Am Burkardstuhl 45\n"
         "D-97267 Himmelstadt\n"
         "Germany/Europe\n\n"
         "EMail: bjoern@bomber.mayn.de")

(copyfiles
 (prompt "Copying OS2.o to Pascal:Unit/")
 (source "OS2.o")
 (dest "Pascal:Unit")
 (files)
)


(copyfiles
 (prompt "Copying OS2.u to Pascal:Unit/")
 (source "OS2.u")
 (dest "Pascal:Unit")
 (files)
)

(complete 25)

(set Doku
 (askchoice
  (prompt "Which documentation do you want to install?")
  (help "Choose one documentation")
  (choices "German" "English")
  (default 0)
 )
)

(complete 50)

(if (AND Doku 1)
 (
  (set guide
   (askdir
    (disk)
    (help "Why do you need help?")
    (prompt "Where should the AmigaGuide®-Documentation be copied?")
    (default "HELP:")
   )
  )

  (if (guide)
   (
    (copyfiles
     (prompt "Copying english documentation...")
     (help "Why do you need help?")
     (source "doc/english/OS2Unit.guide")
     (infos)
     (dest guide)
     (files)
     (confirm)
    )
   )
  )
 )
 (
  (set guide
   (askdir
    (disk)
    (help "Why do you need help?")
    (prompt "Where should the AmigaGuide®-Documentation be copied?")
    (default "HELP:")
   )
  )

  (if (guide)
   (
    (copyfiles
     (prompt "Copying german documentation...")
     (help "Why do you need help?")
     (source "doc/deutsch/OS2Unit.guide")
     (infos)
     (dest guide)
     (files)
     (confirm)
    )
   )
  )
 )
)

(complete 100)
