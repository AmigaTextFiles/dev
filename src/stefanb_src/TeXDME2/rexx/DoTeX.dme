/* DoTeX.dme V2.00 18.12.1989 SB */
saveold
PARSE ARG file
IF UPPER(DELSTR(file,1,LASTPOS('.',file)))~='TEX' THEN RETURN 10
OPTIONS RESULTS
IF SHOWLIST('Ports','AmigaTeX')=0 THEN
 DO
  StartTeX
  IF RC=10 THEN RETURN 10
 END
DO 60
 ADDRESS 'AmigaTeX' 'Abort'
 IF RC=0 THEN LEAVE
 CALL DELAY 50
END
file='RAM:TeXDME'file
saveas file
ADDRESS 'AmigaTeX' 'TeXify' file
RETURN 0
