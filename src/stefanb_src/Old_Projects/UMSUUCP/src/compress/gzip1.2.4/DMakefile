FLAGS  = -3.1 -r -mRR -ms
CFLAGS = $(FLAGS) -proto -mi -DSYSDIR -DSTDC_HEADERS -DNO_CHOWN -DDYN_ALLOC \
      -DHAVE_ALLOCA_H -DNO_UTIME -DNO_UTIME_H
LFLAGS = $(FLAGS)
LIBS   =

SRCS = gzip.c zip.c deflate.c trees.c bits.c unzip.c inflate.c util.c \
      crypt.c lzw.c unlzw.c unpack.c unlzh.c getopt.c tailor.c
OBJS = $(SRCS:"*.c":"t:*.o")

gzip : $(OBJS)
      dcc $(LFLAGS) -o %(left) %(right) $(LIBS)

$(OBJS) : $(SRCS)
      dcc $(CFLAGS) -o %(left) -c %(right)
