DIRS   = Locale Library Prefs Converter WBStartup Docs

#
TMPDIR = T:
TCOMP  = $(DIRS:"*":"*/compiled")
TCLEAN = $(DIRS:"*":"*/cleaned")

all       : $(TCOMP)

$(TCOMP)  : $(DIRS)
         @CD %(right)
         @Echo "making all in %(right)..."
         @DMake -q
         @CD /

clean     : $(TCLEAN)

$(TCLEAN) : $(DIRS)
         @CD %(right)
         @Echo "making clean in %(right)..."
         @DMake -q clean
         @CD /
