CC = g++ -mcrt=newlib
LD = g++ -mcrt=newlib
CFLAGS = `sdl-config --cflags`
LDFLAGS = `sdl-config --libs` -lSDL_image -lpng -ljpeg -lz -lSDL -lauto
RM   = /bin/rm -f
OBJS = savesurf.o
PROG = savesurf

.PHONY: clean
all: $(PROG)
$(PROG): $(OBJS)
	$(LD) -o $(PROG) $(OBJS) $(LDFLAGS)
savesurf.o: savesurf.c
	$(CC) $(CFLAGS) -c savesurf.c
clean:
	$(RM) *~ $(OBJS) $(PROG)
