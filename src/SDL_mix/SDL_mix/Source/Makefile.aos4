CC = gcc -mcrt=newlib
LD = gcc -mcrt=newlib
CFLAGS = `sdl-config --cflags` 
LDFLAGS = `sdl-config --libs` -lSDL_mixer -lvorbisfile -lvorbis -logg -lSDL
RM   = /bin/rm -f
OBJS = mix.o
PROG = mix

.PHONY: clean
all: $(PROG)
$(PROG): $(OBJS)
	$(LD) -o $(PROG) $(OBJS) $(LDFLAGS)
mix.o: mix.c
	$(CC) $(CFLAGS) -c mix.c
clean:
	$(RM) *~ $(OBJS) $(PROG)
