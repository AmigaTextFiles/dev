; Startup-Menu removal script for CBM Installer
;$VER: SM_remove 1.0
;$AUTHOR: Lee Kindness

(set @default-dest '')

(if (NOT (askbool 
						(prompt 'This script removes Startup-Menu from your system.\nDo you wish to continue?')
						(help '')
					))
	(exit (quiet))
)

; delete SM dir
(foreach 'S:SM' '#?'
		(delete (cat 'S:SM/' @each-name)
			(optional force)
		) 
)

(delete 'S:SM'
	(optional force)
)

;rename ss
(rename 'S:startup-sequence.SMOLD' 'S:startup-sequence')
(delete 'S:startup-sequence.SMOLD')

;delete rexx scripts
(delete 'S:OMP_smexit.rexx')
(delete 'S:OMP_sminit.rexx')

;delete prefs
(delete 'S:startup-menu.prefs')

(message 'Startup-Menu removal complete. Sorry SM was not useful :-(')

(exit
	(quiet)
)


	




