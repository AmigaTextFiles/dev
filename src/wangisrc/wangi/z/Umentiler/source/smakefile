#
# Makefile for Umentiler
#
#

OBJS    = Umentiler.o
LIBS    = LIB:amiga.lib LIB:sc.lib
STARTUP = LIB:cres.o
GST     = INCLUDE:Umentiler.gst

/Umentiler: $(OBJS)
   slink with <<
FROM $(STARTUP) $(OBJS)
LIBRARY $(LIBS)
TO $@
DEFINE @__chkabort=@__dummy
NOICONS
<
   bumprev 1 Umentiler
   Protect $@ p ADD

Umentiler.o: Umentiler.c scoptions INCLUDE:Umentiler.gst
	sc Umentiler.c GST=$(GST) NOLINK

$(GST): gst.c scoptions smakefile
	sc gst.c MAKEGST=$(GST) IGNORE=105 NOOPTIMIZE NOLINK
	delete gst.o

dist:
	execute makedist

