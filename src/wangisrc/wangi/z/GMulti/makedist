failat 21

; cleanup
delete >NIL: #?.o #?.lnk QUIET
delete >NIL: T:GMulti#? T:#?.DIZ ALL QUIET

; Make temp dir in T:
makedir T:GMulti

; copy files
Copy GMulti.guide#? GMulti GMulti.info #?.cfg #?.readme ALL TO T:GMulti QUIET
Copy /GMulti.info GMulti.readme FILE_ID.DIZ TO T: QUIET

Umentiler T:GMulti/GMulti.guide QUIET
Umentiler T:GMulti/GMulti.readme QUIET
Umentiler T:GMulti/MultiLine.cfg QUIET
Umentiler T:GMulti.readme QUIET
Umentiler T:FILE_ID.DIZ QUIET

; archives
lha -arxzq a T:GMulti/src.lha #?.c SCOPTIONS #?make#?
lha -arxZq a T:GMulti.lha t:GMulti t:GMulti.info t:FILE_ID.DIZ
pcd T:
lha2lzx GMulti.lha GMulti.lzx
pcd

; cleanup
delete T:GMulti T:GMulti.info T:#?.DIZ ALL QUIET 
