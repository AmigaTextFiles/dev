; NewEXT install script for CBM Installer
;$VER: NewEXT_install 1.0
;$AUTHOR: Lee Kindness

(set name
	(askdir
		(prompt 'Where will NewEXT be copied to?')
		(help 'This is where you want NewEXT to be located.\n\n'@askdir-help)
		(default 'C:')
	)
)

(set @default-dest name)

(copyfiles
	(help @copyfiles-help)
	(source 'NewEXT')
	(dest name)
)

(transcript '\nNewEXT installed to '@default-dest'\n')

(exit 'I hope you find NewEXT useful.\n    LSK _\\\\//')

	




