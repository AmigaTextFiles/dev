CXX = g++
LD = g++
CXXLAGS = -mcrt=newlib `sdl-config --cflags` 
LDFLAGS = -mcrt=newlib `sdl-config --libs` -mcrt=newlib -lSDL_image -lpng -ljpeg -lz -lSDL_ttf -lfreetype -lz -lsdl -lauto -lm
RM   = /bin/rm -f
OBJS = main.o graphic.o grind.o pathfind.o
PROG = pathfind
VERS = 0.1.0

.PHONY: clean distclean
all: $(PROG)
$(PROG): $(OBJS)
	$(LD) -o $(PROG) $(OBJS) $(LDFLAGS)
clean:
	$(RM) *~ $(OBJS) $(PROG)
.PHONY: clean
