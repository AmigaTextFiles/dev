If R$="C" : R=$C : End If 
If R$="D" : R=$D : End If 
If R$="E" : R=$E : End If 
If R$="F" : R=$F : End If 
Return 
VR:
If R=0 : RC$="0" : End If 
If R=1 : RC$="1" : End If 
If R=2 : RC$="2" : End If 
If R=3 : RC$="3" : End If 
If R=4 : RC$="4" : End If 
If R=5 : RC$="5" : End If 
If R=6 : RC$="6" : End If 
If R=7 : RC$="7" : End If 
If R=8 : RC$="8" : End If 
If R=9 : RC$="9" : End If 
If R=$A : RC$="A" : End If 
If R=$B : RC$="B" : End If 
If R=$C : RC$="C" : End If 
If R=$D : RC$="D" : End If 
If R=$E : RC$="E" : End If 
If R=$F : RC$="F" : End If 
Return 
