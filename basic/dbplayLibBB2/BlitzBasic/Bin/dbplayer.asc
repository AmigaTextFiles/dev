WBStartup
NoCli

DEFTYPE.l

f$ = "pco.dbm"

INCLUDE "BlitzLibs:dbp.bb"

LoadFont 0,"topaz.font",8
Use IntuiFont 0
FindScreen screennum
*scr.Screen = Peek.l(Addr Screen(screennum))

DefaultIDCMP $024C077E
Window windonum,0,0,400,21,$20100E,"DigiBooster Player v0.2 ",0,1

DBMLoad{f$}

p = PlayDBM{0,0}  ; AudioMode / AudioFrequence (Set to -1 For Requester)

GTModuleAttr{}

Print "Inst :"+Str$(InstrNum)
Print " Chan :"+Str$(ChanNum)
Print " PAT :"+Str$(PattNum)
Print " Name :"+Peek$(*_ModName)

For i.w=0 To InstrNum-1
    *name.b = Peek.l(&*_InstrNames + SizeOf.l * i)
    Print "InstNames "+Peek$(*name)
Next

ClearMem{} ; Removes Mod From Memory ....

Repeat
ev.l = WaitEvent

Until ev = #IDCMP_CLOSEWINDOW
._quitProject0
;

StopDBM{}

CloseWindow windonum
Free Screen screennum

End
