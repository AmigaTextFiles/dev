; PureBasicItaCat
; $VER: PureBasicItaCat $VER: 1.0 (12.05.2023)

; Generated by InstallerGen 1.5!

(complete 0)
; MSG_Benvenuto 
(set @app-name "PureBasicItaCat")
(set @default-dest "SYS:")
(welcome "Benvenuto nell'installatore del catalogo ITALIANO di PureBasic v4.00")

(complete 10)
; MSG_Individua PureBasic
(set #default-dest-temp
  (askdir
    (prompt "Indica la posizione dove è installato PureBasic")
    (help @askdir-help)
    (default @default-dest)
  )
)
(set @default-dest #default-dest-temp)

(complete 20)
; MSG_CreaDirLocale
(makedir (tackon @default-dest  "Catalogs/Italiano/")
  (prompt "")
  (help @makedir-help)
)

(complete 50)
; MSG_Copia il catalogo
(copylib
  (source "PB_Compiler.catalog")
  (dest (tackon @default-dest "Catalogs/italiano/"))
  (prompt "Copia PB_Compiler.catalog")
  (help @copylib-help)
  (confirm "average")
)

(copylib
  (source "PB_Editor.catalog")
  (dest (tackon @default-dest "Catalogs/italiano/"))
  (prompt "Copia PB_Editor.catalog")
  (help @copylib-help)
  (confirm "average")
)

(complete 100)
; MSG_Fine 
(exit)
