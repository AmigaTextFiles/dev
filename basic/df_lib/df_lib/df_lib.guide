@node instructions "df_lib - Instructions"
@{line}
@{b}Instructions@{ub}
@{line}
@{line}
@{u}ASL(value,shift)@{uu}
@{line}
Arithmetic shift left where 'shift' is the number of times the bits of 'value' should be shifted.
@{line}
@{line}
@{u}LSR(value,shift)@{uu}
@{line}
Arithmetic shift right.
@{line}
@{line}
@{u}LSL(value,shift)@{uu}
@{line}
Logical shift left.
@{line}
@{line}
@{u}LSR(value,shift)@{uu}
@{line}
Logical shift right.
@{line}
@{line}
@{u}ROL(value,shift)@{uu}
@{line}
Rotation left.
@{line}
@{line}
@{u}ROR(value,shift)@{uu}
@{line}
Rotation right.
@{line}
@{line}
@{u}ROXL(value,shift)@{uu}
@{line}
Rotation left with transfer in X flag.
@{line}
@{line}
@{u}ROXR(value,shift)@{uu}
@{line}
Rotation right with transfer in X flag.
@{line}
@{line}
@{u}ResetTimer()@{uu}
@{line}
Sets the timer to zero.
@{line}
@{line}
@{u}Timer()@{uu}
@{line}
Gets the current time.
@{line}
@{line}
@endnode

