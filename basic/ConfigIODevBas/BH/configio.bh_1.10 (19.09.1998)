REM $underlines

REM $include configio.bc

LIBRARY DECLARE "configio.library"

' --------------------------------------------------------------------
'             Version #  Return value  / Arguments
'             Versión # Valor devuelto / Argumentos
' --------------------------------------------------------------------

DECLARE FUNCTION CfgIO_NewConfig&                      LIBRARY ' v1.00 # cfg&   / appname&, appver&
DECLARE FUNCTION CfgIO_RemConfig&                      LIBRARY ' v1.00 # ret&   / cfg&
DECLARE FUNCTION CfgIO_WriteConfig&                    LIBRARY ' v1.00 # ret&   / cfg&,     filename&
DECLARE FUNCTION CfgIO_ReadConfig&                     LIBRARY ' v1.00 # ret&   / cfg&,     filename&

DECLARE FUNCTION CfgIO_DeleteItem&                     LIBRARY ' v1.00 # ret&   / cfg&,     section&,   itemname&
DECLARE FUNCTION CfgIO_DeleteSection&                  LIBRARY ' v1.00 # ret&   / cfg&,     section&
DECLARE FUNCTION CfgIO_DeleteConfig&                   LIBRARY ' v1.00 # ret&   / cfg&
DECLARE FUNCTION CfgIO_GetSubItem&                     LIBRARY ' v1.00 # ret&   / data&,    cont&,      delimiter&

DECLARE FUNCTION CfgIO_MatchString&                    LIBRARY ' v1.10 # ret&   / str&,     strlist&,

DECLARE FUNCTION CfgIO_WriteString&                    LIBRARY ' v1.00 # res&   / cfg&,     section&,   itemname&,   data&
DECLARE FUNCTION CfgIO_ReadString&                     LIBRARY ' v1.00 # val&   / cfg&,     section&,   itemname&,   def&

DECLARE FUNCTION CfgIO_WriteBool&                      LIBRARY ' v1.00 # res&   / cfg&,     section&,   itemname&,   data&
DECLARE FUNCTION CfgIO_ReadBool&                       LIBRARY ' v1.00 # val&   / cfg&,     section&,   itemname&,   def&

DECLARE FUNCTION CfgIO_WriteSignedInteger&             LIBRARY ' v1.00 # res&   / cfg&,     section&,   itemname&,   data&
DECLARE FUNCTION CfgIO_ReadSignedInteger&              LIBRARY ' v1.00 # val&   / cfg&,     section&,   itemname&,   def&

DECLARE FUNCTION CfgIO_WriteUnsignedInteger&           LIBRARY ' v1.00 # res&   / cfg&,     section&,   itemname&,   data&
DECLARE FUNCTION CfgIO_ReadUnsignedInteger&            LIBRARY ' v1.00 # val&   / cfg&,     section&,   itemname&,   def&

DECLARE FUNCTION CfgIO_WriteFloat&                     LIBRARY ' v1.00 # res&   / cfg&,     section&,   itemname&,   data&
DECLARE FUNCTION CfgIO_ReadFloat#                      LIBRARY ' v1.00 # val#   / cfg&,     section&,   itemname&,   def&

' Warning: CfgIO_ReadFloat# returns a float number
' Advertencia: CfgIO_ReadFloat# devuelve un número de coma flotante

' *EOF*
