(set @app-name "GI1 - Classes")
(set @default-dest "SYS:Classes")
(set #gaddir "SYS:Classes/Gadgets")
(set #imgdir "SYS:Classes/Images")
(run ("SYS:Utilities/MultiView GI1.License")
    (prompt "Please read this File.")
    (help "---")
)
(if (askbool
        (prompt "Install Classes ?")
        (help "---")
        (default 1)
        (choices "Yes" "No")
    )
    (
        (copylib
            (prompt "Copying button.gadget...")
            (help @copylib-help)
            (source "classes/gadgets/button.gadget")
            (dest #gaddir)
            (confirm)
        )
        (copylib
            (prompt "Copying calendar.gadget...")
            (help @copylib-help)
            (source "classes/gadgets/calendar.gadget")
            (dest #gaddir)
            (confirm)
        )
        (copylib
            (prompt "Copying tabs.gadget...")
            (help @copylib-help)
            (source "classes/gadgets/tabs.gadget")
            (dest #gaddir)
            (confirm)
        )
        (copylib
            (prompt "Copying led.image...")
            (help @copylib-help)
            (source "classes/images/led.image")
            (dest #imgdir)
            (confirm)
        )
    )
)