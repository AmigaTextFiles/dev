@DATABASE Menu V1.00
$VER: Pure Basic - Menu library V1.00 (01.09.1999) © Fantaisie Software
@NODE MAIN "Menu V1.00"

  @{b}Pure Basic Menu library V1.00@{ub}

    Menu handle in Pure Basic is very easy and of course
    you can parameter every thing you need. The menu
    automatically use the 'NewLook' feature.

  @{b}Commands summary in alphabetical order:@{ub}

    @{" AttachMenu        " LINK AttachMenu}
    @{" CreateMenu        " LINK CreateMenu}
    @{" FreeMenu          " LINK FreeMenu}
    @{" InitMenu          " LINK InitMenu}
    @{" MenuBar           " LINK MenuBar}
    @{" MenuCheckItem     " LINK MenuCheckItem}
    @{" MenuCheckSubItem  " LINK MenuCheckSubItem}
    @{" MenuItem          " LINK MenuItem}
    @{" MenuTitle         " LINK MenuTitle}
    @{" MenuSubBar        " LINK MenuSubBar}
    @{" MenuSubItem       " LINK MenuSubItem}
    @{" MenuToggleItem    " LINK MenuToggleItem}
    @{" MenuToggleSubItem " LINK MenuToggleSubItem}
    @{" SetMenuColour     " LINK SetMenuColour}

  @{b}Example:@{ub}

    @{" Menu demo         " LINK "/Examples/Sources/Menu.pb/Main"}

@ENDNODE


@NODE AttachMenu

    @{b}SYNTAX@{ub}
  AttachMenu(#Menu, WindowID())

    @{b}STATEMENT@{ub}
  Attach the specified menu to the given window.

  To Detach a menu from a window, you must use the DetachMenu()
  command of the Window library.

@ENDNODE


@NODE CreateMenu

    @{b}SYNTAX@{ub}
  CreateMenu(#Menu, ScreenID())

    @{b}STATEMENT@{ub}
  Creates a previously-defined menu. The ScreenID() is needed as a menu
  must get colour informations from it.

@ENDNODE


@NODE InitMenu

    @{b}SYNTAX@{ub}
  InitMenu(MaxMenus, MaxMenuItems)

    @{b}STATEMENT@{ub}
  Init the menu library for future use. MaxMenu is the number
  of maximum MenuList you will handle. MaxMenuItems is the
  max menus of item you could have in one MenuList.

@ENDNODE


@NODE MenuTitle

    @{b}SYNTAX@{ub}
  MenuTitle(Title$)

    @{b}STATEMENT@{ub}
  Creates a title entry for the menu

@ENDNODE


@NODE MenuItem

    @{b}SYNTAX@{ub}
  MenuItem(MenuID, Text$, ShortCut)

    @{b}STATEMENT@{ub}
  Creates an item entry for the menu.

@ENDNODE


@NODE MenuSubItem

    @{b}SYNTAX@{ub}
  MenuSubItem(MenuID, Text$, ShortCut)

    @{b}STATEMENT@{ub}
  Creates a subitem entry for the menu.

@ENDNODE


@NODE MenuBar

    @{b}SYNTAX@{ub}
  MenuBar()

    @{b}STATEMENT@{ub}
  Creates a separator bar for the menu.

@ENDNODE


@NODE MenuSubBar

    @{b}SYNTAX@{ub}
  MenuSubBar()

    @{b}STATEMENT@{ub}
  Creates a separator bar for the menu.

@ENDNODE



@NODE SetMenuColour

    @{b}SYNTAX@{ub}
  SetMenuColour(colour)

    @{b}STATEMENT@{ub}
  Set the front menu colour for newly-created  menus.  Must  be  called
  before the create menu command or it wonn't have any effect.

@ENDNODE


@NODE FreeMenu

    @{b}SYNTAX@{ub}
  FreeMenu(#Menu)

    @{b}STATEMENT@{ub}
  Remove the specified menu from memory. After calling this function,
  you can't attach this menu anymore, but you can reuse the #menu
  number for another menulist.

@ENDNODE


@NODE MenuCheckItem

    @{b}SYNTAX@{ub}
  MenuCheckItem(#Item, Label$, CommandKey$, State)

    @{b}STATEMENT@{ub}
  Add a 'Check' type menu entry to the menu list
  which is being created.

@ENDNODE


@NODE MenuCheckSubItem

    @{b}SYNTAX@{ub}
  MenuCheckSubItem(#Item, Label$, CommandKey$, State)

    @{b}STATEMENT@{ub}
  Add a 'Check' type menu sub-entry to the menu list
  which is being created.

@ENDNODE


@NODE MenuToggleItem

    @{b}SYNTAX@{ub}
  MenuToggleItem(#Item, Label$, CommandKey$, State)

    @{b}STATEMENT@{ub}
  Add a 'Toggle' type menu entry to the menu list
  which is being created.

@ENDNODE


@NODE MenuToggleSubItem

    @{b}SYNTAX@{ub}
  MenuToggleSubItem(#Item, Label$, CommandKey$, State)

    @{b}STATEMENT@{ub}
  Add a 'Toggle' type menu sub-entry to the menu list
  which is being created.

@ENDNODE
