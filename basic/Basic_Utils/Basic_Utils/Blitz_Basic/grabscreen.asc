WBStartup

Goto SkipVer
  Even
  Dc.b "$VER: grabscreen 36.2 (21.07.97)",10,13,0
  Even
.SkipVer:

If NumPars=0
  Gosub fehler
  End
End If

If Par$(1)="?"
  Gosub hilfe
  End
End If

If NumPars=2
  FindScreen 0,Par$(2)
Else
  FindScreen 0
End If

Use Screen 0
SaveScreen 0,Par$(1)
End

.hilfe:
  PutStr_ "Usage: grabscreen file_name [screen_name]"+Chr$(10)
  PutStr_ Chr$(10)
  PutStr_ "Grabscreen saves a screen to an ILBM file. If no screen name"+Chr$(10)
  PutStr_ "is stated, the front screen is grabbed."+Chr$(10)
Return

.fehler:
  PutStr_ "grabscreen: required argument missing"+Chr$(10)
Return

