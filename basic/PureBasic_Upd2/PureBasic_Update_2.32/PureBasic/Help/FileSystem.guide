@DATABASE FileSystem
$VER: PureBasic FileSystem Library - (c) 2001 Fantaisie Software
@NODE CopyFile

  @{b}Syntax@{ub}
    Result = @{b}CopyFile@{ub}(SourceFileName$, DestinationFileName$)
    
  @{b}Description@{ub}
    Copy the source file to the destination. Warning, if the file already exists, it will be
    erased automatically. If the Result is 0, the file can't be copied.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE CreateDirectory

  @{b}Syntax@{ub}
    Result = @{b}CreateDirectory@{ub}(DirectoryName$)
    
  @{b}Description@{ub}
        Create a new directory. If Result is 0, the directory can't be created.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE DeleteFile

  @{b}Syntax@{ub}
    Result = @{b}DeleteFile@{ub}(FileName$)
    
  @{b}Description@{ub}
        Delete the specified file. If the Result is 0, the file can't be deleted.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE DirectoryEntryName

  @{b}Syntax@{ub}
    FileName$ = @{b}DirectoryEntryName@{ub}()
    
  @{b}Description@{ub}
    Return the name of the current entry in the directory being listed with @{" ExamineDirectory() " LINK ExamineDirectory} and
    @{" NextDirectoryEntry() " LINK NextDirectoryEntry} commands.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE ExamineDirectory

  @{b}Syntax@{ub}
    Result = @{b}ExamineDirectory@{ub}(DirectoryName$, Pattern$)
    
  @{b}Description@{ub}
        Start to examine the specified directory for future listing with commands @{" NextDirectoryEntry() " LINK NextDirectoryEntry}
    and @{" DirectoryEntryName() " LINK DirectoryEntryName}. The Pattern$ specify which files must be listed. 
    For example: "*.*" or "" will list all the file in the directory. "*.exe" will list only .exe files. 
    If the result is 0, the directory can't be examined.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE FileSize

  @{b}Syntax@{ub}
    Result = @{b}FileSize@{ub}(FileName$)
    
  @{b}Description@{ub}
    Return the size of the specified file. If the file isn't found, it return -1.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE NextDirectoryEntry

  @{b}Syntax@{ub}
    Result = @{b}NextDirectoryEntry@{ub}()
    
  @{b}Description@{ub}
    This command must be called after an @{" ExamineDirectory() " LINK ExamineDirectory}. It will go step by step into
    the directory and list its content. The entry name can be get with the @{" DirectoryEntryName() " LINK DirectoryEntryName}
    command. The 'Result' can take the following values:
    - 0: no more entry in the directory
    - 1: this entry is a file
    - 2: this entry is a directory
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
        
@ENDNODE
@NODE RenameFile

  @{b}Syntax@{ub}
    Result = @{b}RenameFile@{ub}(OldFileName$, NewFileName$)
    
  @{b}Description@{ub}
    Rename the old file to the new file. If the Result is 0, the rename has failed.
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
@ENDNODE

@NODE Main "FileSystem"
    
  @{b}Overview@{ub}
        FileSystem is a generic term which deal with all advanced file related manipulations. For example, it's
    possible to read a directory content, create a new directory and more...
    
  @{b}Command Index@{ub}

    @{" CopyFile           " LINK CopyFile}
    @{" CreateDirectory    " LINK CreateDirectory}
    @{" DeleteFile         " LINK DeleteFile}
    @{" DirectoryEntryName " LINK DirectoryEntryName}
    @{" ExamineDirectory   " LINK ExamineDirectory}
    @{" FileSize           " LINK FileSize}
    @{" NextDirectoryEntry " LINK NextDirectoryEntry}
    @{" RenameFile         " LINK RenameFile}
    
  @{b}Example@{ub}

    @{" FileSystem.pb      " LINK "PureBasic:Examples/Sources/FileSystem.pb/Main"}
    
  @{b}Supported OS@{ub}
    Windows, AmigaOS, Linux
@ENDNODE

