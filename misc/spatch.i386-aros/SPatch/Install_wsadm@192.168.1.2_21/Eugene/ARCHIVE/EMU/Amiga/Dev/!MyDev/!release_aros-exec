;
; $VER: spatch 6.51 rel. 4 - Clone of SAS Binary File Patcher
;
;=============================================================================
; Set defaults

(set #appName "spatch")
(set #defaultDest "RAM:")
(set #destination "C:")

;----------------------------------------------------------------------------

;=============================================================================
; set up the source and destination path
(complete 50)

    (set #source (cat "C/"#appName))

;=============================================================================
; Copy main executable
(complete 90)

(copyfiles
    (prompt #source)
	(source #source)
	(newname #appName)
	(dest (tackon #appName #destination))
	(help @copyfiles-help)
	(confirm)
)
;=============================================================================
; Final message
(complete 100)

(message "Installation complete!\n\n spatch cmd was copied to C:\")

;----------------------------------------------------------------------------
(exit (QUIET))
