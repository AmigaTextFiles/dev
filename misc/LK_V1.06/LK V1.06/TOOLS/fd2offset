.key src,typ,verbose/s
.bra {
.ket }

; $VER: fd2offset 1.00 (17.7.94)
; Define a list of offset from an FD file

If "{src}" EQ ""
  Echo "fd2offset -- V1.01 Quick FD file to OFFSET tranformer"
  Echo "Usage: fd2offset [SRC] <filename> [TYP] ASM or C or PASCAL or OBJECT [VERBOSE]"
  Quit 0
EndIf
If "{typ}" EQ "ASM"
  lk QDSTOP FD {src} FDINCLUDE {verbose}
Else
If "{typ}" EQ "C"
  lk QDSTOP FD {src} FDHEADER {verbose}
Else
If "{typ}" EQ "PASCAL"
  lk QDSTOP FD {src} FDPASCAL {verbose}
Else
If "{typ}" EQ "OBJECT"
  lk QDSTOP FD {src} FDOBJECT
Else
  Echo "fd2offset -- V1.01 Quick FD file to OFFSET tranformer"
  Echo "Usage: fd2offset [SRC] <filename> [TYP] ASM or C or PASCAL or OBJECT [VERBOSE]"
  Echo ""
  Echo "ERROR: invalid type."
  Quit 5
EndIf
EndIf
EndIf
EndIf
