 \/ The window demo \/

BEGIN(MAIN)
    SCREEN(320,256,5,$0)
    TrackLoad(Visions:Data/Window/Happy.mod)
    GOTO(wait)
STOP

BEGIN(wait)
    ILBM(Visions:Data/Window/win.iff)
    AddZone(200,65,218,83,$0,start)
    Glow(200,65,218,83,2,0,0,0)
STOP

BEGIN(start)
    Anim(Visions:Data/Window/window.anim,20)
    TrackPlay
    AnimWait
    TrackStop
    GOTO(wait)
STOP


