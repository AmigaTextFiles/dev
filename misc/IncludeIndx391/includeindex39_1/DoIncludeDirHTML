.key ROOT/A,DIR/A,PAT/A
.bra [
.ket ]

; $VER: DoIncludeDirHTML 39.1 (25.7.95)
; by Bruce M. Simpson <bsimpson@touchdwn.demon.co.uk>
;
; Generate an HTML index file for current include directory


; build header for this directory
echo >t:__makeindx_temp_$$ "<!DOCTYPE HTML PUBLIC *"-//IETF//DTD HTML//EN*">*n<!-- Generated on `Date` -->*n<HTML>*n<HEADER>*n<TITLE>Index of Include Directory [ROOT][DIR]</TITLE>*n</HEADER>*n*n<BODY><P>*n<H2>Include Files</H2>*n<P>*n<UL>*n"

; build entry for each file
list DIR=[ROOT][DIR] p=[PAT] files lformat "<li><a HREF=*"%n*">%n</a>" | psort >>t:__makeindx_temp_$$

; terminate HTML file
echo >>t:__makeindx_temp_$$ "</ul>*n*n<P><HR><P></BODY></HTML>"

; copy it to appropriate dir
copy T:__makeindx_temp_$$ [ROOT][DIR]/index.html quiet noreq
