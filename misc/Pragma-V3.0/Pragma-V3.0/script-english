; script d'installation de pragma V2.1
; version Anglaise

(message "\n\n\nInstallation Script\n" "Pragma V2.1\n" "Developed by CASSE Hugues")
(set #dst (askdir	(prompt "Installation directory:")
			(help "Choire in which directory Pragma command must be installed.\n  default directory C:")
			(default "C:")
	  )
)
(copyfiles	(source "pragma")
		(dest #dst)
)
(set #dest (askdir	(prompt "Help installation directory:")
			(help "Choose installation directory for documentation\n  Default directory HELP:")
			(default "HELP:")
	  )
)
(copyfiles	(source "Pragma-English.guide")
		(dest #dest)
)
(exit "Installation of Pragma V2.1 finished !")
