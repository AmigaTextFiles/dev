; script d'installation de pragma V2.1
; version Française

(message "\n\n\nScript d'installation\n" "Pragma V2.1\n" "Développé par CASSE Hugues")
(set #dst (askdir	(prompt "Répertoire d'installation:")
			(help "Choisissez dans quel répertore la commande Pragma doit être installé.\n  C: par défaut")
			(default "C:")
	  )
)
(copyfiles	(source "pragma")
		(dest #dst)
)
(set #dest (askdir	(prompt "Répertoire d'installation de l'aide:")
			(help "Choisissez le répertoire d'installation de la documentation\n  HELP: par défaut")
			(default "HELP:")
	  )
)
(copyfiles	(source "Pragma-Français.guide")
		(dest #dest)
)
(exit "Installation de Pragma V2.1 terminée !")
