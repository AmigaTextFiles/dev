; $VER: Install_f1gp.library 1.0 (10.9.99)
;   by Oliver Roberts (oliver.roberts@iname.com)

(if (= (exists "Env:Language") 1)
	(set @language (getenv "Language"))
)

;*****************
; English strings
;
(set #str-askdir "Where should the library be installed?\n(LIBS: will usually be adequate)")
(set #str-installlib "Installing f1gp.library")

;*************
; Here we go!
;
(set @default-dest "LIBS:")

(working #str-installdt)

(set @default-dest
	(askdir
		(prompt #str-askdir)
		(help @askdir-help)
		(default @default-dest)
	)
)

(copylib
	(help @copylib-help)
	(prompt #str-installlib)
	(source "libs/f1gp.library")
	(dest @default-dest)
	(confirm)
)

(exit)
