; $Id: AutodocViewer_Installer v1.32 (2 April 1999)
; $VER: AutodocViewer_Installer v1.32 Copyright © 1994-1999 Ronny Tennebekk (2 April 1999)

(set @default-dest "SYS:")
(set programme "AutodocViewer")
(set progver "1.32")
;(set docs-dir 0)

;------------------------------------------------------------
; English strings
;------------------------------------------------------------

(set #install-msg
    (cat "\n\n"programme " v" progver " (2.04.99)\n"
         "Copyright © 1994-1999 Ronny Tennebekk\n\n\n"
         "\nThis install script will install\n"
         "AutodocViewer on you harddisk...\n"
    )
)

(set #install-prefs
    (cat "\n\nDo you want to copy the example prefs file?\n"
         "Note that if you got exsisting prefs file this\n"
         "will be overwritten!\n"
    )
)

(set #bad-kick
    (cat "\n\nYou must have Kickstart 3.0 or higher installed to use " programme "!"
    )
)

(set #app-where
    (cat "Where do you what "programme" to be installed?.\n"
         "No directiry will be created!\n"
    )
)

(set #copying
    (cat "Copying " programme
    )
)

(set #install-quest
    (cat "\n\nDo you want to install the documentation???\n"
    )
)


;============================================================
; make sure we are running under a 3.0 ROM


(if (< (/ (getversion) 65536) 39)
    (
        (abort #bad-kick)
    )
)


;============================================================
;

(complete 0)

(message #install-msg)

(welcome)

(set app-dir
    (askdir
        (prompt #app-where)
        (help @askdir-help)
        (default @default-dest)
    )
)

(

    (copyfiles
        (prompt "\n" #copying)
        (source "tools/AutodocViewer")
        (dest app-dir)
    )

     (copyfiles
        (source "tools/AutodocViewer.info")
        (dest app-dir)
    )
)


;============================================================
; install docs

(if ((askbool (prompt #install-quest)
              (help @askdir-help)
    )

        (copyfiles
            (source "docs/AutodocViewer.guide")
            (dest app-dir)
        )

        (copyfiles
            (source "docs/AutodocViewer.guide.info")
            (dest app-dir)
        )

        (copyfiles
            (source "docs/ScreenShot.iff")
            (dest app-dir)
        )
    )
)


;============================================================
; ask if user want's copy existing prefs installed

(if ((askbool (prompt #install-prefs)
              (help @askbool-help)
    )

        (copyfiles (source "tools/AutodocViewer.prefs")
                   (dest app-dir)
        )
    )
)


;============================================================

;

(set @default-dest app-dir)
(complete 100)
(exit)
