;Localizer 1.36 installation script

;ask for dir
(complete 0)
(set #dir
    (askdir
        (prompt "Please select where you want to install Localizer.\nA directory named Localizer will be created if it does not exist.")
        (help @askdir-help)
        (default "SYS:")
    )
)
(set #olddir #dir)
;check if exists
(set #dir
    (tackon #dir "Localizer")
)
;creates dir if not exists
(set #makedir
    (exists #dir (noreq))
)
(if (= #makedir 0)
    (makedir #dir)
)
;copy dir icon
(complete 4)
(copyfiles
    (prompt "Copying drawer icon")
    (source "/Localizer.info")
    (dest #olddir)
)
;copy main executable
(complete 7)
(copyfiles
    (prompt "Copying main executable")
    (source "Localizer")
    (dest #dir )
    (infos)
)
;copy docs
(complete 14)
(copyfiles
    (prompt "Copying documentation")
    (source "Localizer.guide")
    (dest #dir )
    (infos)
)
;copy projects dir
(complete 21)
(makedir
    (tackon #dir "Projects")
;    (prompt "Copying projects dir")
)
;install MUI classes
(complete 28)
(copylib
    (prompt "Copying NList.mcc class.")
    (help @copylib-help)
    (source "libs/NList.mcc")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 37)
(copylib
    (prompt "Copying NListview.mcc class.")
    (help @copylib-help)
    (source "libs/NListview.mcc")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 46)
(copylib
    (prompt "Copying NListviews.mcp class.")
    (help @copylib-help)
    (source "libs/NListviews.mcp")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 55)
(copylib
    (prompt "Copying NFloattext.mcc class.")
    (help @copylib-help)
    (source "libs/NFloattext.mcc")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 64)
(copylib
    (prompt "Copying TextEditor.mcc class.")
    (help @copylib-help)
    (source "libs/TextEditor.mcc")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 73)
(copylib
    (prompt "Copying TextEditor.mcp class.")
    (help @copylib-help)
    (source "libs/TextEditor.mcp")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 82)
(copylib
    (prompt "Copying BetterString.mcc class.")
    (help @copylib-help)
    (source "libs/BetterString.mcc")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 91)
(copylib
    (prompt "Copying BetterString.mcp class.")
    (help @copylib-help)
    (source "libs/BetterString.mcp")
    (dest "MUI:libs/mui/")
    (confirm)
    (optional "oknodelete" "force")
)
(complete 100)
(exit
    (quiet)
)

