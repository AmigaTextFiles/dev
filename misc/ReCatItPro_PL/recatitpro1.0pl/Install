(IF (>= (/ @installer-version 65536) 44)          
        (EFFECT "center" "radial" $000000 $0000FF)
)                                                 

(message "Witaj przyszîy uûytkowniku nowego produktu TranceLetters!\n" 
          "Wîaônie uruchomiîeô procedurë, która zainstaluje polskâ"
          " lokalizacjë do programu ReCatItPro1.0.\n\n"
          "(c) TranceLetters\n\n"
          "sirhaker@interia.pl"
          "\n\n TranceLetters 2001\nwww.tranceletters.prv.pl"
)
;*** Directory Select ***

(complete 50)
(copyfiles
  (source "")
  (dest "Sys:Locale/Catalogs/Polski/")
  (pattern "#?.catalog")
)

(complete 75)
(complete 100)


(exit "\nInstalacja zakoïczona pomyôlnie!\nOd tej chwili moûesz cieszyê"
" sië programem ReCatItPro1.0 w jëzyku polskim."
"\n\n(c) TranceLetters\n\n"
"sirhaker@interia.pl"
"\n\n TranceLetters 2001\nwww.tranceletters.prv.pl"
)
