CROSS_COMPILE = ppc-morphos-
CC = $(CROSS_COMPILE)gcc
STRIP = $(CROSS_COMPILE)strip

CFLAGS = -c -O3 -Wall -noixemul
LDFLAGS = -noixemul

revbump.mos: revbump.o
	$(CC) -o $@.debug $^ $(LDFLAGS)
	$(STRIP) -s $@.debug -o $@

revbump.o: revbump.c revbump.h revbump_rev.h
	$(CC) $< $(CFLAGS)

clean:
	rm -f revbump.mos revbump.mos.debug *.o
