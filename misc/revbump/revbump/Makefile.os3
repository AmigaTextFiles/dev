CROSS_COMPILE = m68k-amigaos-
CC = $(CROSS_COMPILE)gcc
STRIP = $(CROSS_COMPILE)strip

CFLAGS = -c -O3 -Wall -noixemul
LDFLAGS = -noixemul

revbump.os3: revbump.o
	$(CC) -o $@.debug $^ $(LDFLAGS)
	$(STRIP) -s $@.debug -o $@

revbump.o: revbump.c revbump.h revbump_rev.h
	$(CC) $< $(CFLAGS)

clean:
	rm -f revbump revbump.debug *.o
