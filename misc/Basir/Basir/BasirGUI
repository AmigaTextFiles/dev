; Quote
SETENV Basirquote """

; Compose command line
ECHO >T:Basircmd "Basir " NOLINE

; Ask file names
REQUESTFILE >ENV:Basirsrc TITLE="Select source file..." DRAWER="RAM:" NOICONS
IF WARN
 SKIP Exit
ENDIF
REQUESTFILE >ENV:Basirtrg TITLE="Save As..." DRAWER="RAM:" SAVEMODE NOICONS
IF WARN
 SKIP Exit
ENDIF

; Compose command line
ECHO >>T:Basircmd ">" NOLINE
ECHO >>T:Basircmd $Basirtrg NOLINE
ECHO >>T:Basircmd " " NOLINE
TYPE >>T:Basircmd ENV:Basirquote
ECHO >>T:Basircmd $Basirsrc NOLINE
TYPE >>T:Basircmd ENV:Basirquote

; Execute command line
EXECUTE T:Basircmd

; Clean up
DELETE ENV:Basirsrc QUIET
DELETE ENV:Basirtrg QUIET
DELETE ENV:Basirquote QUIET
DELETE T:Basircmd QUIET

LAB Exit
