OPTIONS RESULTS
OPTIONS FAILAT 11
ADDRESS EASYRCS

'askstring "Remove symbol everywhere" Symbol'

if (RC == 0) then
do
    symb = RESULT

    'query showstate'
    show_old = RESULT
    'show both'
    'select top'

    DO while RC == 0
        /* symbol for each file */
        'symbol REMOVE NAME' symb

        'select next'
        END

    'show' show_old
    end
