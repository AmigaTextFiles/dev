///FLEXCAT
# PROJECT #
# paths are relative to the project directory (current directory during make)

OUTFILE =

OBJDIR  =

# BUILDER #
LD = Flexcat

LWARNS =
LDEFS  =
LFLAGS = NOOPTIM WARNCTGAPS

LINK   = $(LD) $(LWARNS) $(LFLAGS)

OBJS =

all:
	@make -s $(addsuffix /$(OUTFILE).catalog, $(OBJS))
	@echo "Localize for <$(OUTFILE)> is done."

%.catalog: $(OUTFILE).cd %.ct
	@echo "build <$@>"
	@$(LINK) $(OUTFILE).cd $*.ct CATALOG $@ $(LFLAGS)

install:

///
///SIMPLECAT
# PROJECT #
# paths are relative to the project directory (current directory during make)

OUTFILE =

OBJDIR  =

# BUILDER #
LD = SimpleCat

LWARNS =
LDEFS  = english
LFLAGS = QUIET NOOPT

LDCS   = $(OUTFILE).cs

LINK   = $(LD) $(LWARNS) $(LFLAGS)

OBJS =

all: $(OUTFILE).cd
	@make -s $(addsuffix /$(OUTFILE).ct, $(OBJS))
	@make -s $(addsuffix /$(OUTFILE).catalog, $(OBJS))
	@echo "Localize for <$(OUTFILE)> is done."

$(OUTFILE).cd: $(LDCS)
	@echo "build <$@> (default language is <$(LDEFS))>"
	@$(LINK) $(LDCS) EXPORT FILES $< $@ $(LDEFS)
	@$(LINK) $(LDCS) EXPORT FILES $< $(OUTFILE).ct $(LDEFS)

%.ct: $(LDCS)
	@echo "build <$@>"
	@$(LINK) $(LDCS) EXPORT FILES $< $@ $(subst $(OBJDIR),,$(subst /$(OUTFILE).ct,,$@))

%.catalog: $(LDCS) $(OUTFILE).cd	%.ct
	@echo "build <$@>"
	@$(LINK) $(LDCS) EXPORT FILES $@ $(subst $(OBJDIR),,$(subst /$(OUTFILE).catalog,,$@)) $(subst .catalog,.ct,$@) $(subst $(OBJDIR),,$(subst /$(OUTFILE).catalog,,$@))

install:

