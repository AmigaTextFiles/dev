*** Config file for makemake ***

Note:
Each new section for the compiler/tool must begin with the string ///name and end a string ///

Don't change the reserved words such as:
OUTFILE : output file name
OUTDIR  : path for output file
OBJDIR  : path for the object(s) generated by the compiler

CC      : compiler file name
CWARNS,CDEFS,CFLAGS  : compiler's flags
CLIBS   : include file(s)/directories

LD      : linker file name
LWARNS,LDEFS,LFLAGS  : linker's flags
LIBS    : static linked file(s)

OBJS    : here will be add (by makemake) object list to create

*** BEGIN ***
///vbcc
# PROJECT #
# paths are relative to the project directory (current directory during make)

OUTFILE =

OUTDIR  =
OBJDIR  =

PROJECT = $(OUTDIR)$(OUTFILE)

# TOOLS SPECS #
TARGET =

# COMPILER #
CC = vbcc:bin/vc

CWARNS =
CDEFS  =
CFLAGS =
CLIBS  =

COMPILE = $(CC) $(TARGET) $(CWARNS) $(CDEFS) $(CFLAGS) $(CLIBS)

# LINKER #
LD = vbcc:bin/vc

LWARNS =
LDEFS  =
LFLAGS =
LIBS   =

LINK   = $(LD) $(TARGET) $(LWARNS) $(LDEFS) $(LFLAGS)

# target 'all' (default target)
all: $(PROJECT)

# target 'compiler' (compile target)
	$(COMPILE) -c -o %obj %src

OBJS =

# link all file(s)
$(PROJECT): $(OBJS)
	@$(LINK) -o $(PROJECT) $(OBJS) $(LIBS)
	@echo "Build <$(OUTDIR)$(OUTFILE)> is done."

# any other targets

strip:

clean:
	-delete $(PROJECT)
	-delete $(OBJDIR)\*.o

dump:

install:
	copy $(PROJECT) //

dist:

