
##############################################################################
#
#	TEKlib - AmigaOS3.x, SAS/C
#
##############################################################################

RM = delete quiet force
CP = copy quiet
CAT = type
MAKE = smake
CC = sc

build/amiga/smakefile:	build/amiga/Makefile_amiga_sasc_prolog build/Makefile_main build/amiga/Makefile_amiga_sasc_epilog
		$(CAT) build/amiga/Makefile_amiga_sasc_prolog > build/amiga/smakefile
		$(CAT) build/Makefile_main >> build/amiga/smakefile
		$(CAT) build/amiga/Makefile_amiga_sasc_epilog >> build/amiga/smakefile

teklib:	build/amiga/smakefile
		$(MAKE) -f build/amiga/smakefile teklib

teklibvisual:	build/amiga/smakefile
				$(MAKE) -f build/amiga/smakefile teklibvisual

teklibmonster:	build/amiga/smakefile
		$(MAKE) -f build/amiga/smakefile teklibmonster

teklibvisualmonster:	build/amiga/smakefile
						$(MAKE) -f build/amiga/smakefile teklibvisualmonster

all:	teklibvisualmonster

clean:	build/amiga/smakefile
		$(MAKE) -f build/amiga/smakefile clean

distclean:	build/amiga/smakefile
		$(MAKE) -f build/amiga/smakefile clean
		-$(RM) amimonster.c amimonster.asm build/amiga/smakefile
