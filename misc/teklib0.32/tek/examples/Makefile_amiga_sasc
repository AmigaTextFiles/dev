##############################################################################
#
#	amiga/sasc examples makefile
#
##############################################################################

RM = delete quiet

CC = sc debug=symbolflush nominc memsize=huge noerrorhigh noicons code=near data=fo \
	params=r prec=mixed strsect=code strmer nochkabort nostkchk nostkext \
	cpu=68030 math=68882 idir // noerrorhighlight

LD = slink SMALLCODE DEFINE @__chkabort=@__dummy FROM LIB:c.o	\
	LIB /tek.lib lib:debug.lib LIB:scm881nb.lib LIB:scnb.lib LIB:amiga.lib

all:	dynamicsystem balls bashing	array dino client server killserver \
		heaptest randomtest string subtask subtask2 timetest taskterror kine/kine

dynamicsystem: dynamicsystem.o
	$(LD) FROM dynamicsystem.o TO dynamicsystem

balls: balls.o
	$(LD) FROM balls.o TO balls

bashing: bashing.o
	$(LD) FROM bashing.o TO bashing

array: array.o
	$(LD) FROM array.o TO array

dino: dino.o
	$(LD) FROM dino.o TO dino

client: client.o
	$(LD) FROM client.o TO client

server: server.o
	$(LD) FROM server.o TO server

killserver: killserver.o
	$(LD) FROM killserver.o TO killserver

heaptest: heaptest.o
	$(LD) FROM heaptest.o TO heaptest

randomtest: randomtest.o
	$(LD) FROM randomtest.o TO randomtest

string: string.o
	$(LD) FROM string.o TO string

subtask: subtask.o
	$(LD) FROM subtask.o TO subtask

subtask2: subtask2.o
	$(LD) FROM subtask2.o TO subtask2

timetest: timetest.o
	$(LD) FROM timetest.o TO timetest

taskterror: taskterror.o
	$(LD) FROM taskterror.o TO taskterror

kine/kine: kine/kine.o kine/mathutil.o
	$(LD) FROM kine/kine.o kine/mathutil.o TO kine/kine


clean:
	-$(RM) *.o balls dynamicsystem balls bashing array dino client server killserver
	-$(RM) heaptest randomtest string subtask subtask2 timetest taskterror
	-$(RM) kine/kine kine/*.o
		
