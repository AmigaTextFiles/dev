##############################################################################
#
#	Linux/i386/gcc examples makefile
#
##############################################################################

RM = rm -f
CC = gcc

CFLAGS = -Wall -O3 -I ../../ -g -DTDEBUG=1
LDFLAGS = -lpthread -lX11 -L /usr/X11R6/lib -lm

.c.o: 
	$(CC) $(CFLAGS) -c $< -o $@

all:	dynamicsystem balls bashing	array dino client server killserver \
		heaptest randomtest string subtask subtask2 timetest taskterror kine/kine
		
dynamicsystem:	../libtek.a dynamicsystem.o

balls:	../libtek.a balls.o

bashing: ../libtek.a bashing.o

array: ../libtek.a array.o

dino: ../libtek.a dino.o

client: ../libtek.a client.o

server: ../libtek.a server.o

killserver: ../libtek.a killserver.o

heaptest: ../libtek.a heaptest.o

randomtest: ../libtek.a randomtest.o

string: ../libtek.a string.o

subtask: ../libtek.a subtask.o

subtask2: ../libtek.a subtask2.o

timetest: ../libtek.a timetest.o

taskterror: ../libtek.a taskterror.o

quantize: ../libtek.a quantize.o

kine/kine: ../libtek.a kine/kine.o kine/mathutil.o

quant/test: ../libtek.a quant/quantize.o quant/test.o

clean:
	$(RM) *.o balls dynamicsystem balls bashing	array dino client server killserver \
		heaptest randomtest string subtask subtask2 timetest taskterror kine/kine kine/*.o
