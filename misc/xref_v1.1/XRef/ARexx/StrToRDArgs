/* convert string to a RDArgs suitable string */

PARSE ARG str

if str ~= '' then do
 help = str
 str = ''
 do i = 1 to length(help)
   char = substr(help, i, 1)
   if char = '*' then
     char = '**'
   if char = '"' then
     char = '*"'
   str = insert(char, str, length(str))
 end
end
exit str


