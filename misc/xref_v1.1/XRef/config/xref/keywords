;
; header-files keywords
;
KEYWORD "struct"   SUBSTITUTE "@{b}%s@{ub}"              NEXTWORD                         
KEYWORD "#define"  SUBSTITUTE "@{b}%s@{ub}"              NEXTWORD                         
;
; autodoc-files keyword like NAME,SYNOPSIS or something like that
;
KEYWORD AUTODOC    SUBSTITUTE "@{b}%s@{ub}"
;
; make some words highlighted
;
KEYWORD "REQUIRED" SUBSTITUTE "@{fg highlight}%s@{fg text}"
KEYWORD "$VER:"    SUBSTITUTE "@{fg highlight}%s@{fg text}"    NEXTWORD
;
; some C chacater constants
;
KEYWORD "\t"         SUBSTITUTE "@{TAB}"
;
; escape AmigaGuide control characters
;
KEYWORD "@"          SUBSTITUTE "\@"
KEYWORD "\"          SUBSTITUTE "\\"

