abstract class file
{
    Object class com.amiga.system.doswrapper dos
    Object class system.string filename
    long filehandle

    public readOpenFile(long name)
    {
        filehandle=dos.Open(name,#MODE_OLDFILE)
        if filehandle=0
         {
           return false
         }
        return true
    }

    public writeOpenFile(long name)
    {
        filehandle=dos.Open(name,#MODE_NEWFILE)
        if filehandle=0
         {
           return false
         }
        return true
    }

    public closeFile(long filehandle)
    {
        dos.Close(filehandle)
        return 0
    }

    abstract public Seekfile(long filehandle,long Offset,long Mode)
    abstract public Read(long Filehandle,long Buffer,long Bytes)
    abstract public Write(long Filehandle,long Buffer,long Bytes)
}
