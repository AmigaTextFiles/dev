(set @default-dest
        (askdir
                (prompt "Where do you wish to install ?! No Directory will be created !!!")
                (help @askdir-help)
                (default "sys:")
        )
)

(copylib
        (prompt "Copying expname.library to libs: assign.")
        (help @default-help)
        (source "LIBS/expname.library")
        (dest "libs:")
        (confirm expert)
)
(copylib
        (prompt "Copying identify.library to libs: assign.")
        (help @default-help)
        (source "LIBS/identify.library")
        (dest "libs:")
        (confirm expert)
)
(copyfiles
        (prompt "Copying TXAutoDocReader to " @default-dest)
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "ADocReader")
        (files)
        (infos)
        (confirm)
)
(copyfiles
        (prompt "Copying AppIcon to " @default-dest)
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "TXADRAPP.info")
        (files)
        (infos)
        (confirm)
)
(copyfiles
        (prompt "Copying Structure.offsets to " @struct)
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "Structure.offsets")
        (files)
        (confirm)
)
(set cdsrc (cat "catalogs/" @language "/"))
(set cddes (cat "locale:catalogs/" @language "/"))
(copyfiles
        (prompt "Installing Catalog files")
        (help @copyfiles-help)
        (source cdsrc)
        (dest cddes)
        (pattern "#?")
        (files)
        (confirm)
)
(if (= @language "deutsch")
(copyfiles
        (prompt "Copying Documentation")
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "ADR_GER_40.GUIDE")
        (files)
        (infos)
        (confirm)
)
else
(copyfiles
        (prompt "Copying Documentation")
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "ADR_ENG_40.GUIDE")
        (files)
        (infos)
        (confirm)
)
)
(copyfiles
        (prompt "Copying History")
        (help @copyfiles-help)
        (source "")
        (dest @default-dest)
        (pattern "history.guide")
        (files)
        (infos)
        (confirm)
)
(if
        (askbool
                (prompt "Would you like to get a free registration ?!")
                (help "It's up to YOU.")
                (choices "YES" "NO :(")
                (default 0)
        )

(run "TXADRRegistrator"
        (prompt "Running TXADRRegistrator")
        (help "This will only work from the CLI!")

)
else

)
