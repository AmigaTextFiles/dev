/* LoadLOGO.qed  --> Switch to LOGO from QED. */

'WRITE'                    /* save edit file from QED */

OPTIONS RESULTS
'STATUS F'                 /* get file name from QED */
fname = result
'STATUS P'                 /* get path name from QED */
fpath = result

IF RIGHT(fpath,1) == ':' THEN name = '[ 'fpath || fname' ] )'
                         ELSE name = '[ 'fpath'/'fname' ] )'

OPTIONS

ADDRESS 'LOGO'
'( from-editor' name       /* load edit file into LOGO */
