(define (char<? x y)
        (< (char-cmp x y) 0))   
     
(define (char>? x y)
        (> (char-cmp x y) 0))
                   
(define (char=? x y)
        (= (char-cmp x y) 0))

(define (char<=? x y)
        (<= (char-cmp x y) 0))

(define (char>=? x y)
        (>= (char-cmp x y) 0))

(define (char-ci<? x y)
        (< (char-cmp (char-downcase x) (char-downcase y)) 0))   
     
(define (char-ci>? x y)
        (> (char-cmp (char-downcase x) (char-downcase y)) 0))   
     
(define (char-ci=? x y)
        (= (char-cmp (char-downcase x) (char-downcase y)) 0))   
     
(define (char-ci<=? x y)
        (<= (char-cmp (char-downcase x) (char-downcase y)) 0))   
     
(define (char-ci>=? x y)
        (>= (char-cmp (char-downcase x) (char-downcase y)) 0))   
     
(define (char-upper-case? x)
        (and (char>=? x #\A) (char<=? x #\Z)))

(define (char-lower-case? x)
        (and (char>=? x #\a) (char<=? x #\z)))

(define (char-digit? x)
        (and (char>=? x #\0) (char<=? x #\9)))

