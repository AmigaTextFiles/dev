.key A0,A1,A2,A3,A4,A5,A6,A7,A8,A9,PRELUDE/K
.def PRELUDE "standard"
.bra {
.ket }
;; Location of gofer files - site specific
set ROOT sys:lib/gofer
;; first, the location of your prelude file:
setenv GOFER $ROOT/preludes/{PRELUDE}.prelude
;; next, command line argument settings.  One example might be:
;; "-pGofer: -rit -s +k"
set args "*"-pGofer>*""
;resident c:Vim          ;; uncomment if applicable
$ROOT/regular/r-gofer $args {A0} {A1} {A2} {A3} {A4} {A5} {A6} {A7} {A8} {A9}
;resident Vim remove     ;; uncomment if applicable
unset args
unsetenv GOFER
unset ROOT
quit 0
;; A simple shell script to invoke the Gofer interpreter.
;; =TP= 22-Aug-94
