to recurs :size
   repeat 2 [ fd :size rt 90 ]
   if :size>10 [ ~
      lt 180 ~
      recurs :size/2 ~
      lt 180 ]
   repeat 2 [ fd :size rt 90 ]
end

to field :size
    repeat 4 [ fd :size lt 90 fd 10 bk 20 fd 10 rt 90 bk :size rt 90 ]
end

to zinn
    repeat 20 [ rt 18 repeat 4 [ fd 60 rt 90 ] ]
end

to colortest :maxcolor
   cs setpc 0
   repeat :maxcolor [ field 100 rt 5 setpc pencolor+1 ]
end

fs cs ht setpc 2 zinn
ignore mm.alert [[Welcome to Berkeley Logo 4.01!]
   [Now with new Amiga extensions.]] [[Okay!][Say What?]]
cs colortest 20
ignore mm.alert [Isn't it exciting?] [[You bet!][I've seen better.]]
cs st
