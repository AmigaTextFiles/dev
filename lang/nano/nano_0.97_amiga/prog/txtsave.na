string file[256];
string line[256];

print_s    "file to save text? ";
input_s    file;

push_i     0, L0;
fopen      L0, file, "w";

push_i     1, L1;
print_s    "Enter the text. Empty line to exit...";
print_n    L1;

lab input;
    print_s   ": ";
    input_s   line;
    fwrite_s  L0, line;
    fwrite_n  L0, L1;
    neq_s     line, "", L2;
    jmp_l     L2, input;

fclose    L0;
push_i    0, L0;
exit      L0;

