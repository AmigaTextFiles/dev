// Color spin
// October 25, 2010

array colors(3);
direction = 1;
cc = 0;
j = 5;
while(1)
{
    colors[cc] += (direction*j);
    cc += ((colors[cc]>=255)+(colors[cc]<=0));
    direction *= (1-(2*(cc>2)));
    cc *= (1-(cc>2));
    @DrawRect (0) (0) (640) (480) colors[0] colors[1] colors[2];
    @FlipVideo;
    @LimitFPS (30);
}

