
// Constants
radius = 80.0;
center_x = 150;
center_y = 150;

// White BG
@DrawRect (0) (0) (640) (480) (255) (255) (255);
@FlipVideo;

// Draw circle using trigonometry
deg = 0.0;
while(deg++ <= 360)
{
    rad = deg/360 * (2*3.141);

    x = radius * cos(rad);
    y = radius * sin(rad);

    @DrawRect (center_x+x) (center_y+y) (2) (2) (0) (0) (0);

    if(deg % 15 == 0)
    {
        @FlipVideo;
    }

    @LimitFPS 10;

}

// Wait for user to quit..
while(1) { }
