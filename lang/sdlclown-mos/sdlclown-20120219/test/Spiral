// A spiral -- it spins.
// 05/04/2011 9:15:39 PM

// CONSTANTS
start_radius = 200.0;
cen_x = 640 / 2;
cen_y = 480 / 2;
spiral_rate = 0.06;
spin_rate = 25;

// ALGORITHM

base_deg = 0.0;

while(1)
{

       @DrawRect (0) (0) (640) (480) (255) (255) (255);

       radius = start_radius;
       deg = base_deg;

       while(radius)
       {
               deg++;
               deg %= 360.0;

               rad = (deg/360.0) * (2*3.1416);

               x = cen_x + (radius*cos(rad));
               y = cen_y + (radius*sin(rad));

               @DrawRect x y (3) (3) (255) (0) (0);

               radius -= spiral_rate;
       }

       base_deg += spin_rate;

       @FlipVideo;
       @LimitFPS (40);

}

