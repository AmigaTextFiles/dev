// Square gradient script for SDL_clown
// Sept. 26, 2010
color = 0;
x = 0;
y = 0;
w = 640;
h = 480;

c = 1;

while(x<=320)
{
    x++;
    w-=2;
    color++;
    if(c++==4)
    {
        c=1;
        y+=3;
        h-=6;
    }
    @DrawRect x y w h (color*255/320) (color*255/320) (color*255/320);
    @FlipVideo;
}

while(1)
{
// Wait for quit
}
