##################################
# a very basic BASIC interpreter #
##################################

FORMAT "iBASIC Help"
FORMAT "==========="
FORMAT "STATEMENTS:
FORMAT "	#	COMMENT ..."
FORMAT "	>	EXPR"
FORMAT "	DIM	VAR(LENGTH)"
FORMAT "	LOCAL	[VAR [, VAR ...]]"
FORMAT "	SUB	NAME [PARAM [, PARAM ...]] ... END SUB"
FORMAT "	NAME	[ARG [, ARG ...]]"
FORMAT "	RETURN	[EXPRESSION]"	
FORMAT "	IF	CONDITION ... [ELSE IF CONDITION ...] [ELSE ...] END IF"
FORMAT "	IF	CONDITION THEN STATEMENT"
FORMAT "	WHILE	CONDITION ... END WHILE"
FORMAT "	FOR	VAR=INIT TO FINAL ... END FOR"
FORMAT "	FORMAT	STRING [, EXPRESSION ...]"
FORMAT "	RESUME"
FORMAT "	BREAK"
FORMAT "	BYE"
FORMAT ""	
FORMAT "	* '%' IN 'FORMAT' PRINTS THE NEXT ARGUMENT AS AN INTEGER"
FORMAT "	* 'SUB' MAY NOT BE NESTED"
FORMAT "	* 'LOCAL' MAY ONLY BE USED IN A SUBROUTINE"
FORMAT ""
FORMAT "EXPRESSIONS:"
FORMAT "	NUMBER, '' '', NAME, NAME(INDEX), NAME(ARG,...), UBOUND(VAR), (EXPRESSION)"
FORMAT "	[EXPRESSION {*|/|\}] EXPRESSION"
FORMAT "	[EXPRESSION {+|-}] EXPRESSION"
FORMAT "	[EXPRESSION {=|<|>|<>|<=|=>}] EXPRESSION"
FORMAT "	[EXPRESSION {AND|OR}] EXPRESSION"
FORMAT ""	
FORMAT "	* BOOLEAN VALUES ARE -1 FOR TRUE AND 0 FOR FALSE"
FORMAT "	* 'AND' AND 'OR' ARE NOT SHORT-CIRCUITING"
FORMAT "	* OPERATORS ARE LEFT-ASSOCIATIVE"
FORMAT "	* STRINGS SHOULD ONLY BE USED FOR 'FORMAT'"
FORMAT ""
FORMAT "GENERAL NOTES:"
FORMAT "	* VARIABLES ARE CASE-INSENSITIVE"
FORMAT "	* ARRAY INDEXES START FROM 1"
FORMAT""
FORMAT "See file 'test.bas' for a syntax overview!"


