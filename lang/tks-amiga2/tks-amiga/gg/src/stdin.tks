File ifs;
String s;
int r;

ifs.stdin();

trace "type a char [+return]: ";
r=ifs.readString(s, 2); s.trim();
trace "read "+r+" chars.";
trace "\n(you entered \'"+s+"\')";


trace "enter a string (exactly 4 chars +return):";
r=ifs.readString(s, 4);
trace "read "+r+" chars.";
trace "\n(you entered \""+s+"\")";
ifs.readString(s,1); // eat return

trace "enter a text line (max. 1024 chars):";
r=ifs.readLine(s, 1024);
trace "read "+r+" chars. (incl. return)";
trace "s.length="+s.length+" (incl. ASCIIZ)";
trace "\n(you entered \""+s+"\")";


