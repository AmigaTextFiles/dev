scr <- amigatalk activeScreen

win <- Window new: 'Test Boolean Gadget Window:'

win setFlags:       16r100F
win setIDCMPFlags:  16r340
win openOnScreen:   scr

scr screenToFront

"crs <- Colors new: win"

"crs  makeColorMap: 16"
"crs  loadColors:   16 from: 'Amigatalk:AmigaTalk.colors'"

btxt <- IText new: 'Test Gadget:'

width <- (btxt getTextLength) + 30
bdr   <- Rectangle new

bdr makeRectangleFrom: 300 @ 80 to: width @ 20

btxt setPens:           3 @ 2
btxt setITextOrigin: -125 @ 2

bgad <- BoolGadget new

bgad setGadgetID:     0
bgad setGadgetText:   btxt
bgad setStartPoint:   300 @ 80
bgad setGadgetSizeTo: width @ 20
bgad setRender:       bdr
bgad setSelect:       bdr

win  addGadget: bgad
win  refreshGadgets

itxt <- IText new: 'Press the Gadget to end test!'

itxt setPens:           5 @ 2
itxt setITextOrigin:  100 @ 120
itxt setDrawMode:     4

win  printIText: itxt at: 30 @ 20

win  handleIntuition

win  close

itxt dispose
btxt dispose
bgad dispose

