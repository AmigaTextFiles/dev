amigatalk newIO: 'Gimme a string:' title: 'This is a simple Requester:'

rval <- amigatalk getString

( 'User entered: ', rval ) print

amigatalk setIOMessage: 'Enter your age (in months):'
amigatalk setIOTitle:   'So, how old are you?'

rval <- amigatalk getInteger

( 'User entered: ', rval asString) print

amigatalk setIOTitle:    'Can you see the string??'
amigatalk setIOMessage:  'How is your eyesight?'
amigatalk displayString: 'This a test for displayString!'

amigatalk setIOTitle:     'Can you see the integer??'
amigatalk setIOMessage:   'How many fleas you have:'
amigatalk displayInteger: 666

amigatalk setIOTitle:     'Which file would you like to see?'
amigatalk setIODirectory: 'AmigaTalk:'

rval <- amigatalk getFileName

amigatalk displayFile: rval

scr <- Screen new:   16r40D20001

scr open: 'TestScreen' "Screen has to be known to AmigaTalk."

amigatalk setIOTitle:      'Select your Screen Mode:'
amigatalk setIOScreenName: 'TestScreen'

rval <- amigatalk getScreenModeID

scr close

('You selected ', (rval asString)) print
