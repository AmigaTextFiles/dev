scr <- Screen new
scr setScreenModeID: 16r40D20042
scr            open: 'TestScreen'

win <- Window new: 'TestWindow'

win setFlags:       16r100F
win setIDCMPFlags:  16r140
win openOnScreen:   scr

crs <- Colors new: win
crs  makeColorMap: 16
crs    loadColors: 16 from: 'Amigatalk:AmigaTalk.colors'

scr screenToFront

im2 <- Image new

im2 registerTo: win
 
im2 addImage: 34 height: 30 depth: 8

im2 setImageDataFrom: 'AmigaTalk:Images/FourDiamond.asc'

im2 drawImageAt: 400 @ 300

im2 saveImageIn: 'AmigaTalk:TestImage.asc'

im2 setImageDataFrom: 'AmigaTalk:Images/TestImage.asc'

im2 drawImageAt: 20 @ 20

im2 disposeImage

crs dispose

('Done with TestImage1!') print

('Do NOT forget to close the window & Screen!') print
('(use "win close" then "scr close")') print
