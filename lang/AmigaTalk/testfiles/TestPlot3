testPen <- Pen new: 'Test The Plot3 Functions'

testPen openPlotEnv: 400 @ 250
testPen setPens: 2 @ 0

testPen drawText: 'Some Sample Label-making' at: 10 @ 18
testPen drawText: 'Test Text Clipping...' at: 300 @ 38

testPen setPens: 4 @ 0
testPen drawBox: 20 @ 28 to: 380 @ 240

testPen setPens: 8 @ 0
testPen drawCircleAt: 200 @ 125 radius: 50

testPen direction: 1
testPen      goTo: 200 @ 125
testPen   setPens: 7 @ 0

showTest <- ShowPen new

showTest withPen: testPen

showTest  spiral: 50  angle: 1.04

showTest    poly: 7  length: 50

testPen  setPens: 9 @ 0

angle <- Radian new: 0.523599

testPen drawArcAt: 200@100 around: 250@200 for: angle

testPen  setPens: 5 @ 0

testPen setLineType: 16rFAFA "<- 64250 = a dashed line." 

testPen drawBox:  30 @ 40 to: 350 @ 200
testPen drawLine: 10 @ 30 to: 300 @ 240

testPen location
testPen extent

testPen movePlotEnvBy: 30 @ 20 "Move the entire Plot Window."
