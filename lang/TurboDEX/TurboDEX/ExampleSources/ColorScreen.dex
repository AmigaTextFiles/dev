' Open a screen and do something

PROC main()
  DEF rast:LONG,screen:LONG
  DEF sx:REGINT, sy:REGINT
  screen := OpenS(320,256,5,0,' TurboDEX Screen ')
  rast := screen+84
  IF screen?FALSE
    MOUSE
      DOWN sx,320
        DOWN sy,256
          VOID SetAPen(rast,sx*sy)
          VOID WritePixel(rast,sx,sy)
          JUMPMOUSE leave
        ENDDOWN
      ENDDOWN
    ENDMOUSE
    leave:
    VOID CloseS(screen)
  ENDIF
ENDPROC
