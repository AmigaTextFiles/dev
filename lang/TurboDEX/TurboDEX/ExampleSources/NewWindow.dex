/* Open a Window ... this example shrunk somewhat from v1.10 to v1.15 */

PROC main()
  DEF wadr:LONG, rast:LONG, dummy:REGLONG
  wadr := OpenW(20,30,400,80,$1006,0,'A TurboWPL Window ...\0',NIL,1,0)
  IF wadr?FALSE
    rast := MLONG(wadr+50)
    VOID SetAPen(rast,1)
    VOID Move(rast,5,20)
    VOID Text(rast,'it\as easy to write in a window (click mouse)',LEN)
    MOUSE
    ENDMOUSE
    VOID CloseWindow(wadr)
  ENDIF
ENDPROC
