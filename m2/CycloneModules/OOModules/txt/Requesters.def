DEFINITION MODULE Requesters;

(* Copyright (C) 1996 by Marcel Timmermans *)

(* A example of a Filerequester object *)

FROM SYSTEM IMPORT ADDRESS;
FROM Objects IMPORT TObject;
IMPORT rt:ReqTools;

TYPE
 TFileListBox = CLASS(TObject)
                 FDir,FTitle,win:ADDRESS;
                 FName:ARRAY[0..255] OF CHAR;
                 filereq:rt.FileRequesterPtr;
                 x,y:INTEGER;
                 CONSTRUCTOR Init;
                 PROCEDURE Do(save:BOOLEAN):BOOLEAN;
                 PROCEDURE GetName(VAR str:ARRAY OF CHAR);
                 PROCEDURE GetPath(VAR path:ARRAY OF CHAR);
                 DESTRUCTOR Done;
                END; 

END Requesters.
