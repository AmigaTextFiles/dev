(*$ Implementation- *)
DEFINITION MODULE BootBlock; 

TYPE
  BootBlock=RECORD
    id:ARRAY [0..3] OF CHAR;    (* 4 character identifier *)
    chksum:LONGINT;             (* boot block checksum (balance) *)
    dosblock:LONGINT;           (* reserved for DOS patch *)       
  END;

CONST
  bootSects=2;                  (* 1K bootstrap *)

  idDos='DOS\o';
  idKick='KICK';

  nameDos= 444F5300H;  (* 'DOS\0' *)
  nameKick=4B49434BH;  (* 'KICK' *)  


END BootBlock.
