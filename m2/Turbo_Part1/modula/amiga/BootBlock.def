DEFINITION FOR C MODULE BootBlock ;

TYPE
  BootBlock = RECORD
    bb_id       : ARRAY [0..3] OF CHAR ; (* 4 character identifier	  *)
    bb_chksum   : LONGINT ;		 (* boot block checksum (balance) *)
    bb_dosblock : LONGINT ;		 (* reserved for DOS patch	  *)
  END ;

CONST
  BOOTSECTS = 2 ; (* 1K bootstrap *)

  BBID_DOS  = "DOS"  ;
  BBID_KICK = "KICK" ;

  BBNAME_DOS  = 0444F5300H ; (* 'DOS\0' *)
  BBNAME_KICK = 04B49434BH ; (* 'KICK'  *)

END BootBlock .
