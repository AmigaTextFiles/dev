DEFINITION MODULE GTRequester;

(* The Requester-Library for GUITools *)

  FROM SYSTEM     IMPORT ADDRESS;
  FROM IntuitionD IMPORT WindowPtr;
  FROM UtilityD   IMPORT TagItemPtr;


TYPE GTReqArgs = RECORD  (* Further use in future ... *)
       window : WindowPtr;
     END;
     GTReqArgsPtr = POINTER TO GTReqArgs;

  PROCEDURE GTRequester(req  : GTReqArgsPtr;
                        text : ADDRESS;
                        kind : LONGCARD;
                        tags : TagItemPtr) : LONGINT;

  (* All constants, tags etc are defined in GUITools.def AND GTRequester.mod*)
END GTRequester.
