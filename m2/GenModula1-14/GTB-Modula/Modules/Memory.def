FROM	SYSTEM	IMPORT	ADDRESS;


(*
 * --- Allocate -----------------------------------------------------------------
 * Mit der Procedur Allocate wird ein Speicherbereich der Größe "size"
 * angefordert und dessen Adresse dem Parameter "adr" übergeben. Die Anforderung
 * ist genau dann erfüllt, wenn  (adr # NIL)  gilt.
 * ------------------------------------------------------------------------------
 *)
PROCEDURE Allocate	(VAR adr		:ADDRESS;
			     size		:LONGINT);


(*
 * --- Deallocate ---------------------------------------------------------------
 * Über die Procedur Deallocate kann mit Allocate angeforderter Speicher wieder
 * freigegeben werden.
 * ------------------------------------------------------------------------------
 *)
PROCEDURE Deallocate	(VAR adr		:ADDRESS;
			     size		:LONGINT);


END Memory.
