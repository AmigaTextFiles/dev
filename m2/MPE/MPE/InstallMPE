.K ""
echo "This script will install MPE (Modula-2 Programming Environment)"
echo "to the M2: assign."
echo ""

if not EXISTS m2:
	echo "No existing m2: assign !!"
else
	ask "Do you wish to install mpe to M2: ?"
	if WARN
        	echo "Copying MPE to M2:"
            copy mpe m2:
            copy mpe.doc m2:
            copy s/mpe.help s:
            copy mpeconvert m2:
        endif
endif

echo "All Done.  Bye !"
wait 1
endcli >Nil:
