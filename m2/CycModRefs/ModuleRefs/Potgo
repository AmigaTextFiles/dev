(*$ Implementation- *)
DEFINITION MODULE Potgo;

FROM SYSTEM   IMPORT ADDRESS;
FROM Hardware IMPORT PotFlags,PotFlagSet;

IMPORT Reg;

CONST
 potgoName="potgo.resource";

TYPE
 PotgoBits   = PotFlags;
 PotgoBitSet = PotFlagSet;

PROCEDURE AllocPotBits(potgo{Reg.A6}:ADDRESS;bits{Reg.D0}:PotgoBitSet):PotgoBitSet; CODE -6;

PROCEDURE FreePotBits(potgo{Reg.A6}:ADDRESS;allocated{Reg.D0}:PotgoBitSet); CODE -12;

PROCEDURE WritePotgo(potgo{Reg.A6}:ADDRESS;word{Reg.D0}:PotgoBitSet;
                     mask{Reg.D1}:PotgoBitSet); CODE -18;

END Potgo.

@endnode
