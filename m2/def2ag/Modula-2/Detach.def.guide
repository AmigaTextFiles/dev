@node Modul "HYPER:Modula-2/Detach.def.guide"
DEFINITION MODULE Detach;

(*
 * cleanup 8.8.92/bp
 * benötigt Kickstart 2.0!
 *)

FROM SYSTEM IMPORT ADDRESS;
IMPORT DosD;

(*
 * a) Die Vollversion;
 *    input, output müssen neu geöffnete Files sein.
 *    Sie werden beide automatisch geschlossen!
 *    Sie koennen auch identisch sein.
 *)
PROCEDURE Detach(name:ADDRESS; (* cli^.commandName *)
		 pri:LONGINT;
		 stackSize:LONGINT; (* in Bytes *)
		 input,
		 output:DosD.@{" FileHandlePtr " link HYPER:Modula-2/DosD.def.guide/Modul 204}
		 );

(*
 * b) Die simple Version:
 *    taskname, Stacksize und Prio wie alter Prozess
 *    in/outname sollte meines Erachtens "NIL:" oder "*" sein.
 *    Falls outname="", dann input=output!
 *    Gut ist ("con:.../CLOSE/AUTO", ""), dann wird das Fenster
 *    nur bei Bedarf geöffnet und kann jederzeit vom Benutzer
 *    geschlossen werden.
 *)
PROCEDURE DetachNorm(inname,outname:ARRAY OF CHAR);

END Detach.def

@endnode
