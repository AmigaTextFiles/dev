DEFINITION MODULE GamePort; (*$ Implementation:=FALSE *)
(* 10-Mar-1992/cn *)

FROM ExecD IMPORT nonstd;

CONST
 gamePortName="gameport.device";

 readEvent=nonstd+0;
 askCType=nonstd+1;
 setCType=nonstd+2;
 askTrigger=nonstd+3;
 setTrigger=nonstd+4;

 errSetCType=1;

 allocated=-1;

TYPE
 @{" Controller " link HYPER:Modula-2/GamePort.def.guide/Modul 18}=(noController,mouse,relJoystick,absJoystick);

 @{" Keys " link HYPER:Modula-2/GamePort.def.guide/Modul 21}=(downKeys,upKeys,k2,k3,k4,k5,k6,k7,k8);
 @{" KeySet " link HYPER:Modula-2/GamePort.def.guide/Modul 22}=SET OF @{" Keys " link HYPER:Modula-2/GamePort.def.guide/Modul 21};

 @{" GamePortTrigger " link HYPER:Modula-2/GamePort.def.guide/Modul 24}=RECORD
  keys:@{" KeySet " link HYPER:Modula-2/GamePort.def.guide/Modul 22};
  timeout:CARDINAL;
  xDelta:CARDINAL;
  yDelta:CARDINAL;
 END;

END GamePort.noimp

