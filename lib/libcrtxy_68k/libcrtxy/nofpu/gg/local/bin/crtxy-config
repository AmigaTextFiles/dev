#!/bin/sh

# crtxy-config

# Bill Kendrick <bill@newbreedsoftware.com>

# July 29, 2008 - July 29, 2008


if [ $# -ne 0 ]; then
  if [ $1 = "--version" ]; then
    echo "0.0.4"
    exit
  fi
  if [ $1 = "--cflags" ]; then
    echo `sdl-config --cflags` -I/usr/local/include
    exit
  fi
  if [ $1 = "--libs" ]; then
    echo -L/usr/local/lib -lcrtxy -L/USR/lib -lSDL_image -ljpeg -lpng -lz `sdl-config --libs`
    exit
  fi
  if [ $1 = "--static-libs" ]; then
    echo -L/usr/local/lib -lcrtxy -L/USR/lib -lSDL_image -ljpeg -lpng -lz `sdl-config --static-libs`
    exit
  fi
fi

echo "Usage: crtxy-config [ --version | --cflags | --libs | --static-libs ]"

