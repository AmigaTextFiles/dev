#!/bin/sh

prefix=/SDK/Local
exec_prefix=${prefix}
exec_prefix_set=no

usage="\
Usage: aedgui-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 0.1.8a
      ;;
    --cflags)
	  includedirs="`/SDK/Local/clib2/bin/sdl-config --cflags`"
      echo  $includedirs -I/SDK/Local/common/include/aedGUI
      ;;
    --libs)
      libdirs="-L/SDK/Local/clib2/lib -lGL -lGLU -lSDL -lauto -lm -lm -L/SDK/Local/clib2/lib -lfreetype -lz -lSDL_rtf"
      echo  -L/SDK/Local/clib2/lib -laedGUI $libdirs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
