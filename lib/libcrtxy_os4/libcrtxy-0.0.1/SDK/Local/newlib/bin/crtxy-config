#!/bin/sh

# crtxy-config

# Bill Kendrick <bill@newbreedsoftware.com>

# July 29, 2008 - July 29, 2008


if [ $# -ne 0 ]; then
  if [ $1 = "--version" ]; then
    echo "0.0.1"
    exit
  fi
  if [ $1 = "--cflags" ]; then
    echo `sdl-config --cflags` -I/usr/local/include
    exit
  fi
  if [ $1 = "--libs" ]; then
    echo `sdl-config --libs` -lSDL_image -L/usr/local/lib -lcrtxy
    exit
  fi
  if [ $1 = "--static-libs" ]; then
    echo `sdl-config --static-libs` -L/usr/local/lib
    exit
  fi
fi

echo "Usage: crtxy-config [ --version | --cflags | --libs | --static-libs ]"

