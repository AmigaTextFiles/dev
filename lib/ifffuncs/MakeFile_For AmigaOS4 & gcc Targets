# -----------------------------------------------------------------
# MakeFile for:  CPGM:GlobalObjects/SrcFiles/IFFFuncs.o
# -----------------------------------------------------------------
#
#LIBS  = -lm -lamiga -lauto
#
CC    = SDK:gcc/bin/gcc
#
COPTS = -c -ISDK:Local/Include
#
DOPTS = -c -ggdb -ISDK:Local/Include
#
GLOB  = GlobalObjects/
#
# -----------------------------------------------------------------
#
ppcTargets :
	SDK:c/make IFFFuncsPPC.o
	SDK:c/make IFFFuncsPPCDBG.o
#        
IFFFuncsPPC.o : IFFFuncs.c IFFFuncs.h IFFFuncsLocale.h
	EnsureAscii IFFFuncs.c RAM:TS.c
	Copy        RAM:TS.c   IFFFuncs.c    
	Delete      RAM:TS.c
	$(CC) $(COPTS) -o IFFFuncsPPC.o IFFFuncs.c
	Copy   IFFFuncsPPC.o CPGM:GlobalObjects/IFFFuncsPPC.o QUIET
#
IFFFuncsLocale.h : IFFFuncs.cd
	CatComp IFFFuncs.cd CFILE IFFFuncsLocale.h NOBLOCK NOARRAY NOCODE
#
# ----------- DEBUG targets: ---------------------------------------
#
IFFFuncsPPCDbg.o : IFFFuncs.c IFFFuncs.h IFFFuncsLocale.h
	EnsureAscii IFFFuncs.c RAM:TS.c
	Copy        RAM:TS.c      IFFFuncs.c    
	Delete      RAM:TS.c
	$(CC) $(DOPTS) -o IFFFuncsPPCDbg.o IFFFuncs.c
	Copy   IFFFuncsPPCDbg.o CPGM:GlobalObjects/IFFFuncsPPCDbg.o QUIET
#
ACMD = LhArc
#
AOPTS = -x -a 
#
IFFFuncs.lha : IFFFuncs.c IFFFuncs.o IFFFuncs.h IFFFuncsPPC.o
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.readme
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.guide
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.guide.info
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.c
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.h
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.cd
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncsLocale.h
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncsProtos.h
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncsPPC.o
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncs.o
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncsD.o
	$(ACMD) $(AOPTS) add IFFFuncs.lha IFFFuncsPPCDbg.o
	Copy MakeFile      RAM:M.bak
	Copy MakeFile.iff  RAM:TS.make
	Copy RAM:TS.make   MakeFile
	$(ACMD) $(AOPTS) add IFFFuncs.lha MakeFile
	Copy RAM:M.bak     MakeFile
	Copy SMakeFile     RAM:SM.bak
	Copy SMakeFile.iff RAM:TS.make
	Copy RAM:TS.make   SMakeFile
	$(ACMD) $(AOPTS) add IFFFuncs.lha SMakeFile
	Copy RAM:SM.bak            SMakeFile
	Delete RAM:SM.bak RAM:TS.make RAM:M.bak
