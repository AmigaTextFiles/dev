# ============================================================================
# Activated features
# ============================================================================

FEATURES=

# ============================================================================
# Architecture dependant things
# ============================================================================

ARCHITECTURE=-DARCH_IS_PPC
BUS=-DARCH_IS_32BIT
ENDIANNESS=-DARCH_IS_BIG_ENDIAN
SHARED_EXTENSION=so
STATIC_EXTENSION=a
OBJECT_EXTENSION=o

# ============================================================================
# Compiler
# ============================================================================

CC=gcc -mcrt=newlib
SPECIFIC_CFLAGS= -DHAVE_ALTIVEC_H -DHAVE_ALTIVEC_BRACES_DECL -DHAVE_PTHREAD 
CFLAGS=-O3 -Wall -fPIC
ALTIVEC_CFLAGS= -maltivec -mabi=altivec 


# ============================================================================
# Assembler
# ============================================================================

AS=$(CC)
AFLAGS=
ASSEMBLY_EXTENSION=.s

# ============================================================================
# Linker
# ============================================================================

SPECIFIC_LDFLAGS= -lpthread 
API_MAJOR=4
API_MINOR=2
RANLIB=ranlib

# ============================================================================
# Installation
# ============================================================================

INSTALL=/bin/ginstall -c
DESTDIR=
prefix=/SDK/Local/newlib
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

# ============================================================================
# Sources
# ============================================================================

GENERIC_SOURCES=$(SRC_GENERIC)
ASSEMBLY_SOURCES=$()
DCT_IA64_SOURCES=$()
PPC_ALTIVEC_SOURCES=$(SRC_PPC_ALTIVEC)
GENERIC_OBJECTS=$(SRC_GENERIC:.c=.o)
ASSEMBLY_OBJECTS=$(:..s=.o)
DCT_IA64_OBJECTS=$(:..s=.o)
PPC_ALTIVEC_OBJECTS=$(SRC_PPC_ALTIVEC:.c=.o)

STATIC_LIB=libxvidcore.$(STATIC_EXTENSION)
SHARED_LIB=libxvidcore.$(SHARED_EXTENSION)
PRE_SHARED_LIB=libxvidcore.$(SHARED_EXTENSION)
