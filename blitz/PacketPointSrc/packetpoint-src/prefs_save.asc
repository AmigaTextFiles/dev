;
; Routine zum Speichern der Einstellungen
;

If WriteFile (0,prefs$)
     FileOutput 0
     NPrint"Call=",username$
     NPrint"HomeBBS=",homebbs$
     NPrint"prompt=",prompt$
     NPrint"realname=",realname$
     NPrint"nickname=",nickname$
     NPrint"betreff=",betreff$
     NPrint"datei=",datei$
     NPrint"user_id=",user_id$
     NPrint"keyring=",keyring$
     mbxpasswort$=Cipher$(mbxpasswort$)
     NPrint"mbxpasswort=",mbxpasswort$
     NPrint"mailboxcall=",mailboxcall$
     NPrint"mbxpfad=",mbxpfad$
     software$=Str$(software)
     NPrint"software=",software$
     NPrint"device=",device$
     NPrint"unit=",unit$
     NPrint"baud=",baud$
     NPrint"keymitschicken=",key_mitschicken
     NPrint"passworterfragen=",passwort_erfragen
     NPrint"editor=",editor_prefs$
     NPrint"pgp_pfad=",pgp_path$
     NPrint"7plus_pfad=",plus_path$
     NPrint"puffer_laden=",puffer_laden$
     NPrint"puffer_speichern=",puffer_speichern$
     NPrint"lifetime=",lifetime_prefs$
     passwort$=Cipher$(passwort$)
     NPrint"passwort=",passwort$
     passwort_an$=Str$(passwort_an)
     passwort_an$=Cipher$(passwort_an$)
     NPrint"passwort_an=",passwort_an$
     NPrint"signaturtrenner=",signaturtrenner$
     NPrint"sig_ab=",signatur_ab
     NPrint"font=",font$
     NPrint"fontysize=",fontysize
     NPrint"wbstart=",wbstart
     If screendata1 <> 0
       NPrint"screendata1=",screendata1
     EndIf
     If screendata2 <> 0
       NPrint"screendata2=",screendata2
     EndIf
     If screendata3 <> 0
       NPrint"screendata3=",screendata3
     EndIf
     If screendata4 <> 0
       NPrint"screendata4=",screendata4
     EndIf
     If screendata5 <> 0
       NPrint"screendata5=",screendata5
     EndIf
     If screendata6 <> 0
       NPrint"screendata6=",screendata6
     EndIf
     CloseFile 0
EndIf
