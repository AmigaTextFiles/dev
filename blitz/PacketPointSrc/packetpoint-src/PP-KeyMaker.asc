MaxLen pa$=192
MaxLen fi$=192
WbToScreen 0
WBenchToFront_

keyfile$=ASLFileRequest$("Wo soll das Keyfile gespeichert werden?",pa$,fi$,"#?")
If OpenFile(0,keyfile$)
  MaxLen regist_name$=80
  MaxLen strasse$=80
  MaxLen ort$=80
  MaxLen keynummer$=80
  MaxLen keyfile$=80
  MaxLen filenummer$=80
  keyfile$="Packet-Point Key-File"
  keyfile$=Cipher$(keyfile$)
  Fields 0,keynummer$,regist_name$,strasse$,ort$,keyfile$,filenummer$

  Print "Keynummer  : "
  keynummer$=Edit$(80)
  keynummer$=Cipher$(keynummer$)
  NPrint""
  Print "Name       : "
  regist_name$=Edit$(80)
  regist_name$=Cipher$(regist_name$)
  NPrint""
  Print "Strasse    : "
  strasse$=Edit$(80)
  strasse$=Cipher$(strasse$)
  NPrint""
  Print "PLZ / Ort  : "
  ort$=Edit$(80)
  ort$=Cipher$(ort$)
  NPrint""
  filenummer.l=65924
  filenummer$=Cipher$(Str$(filenummer.l))
  Put 0,0
  FileOutput 0
  CloseFile 0
  End
EndIf

NPrint "Konnte File nicht oeffnen!"
MouseWait
End

