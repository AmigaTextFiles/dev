; ### So it can be started from Workbench... ###
WBStartup

; ### Workbench to AmiBlitz screen ###
WbToScreen 0

; ### Show Workbench ###
ShowScreen 0

agac.l = CheckAGA

If agac
  NPrint "AGA machine..."
Else
  NPrint "No AGA machine..."
EndIf

; ### Init Screen ###

scw.l   = 800
sch.l   = 600
scres.l = 24
scid.l = Screen (1,0,0,scw,sch,scres,$0            ,Str$(scres) + "Bits",0,1)

NPrint ""
NPrint "Screen ",scid," opened with ",scres,"bit resolution..."

If scid <> Null
  ;For i = 0 To 255
  ;  AGARGB i,i,i,i
  ;Next
  For i = 0 To 600
    Plot i,i,1
  Next

  ; ### SMALL WINDOW ###

  wflags.l = #WFLG_DRAGBAR | #WFLG_DEPTHGADGET | #WFLG_ACTIVATE | #WFLG_GIMMEZEROZERO
  wdwid.l  = Window(0,100,100,200,200,wflags,"Small Window",1,2)
  DefaultOutput
  NPrint ""
  NPrint "New small window..."
  wdww.l   = WindowWidth
  wdwh.l   = WindowHeight
  wdwiw.l  = InnerWidth
  wdwih.l  = InnerHeight
  wdwto.l  = WTopOff
  wdwlo.l  = WLeftOff

  VWait 100

  WCls

  For i = 0 To (wdwiw - 1)
    WPlot i,i,i
  Next

  VWait 50

  InnerCls

  For i = 0 To (wdwiw - 1)
    Wline i,Int(i / 4),i,(wdwih - Int(i / 4)),i
  Next

  VWait 50

  InnerCls

  WBox 0,0,wdwiw - 1,wdwih - 1,1

  VWait 25

  WBox 1,1,wdwiw - 2,wdwih - 2,8

  VWait 100
  CloseWindow 0

  NPrint ""
  NPrint "Small Window ",wdwid," opened and closed..."
  NPrint "Small Window Width       ", wdww
  NPrint "Small Window Height      ", wdwh
  NPrint "Small Window InnerWidth  ", wdwiw
  NPrint "Small Window InnerHeight ", wdwih
  NPrint "Small Window Top Offset  ", wdwto
  NPrint "Small Window Left Offset ", wdwlo

  ; ### BIG WINDOW ###

  wflags   = #WFLG_BORDERLESS | #WFLG_ACTIVATE | #WFLG_GIMMEZEROZERO
  wdwid    = Window(0,0,0,scw,sch,wflags,"",1,2)
  DefaultOutput
  NPrint ""
  NPrint "New big window..."
  wdww     = WindowWidth
  wdwh     = WindowHeight
  wdwiw    = InnerWidth
  wdwih    = InnerHeight
  wdwto    = WTopOff
  wdwlo    = WLeftOff

  WCls

  For i = 0 To (wdwiw - 1)
    Wline i,Int(i / 4),i,(wdwih - Int(i / 4)),i
  Next

  VWait 100
  CloseWindow 0

  NPrint ""
  NPrint "Big Window ",wdwid," opened and closed..."
  NPrint "Big Window Width       ", wdww
  NPrint "Big Window Height      ", wdwh
  NPrint "Big Window InnerWidth  ", wdwiw
  NPrint "Big Window InnerHeight ", wdwih
  NPrint "Big Window Top Offset  ", wdwto
  NPrint "Big Window Left Offset ", wdwlo

  MouseWait
  CloseScreen 1

  NPrint ""
  NPrint "Screen ",scid," opened and closed..."

EndIf

End
