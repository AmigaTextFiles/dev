; ### Optimize CPU integer (68020+) and FPU ###

OPTIMIZE 7

; ### Sintax - All variables need to be declared (or var.type) ###
SYNTAX 2

; ### So it can be started from Workbench ###
WBStartup

; ### Workbench to AmiBlitz screen ###
WbToScreen 0

; ### Bring Workbench to front ###;
ShowScreen 0


; #######################################
; ###### Includes                  ######
; #######################################

XINCLUDE "dos.include"


; #######################################
; ###### Variables                 ######
; #######################################

MaxLen dirstart$ = 160
dirstart$                    = "Ram:"            ; # Dir from where program was started

; ### Get dir from where program was started ###

dirstart$ = dos_GetStartDir {"Ram:"}
NPrint "Program started from: ",dirstart$
Request "Started form dir",dirstart$,"OK"

;dirstart$ = ASLPathRequest$ ("Chose path",dirstart$)

l.w = Len (dirstart$)
NPrint "Dir string ",dirstart$," has length ",l

r$ = Right$ (dirstart$,1)
NPrint "Right most character ",r$

If r$ <> ":" AND r$ <> "/"

  NPrint "Adding / to dir ",dirstart$
  dirstart$ = dirstart$ + "/"
  NPrint "(a) Final dir string ",dirstart$
  Request "(a) Final dir string",dirstart$,"OK"

Else

  NPrint "(b) Final dir string ", dirstart$
  Request "(b) Final dir string",dirstart$,"OK"

End If

fname$ =  dirstart$ + "MyDosIcludeTest.config"

NPrint "---------------------------------- "
NPrint "Saving config to dir ", dirstart$
NPrint "---------------------------------- "
NPrint "Saving config to file ", fname$

If WriteFile (0,fname$)

  FileOutput 0

  NPrint dirstart$

  CloseFile 0

  DefaultOutput
  NPrint "---------------------------------- "
  NPrint "Writing to file finished..."
  Request "Writing to file finished.",fname$,"OK"

Else

  NPrint "File ",fname$," not opened..."
  Request "File not opened.",fname$,"OK"

End If

End

