; $VER blitzfix 1st June 1999

if exists blitz2:acidlibs
	echo "Copying old acidlibs to acidlibs.b4p3..."
	copy blitz2:acidlibs blitz2:acidlibs.b4p3
	echo "...done"
	echo
	echo "Applying patch to acidlibs"
	changelib PROGDIR: staticslib.obj
else
	if exists blitzlibs:system/staticslib.obj
		echo "Copying old library file to blitzlibs:oldstaticslib.obj"
		copy blitzlibs:system/staticslib.obj blitzlibs:oldstaticslib.obj
		echo "Copying new library file"
		copy staticslib.obj blitzlibs:system/
		echo "You will now need to rebuild your deflibs file"
	endif
endif
