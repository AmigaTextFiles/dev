  MOVE.b (a0)+,d1         ;Get a byte
  CMP.b #0,d1             ;Is it null?
  BEQ _EndCopy            ;Yes, so end the copy
  MOVE.b d1,(a3)+         ;Copy this byte into the string
  ADDI.l #1,d0            ;Increment length counter
  BRA _CopyString
_EndCopy
  RTS                     ;Exit


