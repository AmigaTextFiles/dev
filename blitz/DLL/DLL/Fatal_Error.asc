Statement Fatal_Error{Text$}

   DEFTYPE.EasyStruct es

   If Used Window < 0                     ; Is there a current window?
      WbToScreen 0                        ; No - so open an invisible
      Window 0,0,10,100,100,$1900,"",1,2  ; ... one on workbench
   EndIf

   Text$   = Replace$ (Text$,"|",Chr$(10))
   Text$   = "ERROR - "+Text$
   Title$  = "Fatal Error"
   Gadget$ = "Cancel Program"

   es\es_StructSize   = SizeOf.EasyStruct
   es\es_Flags        = 0
   es\es_Title        = &Title$
   es\es_TextFormat   = &Body$
   es\es_GadgetFormat = &Gadget$

   ret.l = EasyRequestArgs_ (Peek.l(Addr Window(Used Window)),&es,0,0)

   End

End Statement
