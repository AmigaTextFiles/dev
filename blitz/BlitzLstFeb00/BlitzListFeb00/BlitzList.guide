	; read in 1000 bytes, like readmem, use write for writemem
	nprint read_(fh, &buf(0), 1000)," bytes read"
	; when swapping between buffered and unbuffered input we must
	; flush buffers
	flush_ fh
	; seek back to start of file
	oldposition.l = seek_(fh, 0, #OFFSET_BEGINNING)
	; read in a string, up to EOF or chr$(10)
	if fgets_(fh, &t$, 200)
		nprint t$
	end if
	close_ fh
end if

