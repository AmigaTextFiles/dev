
; Reading CLI parameters via the OS. Handy, cos when
; your user types "Program ?", it tells them what
; arguments are required and they can still enter them.

; Create CLI executable, and pass it two arguments...

DEFTYPE.RDArgs *rdargs

NEWTYPE.CustomArgs
  args0.l
  args1.l
  args2.l
End NEWTYPE

DEFTYPE.CustomArgs args

arg$="FILE/A,STRING/A"

*rdargs=ReadArgs_(&arg$, &args, 0)

If *rdargs

  fl$=Peek$(args\args0)+Chr$(10)
  sg$=Peek$(args\args1)+Chr$(10)

  PutStr_ &fl$
  PutStr_ &sg$

  FreeArgs_ *rdargs

Else PutStr_ "Wrong arguments: Test FILE/A,STRING/A"+Chr$(10)

EndIf

quit
End

