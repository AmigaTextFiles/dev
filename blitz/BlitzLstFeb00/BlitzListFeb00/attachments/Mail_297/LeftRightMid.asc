
; Left$, Right$, Mid$ replacements

q$=Chr$(34)

country$="United States of America"

Function.s Left {a$,lngth.l}
  If lngth<1 Then Function Return ""
  If lngth>Peek.l(&a$-4) Then lngth=Peek.l(&a$-4)
  a$=Peeks$(&a$,lngth)
Function Return a$
End Function

Function.s Right {a$,lngth.l}
  If lngth<1 Then Function Return ""
  If &a$+lngth>&a$+Peek.l(&a$-4) Then lngth=Peek.l(&a$-4)
  a$=Peeks$ (&a$+Peek.l(&a$-4)-lngth,lngth) ; wow!
Function Return a$
End Function

Function.s Mid {a$,strt.l,lngth.l}
  If strt<1 OR lngth<1 Then Function Return ""
  If strt>Peek.l(&a$-4) Then Function Return "" ; strt=Peek.l(&a$-4)
  If strt+lngth>Peek.l(&a$-4) Then lngth=Peek.l(&a$-4)-strt+1
  a$=Peeks$ (&a$+strt-1,lngth)
Function Return a$
End Function

NPrint ""

NPrint "country$=",q$+country$+q$

NPrint ""

NPrint "Left$ (country$,10) : ",q$,Left$(country$,10),q$
NPrint "Left  {country$,10} : ",q$,Left  {country$,10},q$

NPrint ""

NPrint "Right$ (country$,10) : ",q$,Right$(country$,10),q$
NPrint "Right  {country$,10} : ",q$,Right {country$,10},q$

NPrint ""

NPrint "Mid$ (country$,4,3) : ",q$,Mid$ (country$,4,3),q$
NPrint "Mid  {country$,4,3} : ",q$,Mid   {country$,4,3},q$

MouseWait:End
