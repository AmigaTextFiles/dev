  tags(6)\ti_Tag=#ASLFO_DoFrontPen     , 1
  tags(7)\ti_Tag=#ASLFO_DoBackPen      , 1
  tags(8)\ti_Tag=#ASLFO_TitleText      ,"Select New Font"
