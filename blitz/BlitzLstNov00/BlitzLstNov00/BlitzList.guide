  tags(0)\ti_Tag=#ASLFO_InitialTopEdge , Screen_Bar_Height
  tags(1)\ti_Tag=#ASLFO_InitialLeftEdge, (Screen_Width - 400)/2
  tags(2)\ti_Tag=#ASLFO_InitialWidth   , 400
