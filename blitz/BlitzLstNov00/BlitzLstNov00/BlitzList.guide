  if AslRequest_(&tags(0))
    Screen_Font$ = Peek.s(*aslfr\fo_Attr\ta_Name)
    Screen_Font_Height = *aslfr\fo_Attr\ta_YSize
    Screen_Detail_Pen  = *aslfr\fo_FrontPen
    Screen_Block_Pen   = *aslfr\fo_BackPen
    CloseWindow 0
    CloseScreen 0
    Free IntuiFont 0
    Gosub open_main_screen
    Gosub build_text_lengths
  end if
  FreeAslRequest_ *aslfr
end if

