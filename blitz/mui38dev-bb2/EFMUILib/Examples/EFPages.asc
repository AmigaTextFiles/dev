If MUICreateApplication<>True Then End

MUINotifyApp 30,#MUIA_Window_CloseRequest,1,-1

MUIOpenWindow 30

Repeat
  ev.l=MUIWaitEvent
Until ev=-1

MUICloseWindow 30

End
