echo "Removing assigns for the current session..."
assign >NIL: Blitz2:
assign >NIL: Blitzlibs:

echo "Deleting prefs files from ENVARC:..."
delete ENVARC:ted.menus quiet
delete ENVARC:ted.prefs quiet
delete ENVARC:ped.prefs quiet

echo "You may now delete the AmiBlitz2 folder and all"
echo "its contents to uninstall AmiBlitz2."
echo ""
echo "Remember to edit your s:user-startup file to remove"
echo "the assigns for AmiBlitz2. They look like this:"
echo "  assign >NIL: Blitz2: *"<directory>*""
echo "  assign >NIL: Blitzlibs: *"<directory>*""

