
#CL_TypeA=0                ; Cop Types ; LowRes FMode0 ECS
#CL_TypeB=1                ; LowRes FMode3 AGA
#CL_TypeC=2                ; HiRes  FMode3 AGA
#CL_TypeD=3                ; Super  FMode3 AGA

#CL_OffDef=44              ; Set Screen offset to default 44

#CL_NoCustoms=0
#CL_ECSCustoms=-2          ; Customs, for Rainbows and stuff.
#CL_AGACustoms=-4
#CL_SPCCustoms=-20

#CL_NoSScrolling=1         ; For others
#CL_NoExtras=0

Statement CreateCopL{CopNumber,CopCols,CopType,OffSet,Customs,Others}
  OurSprites=2
  CSrl=16

  ; Find Type
  Select CopType
    Case 0:CFM.l=0    :CAP.l=0    :CRS.l=0  :CSP.l=1024:OurHeight.w=256
    Case 1:CFM.l=12288:CAP.l=65536:CRS.l=0  :CSP.l=1024:OurHeight.w=256
    Case 2:CFM.l=12288:CAP.l=65536:CRS.l=256:CSP.l=2048:OurHeight.w=256
    Case 3:CFM.l=12288:CAP.l=65536:CRS.l=512:CSP.l=3072:OurHeight.w=512
  End Select

  ; Add Depth depending on Colours..
  Select CopCols
    Case 2  :CDep.b=1
    Case 4  :CDep.b=2
    Case 8  :CDep.b=3
    Case 16 :CDep.b=4
    Case 32 :CDep.b=5
    Case 64 :CDep.b=6
    Case 128:CDep.b=7
    Case 256:CDep.b=8
  End Select

  ; Consider Others
  If Others<>0
    CSrl=0
  EndIf

  InitCopList CopNumber,OffSet,OurHeight,CFM|CAP|CSrl|CRS|CSP|CDep,OurSprites,CopCols,Customs

End Statement


