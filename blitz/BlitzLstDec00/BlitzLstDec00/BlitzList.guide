sec1.l = 0:mic1.l = 0
sec2.l = 0:mic2.l = 0

While ev.l<>#IDCMP_CLOSEWINDOW
    ev = Waitevent
    If ev=#IDCMP_GADGETUP And GadgetHit=1
        CurrentTime_ &sec2, &mic2
        If DoubleClick_(&sec1, &mic1, &sec2m &mic2)
            NPrint "Double clicked"
        End If
       sec1 = sec2 : mic1 = mic2
    End If
