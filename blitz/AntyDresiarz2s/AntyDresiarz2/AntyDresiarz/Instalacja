; $VER Install-AntyDresiarz Issue #2 by Paplo/Taski (13.08.1997)

(welcome)



     (set #JEZYK
	(askchoice
       	(prompt "Wybierz jëzyk w którym chcesz zainstalowaê AntyDresiarza.\nSelect instalation language.")
	(choices "Polski (Polish)" "English (Angielski)")
	(help #askbool-help)
	(default 0)
     ))

; -------------------------------- POLSKIE KOMUNIKATY --------------------------

(if (= #JEZYK "0")

	(

	(set #welcome "Witamy w skrypcie instalacyjnym AntyDresiarza Issue #2.\nJest to juû drugie wydanie nowego polskiego magazynu.\n\nOto co moûesz znaleúê w AntyDresiarzu:\n\nciekawe artykuîy\nduûo grafiki\nmultitasking\nsystemowoôê\npeîka konfigurowalnoôê\nmultimedia :-))")
	(set #destdir-prompt "Wskaû katalog w którym chcesz zainstalowaê AntyDresiarza. Katalog 'AntyDresiarz' zostanie automatycznie stworzony.")

	(set #module_copy "Kopiujë moduîy...")
	(set #pic_copy "Kopiujë rysunki...")
	(set #art_copy "Kopiujë artykuîy...")
	(set #mag_copy "Kopiujë magazyn...")

	(set #making_dirs "Tworzë katalogi...")


	(set #bonus_prompt "Czy mam zainstalowaê dodatki w postaci skryptów, przykîadów, úródîówek itp. ?")
	(set #bonus_choice_a "Instaluj dodatki")
	(set #bonus_choice_b "Nie instaluj dodatków")
	(set #bonus_help "Dodatki czësto sâ przykîadami do Artykuîów\n\nJeûeli je zainstalujesz, to bëdâ one w katalogu DODATKI")

	(set #diskfont_copy "Kopiujë diskfont.library...")
	(set #diskfont_prompt "\n\nInstalacja diskfont.library\n\nBiblioteka z AntyDresiarza ma wersjë\nv39.3\n\nBiblioteka na twoim twardzielu jest w wersji\nv")
	(set #diskfont_choice1 "Instalujë z AntyDresiarza")
	(set #diskfont_choice2 "Zostawiam swojâ")
;	(set #diskfont_help )

	(set #locale_copy "Kopiujë locale.library...")
	(set #locale_prompt "\n\nInstalacja locale.library\n\nBiblioteka z AntyDresiarza ma wersjë\nv40.4\n\nBiblioteka na twoim twardzielu jest w wersji\nv")
	(set #locale_choice1 "Instalujë z AntyDresiarza")
	(set #locale_choice2 "Zostawiam swojâ")
;	(set #locale_help ) 

	(set #reqtools_copy "Kopiujë reqtools.library...")
	(set #reqtools_prompt "\n\nInstalacja reqtools.library\n\nBiblioteka z AntyDresiarza ma wersjë\nv38.1436\n\nBiblioteka na twoim twardzielu jest w wersji\nv")
	(set #reqtools_choice1 "Instalujë z AntyDresiarza")
	(set #reqtools_choice2 "Zostawiam swojâ")
;	(set #reqtools_help ) 

	(set #stc_copy "Kopiujë stc.library...")
	(set #stc_prompt "\n\nInstalacja stc.library\n\nBiblioteka z AntyDresiarza ma wersjë\nv3.41\n\nBiblioteka na twoim twardzielu jest w wersji\nv")
	(set #stc_choice1 "Instalujë z AntyDresiarza")
	(set #stc_choice2 "Zostawiam swojâ")
;	(set #stc_help )

	(set #fonts_copy "Kopiujë czcionki...")

	(set #end "\nWîaônie skoïczyîeô instalacjë AntyDresiarza.\n\nMagazyn uruchom klikajâc na jego ikonce.\n\nJeûeli wystâpiâ jakieô kîopoty podczas pracy maga, to proszë przeczytaê plik readme, w którym zawarte sâ odpowiedzi na najczëôciej zadawane pytania.\n\nMiîego czytania ûyczy grupa Taski.\n\n\nA M I G A    R U L E Z Z Z   ! ! !")

	)
)


; -------------------------------------- ENGLISH MESSAGES ----------------------

(if (= #JEZYK "1")

	(

	(set #welcome "Welcome to AntyDresiarz Issue #2 installation script.\nIt's second issue of new polish magazine.\n\nIn AntyDresiarz you can find:\n\ninteresting articles\na lot of graphics\nmultitasking\nsystem friendly\nfull configurable\nmultimedia :-))")
	(set #destdir-prompt "Choose directory to install AntyDresiarz. Directory called 'AntyDresiarz' will be created automatically.")

	(set #module_copy "Copying modules...")
	(set #pic_copy "Copying pictures...")
	(set #art_copy "Copying articles...")
	(set #mag_copy "Copying magazine...")

	(set #making_dirs "Creating directories...")


	(set #bonus_prompt "Will I install additions: scripts, examples, sources, etc.?")
	(set #bonus_choice_a "Install additions")
	(set #bonus_choice_b "Don't install additions")
	(set #bonus_help "Additions are often examples to articles.\n\nIf you'll install then are in directory called DODATKI")

	(set #diskfont_copy "Copying diskfont.library...")
	(set #diskfont_prompt "\n\nInstall diskfont.library\n\nLibrary from AntyDresiarz is in 39.3\nversion.\n\nLibrary on your hard disk is in version\nv")
	(set #diskfont_choice1 "Install from AntyDresiarz")
	(set #diskfont_choice2 "Leave old version")
;	(set #diskfont_help )

	(set #locale_copy "Copying locale.library...")
	(set #locale_prompt "\n\nInstall locale.library\n\nLibrary from AntyDresiarza is in v40.4\nversion.\n\nLibrary on your hard disk is in version\nv")
	(set #locale_choice1 "Install from AntyDresiarz")
	(set #locale_choice2 "Leave old version")
;	(set #locale_help ) 

	(set #reqtools_copy "Copying reqtools.library...")
	(set #reqtools_prompt "\n\nInstall reqtools.library\n\nLibrary from AntyDresiarz is in v38.1436\nversion.\n\nLibrary on your hard disk is in version\nv")
	(set #reqtools_choice1 "Install from AntyDresiarz")
	(set #reqtools_choice2 "Leave old version")
;	(set #reqtools_help ) 

	(set #stc_copy "Copying stc.library...")
	(set #stc_prompt "\n\nInstall stc.library\n\nLibrary from AntyDresiarza is in v3.41\nversion.\n\nLibrary on your hard disk is in version\nv")
	(set #stc_choice1 "Install from AntyDresiarz")
	(set #stc_choice2 "Leave old version")
;	(set #stc_help )

	(set #fonts_copy "Copying fonts...")

	(set #end "\nYou finished AntyDresiarz installation.\n\nTo execute magazine just double-click on its icon.\n\nIf will be any problems while mag's work then you read file 'readme'. There you can find answers to a lot of questions.\n\nHave a nice reading - Taski group.\n\n\nA M I G A    R U L E Z Z Z   ! ! !")

	)
)


(set #nazwakatalogu "AntyDresiarz2")

(message #welcome)

(set #destinationdrawer

  (askdir
    (prompt #destdir-prompt)
    (help #destdir-help)
    (default "RAM:")
  )
)

	(set #cel (tackon #destinationdrawer #nazwakatalogu))
	(set @default-dest #cel)


; --------- tworzenie katalogów

	(MAKEDIR #cel (infos))

	(Working #making_dirs)
	(MAKEDIR (tackon #cel "MUZYKA"))
	(MAKEDIR (tackon #cel "RYSUNKI"))
	(MAKEDIR (tackon #cel "TEKSTY"))
	(MAKEDIR (tackon #cel "FONTS"))

; --------- kopiowanie plików z dysku 1

	(WORKING #module_copy)
	(COPYFILES (SOURCE "MUZYKA") (DEST (tackon #cel "MUZYKA")) (ALL) (NOGAUGE) )
	(WORKING #pic_copy)
	(COPYFILES (SOURCE "RYSUNKI") (DEST (tackon #cel "RYSUNKI")) (ALL) (NOGAUGE) )
	(WORKING #art_copy)
	(COPYFILES (SOURCE "TEKSTY") (DEST (tackon #cel "TEKSTY")) (ALL) (NOGAUGE) )
	
	(WORKING #mag_copy)
	(COPYFILES (SOURCE "MAG.exe") (DEST #cel) (NOGAUGE) )
	(COPYFILES (SOURCE "AntydResiarz2.info") (DEST #cel) (NOGAUGE) )
	(COPYFILES (SOURCE "prefs.pre") (DEST #cel) (NOGAUGE) )

; --------- generacja skryptu uruchamiajâcego

	(textfile
		(dest (cat #cel "/AntyDresiarz2"))
		(append "Assign FONTS: FONTS\n\nMAG.EXE\n")
		(safe)
	)

; --------- Instalacja dodatków

	(set #InstalowacDodatki
		(askbool
		(prompt  #bonus_prompt)
		(choices #bonus_choice_a #bonus_choice_b)
		(help #bonus_help)
		(default 1)
	))


	(if (= #InstalowacDodatki 1)
	(
		(MAKEDIR (tackon #cel "DODATKI"))
		(COPYFILES (SOURCE "DODATKI") (DEST (tackon #cel "DODATKI")) (ALL))
	)
	) 
; --------- DiskFont.library

	(set DiskFontVersion (/ (getversion "LIBS:diskfont.library") 65536))

	(set #InstalowacDiskFont
	        (askbool
       		(prompt #diskfont_prompt DiskFontVersion)
		(choices #diskfont_choice1 #diskfont_choice2)
		(help #askbool-help)
	 	(default 1)
	))
	

	(if (= #InstalowacDiskFont 1)
	(
		(WORKING #diskfont_copy)
		(COPYFILES (SOURCE "Libs/diskfont.library") (DEST "LIBS:") (ALL) (NOGAUGE) )
	)
	)

; --------- Locale.library

	(set LocaleVersion (/ (getversion "LIBS:locale.library") 65536))

	(set #InstalowacLocale
	        (askbool
       		(prompt #locale_prompt LocaleVersion)
		(choices #locale_choice1 #locale_choice2)
		(help #askbool-help)
	 	(default 1)
	))
	

	(if (= #InstalowacLocale 1)
	(
		(WORKING #locale_copy)
		(COPYFILES (SOURCE "Libs/locale.library") (DEST "LIBS:") (ALL) (NOGAUGE) )
	)
	)


; ------------ ReqTools.library

	(set ReqToolsVersion (/ (getversion "LIBS:reqtools.library") 65536))

	(set #InstalowacReqTools
	        (askbool
       		(prompt #reqtools_prompt ReqToolsVersion)
		(choices #reqtools_choice1 #reqtools_choice2)
		(help #askbool-help)
	 	(default 1)
	))
	

	(if (= #InstalowacReqTools 1)
	(
		(WORKING #reqtools_copy)
		(COPYFILES (SOURCE "Libs/reqtools.library") (DEST "LIBS:") (ALL) (NOGAUGE) )
	)
	)

; ------------ stc.library

	(set StcVersion (/ (getversion "LIBS:stc.library") 65536))

	(set #InstalowacStc
	        (askbool
       		(prompt #stc_prompt StcVersion)
		(choices #stc_choice1 #stc_choice2)
		(help #askbool-help)
	 	(default 1)
	))
	

	(if (= #InstalowacStc 1)
	(
		(WORKING #stc_copy)
		(COPYFILES (SOURCE "Libs/stc.library") (DEST "LIBS:") (ALL) (NOGAUGE) )
	)
	)

; ------------- Fonts

	(WORKING #fonts_copy)
	(COPYFILES (SOURCE "Fonts") (DEST (tackon #cel "FONTS")) (ALL) (NOGAUGE) )

; ------------- Koniec


(message #end)

(exit)
