
; "lucy_audio.ab2" a C to Blitz adaptation by Lorence Lombardo.
; Based  on Oliver Gantert's "audio.c" example.

; Use only 8 or 16 bit RIFF-WAV format.


If NumPars<1 Then End

INCLUDE "lucyplay.include.bb2"

If lucyplay_InitLib{1}=0 Then End

arg$=Par$(1)

!lucyplay_lucAudioInit{lucy_ok.l}

If lucy_ok
   !lucyplay_lucAudioLoad {smp.l,&arg$}
   If smp
      !lucyplay_lucAudioPlay {smp}
      !lucyplay_lucAudioWait {}
   EndIf
   !lucyplay_lucAudioKill {}
EndIf

lucyplay_FreeLib {}

End



