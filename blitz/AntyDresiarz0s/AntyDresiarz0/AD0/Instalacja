; $VER Install-AntydResiarz Issue#0 by Paplo/Taski

(set #welcome "Witamy w skrypcie instalacyjnym AntyDresiarza Issue#0.\nJest to najnowszy polski zine pracujâcy caîkowicie pod sytemem.")
(set #destdir-prompt "Wskaû katalog w którym chcesz zainstalowaê AntydResiarza. Katalog 'AntydResiarz' zostanie automatycznie stworzony.")
(set #end "Udaîo Ci sië zainstalowaê maga.\nTeraz odpal go klikajâc na jego ikonkë.\n\nA M I G A    R U L E Z Z Z   ! ! ! ")

(message #welcome)

(set addir
  (askdir
    (prompt #destdir-prompt)
    (help #destdir-help)
    (default "RAM:") ) )

	(MAKEASSIGN "ADW" addir)
	(MAKEDIR "ADW:AntydResiarz" (infos))
	(MAKEASSIGN "ADWork" "ADW:AntydResiarz")

	(Working "Tworzë katalogi...")
	(MAKEDIR "ADWork:MUZYKA")
	(MAKEDIR "ADWork:RYSUNKI")
	(MAKEDIR "ADWork:TEKSTY")
	(MAKEDIR "ADWork:FONTS")


	(WORKING "Kopiujë pliki...")
	(COPYFILES (SOURCE "AntyDresiarz0:MUZYKA") (DEST "ADWork:MUZYKA/") (ALL))
	(COPYFILES (SOURCE "AntyDresiarz0:RYSUNKI") (DEST "ADWork:RYSUNKI/") (ALL))
	(COPYFILES (SOURCE "AntyDresiarz0:TEKSTY") (DEST "ADWork:TEKSTY/") (ALL))
	
	(COPYFILES (SOURCE "AntyDresiarz0:MAG.exe") (DEST "ADWork:"))
	(COPYFILES (SOURCE "AntyDresiarz0:AntydResiarz0") (DEST "ADWork:"))
	(COPYFILES (SOURCE "AntyDresiarz0:AntydResiarz0.info") (DEST "ADWork:"))
	(COPYFILES (SOURCE "AntyDresiarz0:prefs.pre") (DEST "ADWork:"))

	(COPYFILES (SOURCE "AntyDresiarz0:Libs") (DEST "LIBS:") (ALL))
	(COPYFILES (SOURCE "AntyDresiarz0:Fonts") (DEST "ADWork:FONTS") (ALL))

(message #end)
