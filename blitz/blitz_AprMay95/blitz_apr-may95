;example by Mikko Makela (not the original idea though)

Dim xv.q(100),xo(100),y.q(100),z.w(100)
Screen 1,2
ScreensBitMap 1,1
Use BitMap 1
Boxf 0,0,20,20,3
GetaShape 0,0,0,2,3
Goto h:
RGB 0,0,0,0
Cls 0
For l1=1 To 15:For l2=1 To 15
RGB l2,0,l1,l2
VWait
Boxf l2*5,l2*5,l2*5+5,l2*5+5,l2
Next l2
MouseWait
VWait 10
Next l1
End
h:
CloseScreen 1


BLITZ
BitMap 0,320,256,4
BitMap 1,320,256,4

Slice 0,44,320,256,$fff0,4,8,32,320,320

BitPlanesBitMap 0,2,3
BitPlanesBitMap 0,3,12
BitPlanesBitMap 1,4,3
BitPlanesBitMap 1,5,12

;BitPlanesBitmap is used here to "devide" the original bitmap
;to allow the blitting of red/blue stars separately so, that
;whenever they share some area, the area will be coloured as
;a compination of red&blue (palette is made that way).
;This technique could be easily used with much more complex
;3D-programs with more complex objects - just 2 versions of
;one object should be blitted (one for each eye), the other
;in red and the other in blue, from little different "viewpoints"

For l=0 To 15
Read r,b
RGB l,b,0,r
Next l
Data 0,0,3,0,6,0,9,0,0,3,3,3,6,3,9,3,0,6,3,6,6,6,9,6,0,9,3,9,6,9,9,9


For l=1 To m
xv(l)=kpx+Rnd(100)-50:xo(l)=xv(l)+20:y(l)=kpy+Rnd(100)-50
z(l)=Rnd(100)
Next l
m=20:vakio=0.0003
kpx.q=170:kpy.q=120
While Joyb(0)=0
 For l=1 To m
  xv(l)=xv(l)+(xv(l)-kpx)*vakio*z(l)
  xo(l)=xv(l)+(200-z(l))*0.1
  y(l)=y(l)+(y(l)-kpy)*vakio*z(l)
  z(l)=z(l)+1
  If xv(l)<3 OR xo(l)>317 OR y(l)<3 OR y(l)>250 OR z(l)>200
   xv(l)=kpx+Rnd(100)-50:xo(l)=xv(l)+10:y(l)=kpy+Rnd(100)-50
   z(l)=Rnd(20)
  EndIf
  Use BitMap 2
  Blit 0,xv(l),y(l)
  Use BitMap 3
  Blit 0,xo(l),y(l)
 Next l
 Show 0
 Use BitMap 1
 Cls 0

 For l=1 To m
  xv(l)=xv(l)+(xv(l)-kpx)*vakio*z(l)
  xo(l)=xv(l)+(200-z(l))*0.1
  y(l)=y(l)+(y(l)-kpy)*vakio*z(l)
  z(l)=z(l)+1
  If xv(l)<3 OR xo(l)>317 OR y(l)<3 OR y(l)>250 OR z(l)>200
   xv(l)=kpx+Rnd(100)-50:xo(l)=xv(l)+10:y(l)=kpy+Rnd(100)-50
   z(l)=Rnd(20)
  EndIf
  Use BitMap 2
  Blit 0,xv(l),y(l)
  Use BitMap 3
  Blit 0,xo(l),y(l)
 Next l
 Show 1
 Use BitMap 0
 Cls 0
Wend
AMIGA
;MouseWait
End




