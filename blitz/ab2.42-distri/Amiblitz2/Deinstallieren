echo "Lösche Prefs-Dateien von ENVARC:..."
echo ""
delete ENVARC:ted.menus quiet
delete ENVARC:ted.prefs quiet
delete ENVARC:ped.prefs quiet
delete ENV:ted.menus quiet
delete ENV:ted.prefs quiet
delete ENV:ped.prefs quiet

ask "Ist die deutsche Version von AmiBlitz, PED und der online-Hilfe installiert? (y/n)"
if warn
  echo "Deutsch ausgewählt"
  rename blitz2:Amiblitz2 blitz2:amiblitz2_ger
  rename blitz2:PED blitz2:ped_ger
  rename blitz2:help.dat blitz2:help_ger.dat
  rename blitz2:RedHelp/RedHelp.dat blitz2:RedHelp/RedHelp_ger.dat
  rename blitz2:RedHelp/REDBlitzLibs/REDBlitzLibs.guide blitz2:RedHelp/REDBlitzLibs/REDBlitzLibs_ger.guide 

  rename blitz2:amiblitz2_eng blitz2:Amiblitz2
  rename blitz2:ped_eng blitz2:PED
  rename blitz2:help_eng.dat blitz2:help.dat
  rename blitz2:RedHelp/RedHelp_eng.dat blitz2:RedHelp/RedHelp.dat
  rename blitz2:RedHelp/REDBlitzLibs/REDBlitzLibs_eng.guide blitz2:RedHelp/REDBlitzLibs/REDBlitzLibs.guide 
else
  echo "Englisch ausgewählt"
endif

echo "Entferne Assigns für die aktuelle Sitzung..."
echo ""
assign >NIL: Blitz2:
assign >NIL: Blitzlibs:

echo "Die Deinstallation der AmiBlitz2-Distribution ist abgeschlossen."
echo ""
echo "Das AmiBlitz2-Verzeichnis ist wieder im Urzustand"
echo "und kann entweder erneut installiert oder mit all seinen"
echo "Bestandteilen gelöscht werden."
echo ""
echo "Vergessen sie nicht in der s:user-startup die Assigns"
echo "für AmiBlitz2 zu entfernen. Sie sehen in etwa so aus.:"
echo "  assign >NIL: Blitz2: *"<directory>*""
echo "  assign >NIL: Blitzlibs: *"<directory>*""

