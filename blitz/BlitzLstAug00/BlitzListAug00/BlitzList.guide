bmidtags(1)\ti_Tag = #BIDTAG_NominalHeight,600
bmidtags(2)\ti_Tag = #BIDTAG_DesiredWidth,800
bmidtags(3)\ti_Tag = #BIDTAG_DesiredHeight,600
