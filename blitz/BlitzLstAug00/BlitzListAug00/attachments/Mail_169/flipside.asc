v$="$VER: Flipside 1.2 (01/12/1999) James L Boyd/Allan Versaevel "

NBWStartup
NProgramPriority (2)
If NInitScreen (1)=0 Then End

Repeat

  If Peek.w ($DFF016) BitTst 8=0			; detects middle mouse button
    *scr.Screen=NFindFrontScreen (0)
    If *scr
      ScreenToBack_ *scr
    EndIf
    While Peek.w ($DFF016) BitTst 8=0:Delay_ 03:Wend	; waits till middle button's released
  EndIf
 Delay_ 03

Until SetSignal_(0,#SIGBREAKF_CTRL_C) & #SIGBREAKF_CTRL_C

End
