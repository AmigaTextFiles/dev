
WBStartup
WbToScreen 0
FindScreen 0

Window  0,20,20,200,200,$f,"window",1,2

  GTMenuTitle  0,0,      "title"
    GTMenuItem  0,0,0,0, "text 1"
    GTMenuItem  0,0,0,1, "text 2"
    GTMenuItem  0,0,0,2, "text 3"
    GTSetMenu 0

Repeat
  ev=WaitEvent
  NPrint ev
  If ev=256
;    GTUnSetMenu
;    GTFreeMenu 0,0

    GTMenuTitle  0,0,  "new title"
    GTMenuItem 0,0,0,0,"new1"
    GTMenuItem 0,0,0,1,"new2"
    GTSetMenu 0
  EndIf
Until ev=512

CloseWindow 0

End

