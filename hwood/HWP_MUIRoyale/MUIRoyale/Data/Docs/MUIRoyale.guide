    @{"Area.ContextMenu                  " LINK AreaContextMenu} Set context menu for object
    @{"Area.ContextMenuTrigger           " LINK AreaContextMenuTrigger} React on context menu events
    @{"Area.ControlChar                  " LINK AreaControlChar} Set shortcut for object
    @{"Area.CycleChain                   " LINK AreaCycleChain} Set/get cycle chain flag
    @{"Area.Disabled                     " LINK AreaDisabled} Set/get disabled state
