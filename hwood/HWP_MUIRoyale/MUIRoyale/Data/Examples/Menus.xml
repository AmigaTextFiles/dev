<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="MENU">

	<menustrip id="strip">

		<menu title="Project">
			<item id="men_about" shortcut="?" notify="selected">About</item>
			<item/>
			<item id="men_quit" shortcut="Q" notify="selected">Quit</item>
		</menu>

		<menu id="men_edit" title="Edit">
			<item id="men_cut" shortcut="X">Cut</item>
			<item id="men_copy" shortcut="C">Copy</item>
			<item id="men_paste" shortcut="V">Paste</item>
		</menu>

		<menu id="men_settings" title="Settings" disabled="true">
			
			<menu id="men_hardware" title="Hardware" disabled="true">
				<item id="men_hw1" shortcut="1" type="radio" selected="true" exclude="14" notify="selected" notifydata="selected: radio" userdata="0">A1000</item>
				<item id="men_hw2" shortcut="2" type="radio" exclude="13" notify="selected" notifydata="selected: radio" userdata="1">A2000</item>
				<item id="men_hw3" shortcut="3" type="radio" exclude="11" notify="selected" notifydata="selected: radio" userdata="2">A3000</item>
				<item id="men_hw4" shortcut="4" type="radio" exclude="7" notify="selected" notifydata="selected: radio" userdata="3">A4000</item>
			</menu>

			<menu id="men_software" title="Software" disabled="true">
				<item id="men_mui" shortcut="M" type="toggle" notify="selected" notifydata="selected: toggle" userdata="cm1">MUI</item>
				<item id="men_mfr" shortcut="F" type="toggle" notify="selected" notifydata="selected: toggle" userdata="cm2">MFR</item>
				<item id="men_mwb" shortcut="W" type="toggle" notify="selected" notifydata="selected: toggle" userdata="cm3">MagicWB</item>
				<item id="men_dfa" shortcut="D" type="toggle" notify="selected" notifydata="selected: toggle" userdata="cm4">DFA</item>
			</menu>
		</menu>
	</menustrip>

	<menustrip>
		<menu id="menumisc" title="Misc">
			<item>Dynamic</item>
			<item>Adding</item>
			<item>Of</item>
			<item>Items</item>
			<item>Is</item>
			<item id="possi" type="toggle" selected="true">Possible</item>
		</menu>
	</menustrip>

	<window title="Menus" muiid="MEN1" id="win1" menustrip="strip" notify="closerequest">
		<vgroup>
			<cycle id="cy1" notify="active" userdata="men_settings">
				<item>Settings disabled</item>
				<item>Settings enabled</item>
			</cycle>

			<hgroup samesize="true">

				<cycle id="cy2" notify="active" userdata="men_hardware">
					<item>Hardware disabled</item>
					<item>Hardware enabled</item>
				</cycle>

				<cycle id="cy3" notify="active" userdata="men_software">
					<item>Software disabled</item>
					<item>Software enabled</item>
				</cycle>
			</hgroup>

			<rectangle fixheight="4" hbar="true"/>

			<hgroup>
				<hspace width="0"/>

				<radio id="radio" notify="active">
					<item>Amiga 1000</item>
					<item>Amiga 2000</item>
					<item>Amiga 3000</item>
					<item>Amiga 4000</item>
				</radio>

				<hspace width="0"/>

				<rectangle fixwidth="1" vbar="true"/>

				<hspace width="0"/>

				<colgroup columns="2">

					<label>_MUI</label>
					<checkmark id="cm1" notify="selected" controlchar="m" userdata="men_mui"/>

					<label>M_FR</label>
					<checkmark id="cm2" notify="selected" controlchar="f" userdata="men_mfr"/>

					<label>Magic_WB</label>
					<checkmark id="cm3" notify="selected" controlchar="w" userdata="men_mwb"/>

					<label>_DFA</label>
					<checkmark id="cm4" notify="selected" controlchar="d" userdata="men_dfa"/>
				</colgroup>

				<hspace width="0"/>
			</hgroup>

			<rectangle fixheight="4" hbar="true"/>

			<hgroup samesize="true">
				<button id="btadd" notify="pressed">_Add Misc Menu</button>
				<button id="btrem" notify="pressed" disabled="true">_Remove Misc Menu</button>
				<button id="bttog" notify="pressed">_Toggle Misc Titles</button>
			</hgroup>
		</vgroup>
	</window>
</application>



