<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="PAGESDEMO">
	<window title="Character Definition" muiid="PAGE" id="window" notify="closerequest">
		<vgroup>
			<colgroup columns="2">
				
				<label>Name:</label>
				<string contents="Quasimodo" maxlen="32"/>

				<label>Sex:</label>
				<cycle>
					<item>male</item>
					<item>female</item>
				</cycle>
			</colgroup>

			<vspace height="2"/>

			<register>

				<hgroup title="Race">
					<rectangle/>
					<vgroup frame="group" background="groupback">
						<radio>
							<item>Human</item>
							<item>Elf</item>
							<item>Dwarf</item>
							<item>Dweller</item>
							<item>Gnome</item>
						</radio>
					</vgroup>
					<rectangle/>
				</hgroup>

				<hgroup title="Class">
					<rectangle/>
					<vgroup frame="group" background="groupback">
						<radio>
							<item>Warrior</item>
							<item>Rogue</item>
							<item>Bard</item>
							<item>Monk</item>
							<item>Magician</item>
							<item>Archmage</item>
						</radio>
					</vgroup>
					<rectangle/>
				</hgroup>

				<hgroup title="Armor">
					<colgroup columns="2">
						<label>Cloak:</label>
						<checkmark selected="true"/>

						<label>Shield:</label>
						<checkmark selected="true"/>

						<label>Gloves:</label>
						<checkmark selected="true"/>

						<label>Helmet:</label>
						<checkmark selected="true"/>
					</colgroup>
				</hgroup>

				<hgroup title="Level">
					<colgroup columns="2">
						<label>Experience:</label>
						<slider min="0" max="100" level="3"/>

						<label>Strength:</label>
						<slider min="0" max="100" level="42"/>

						<label>Dexterity:</label>
						<slider min="0" max="100" level="24"/>

						<label>Condition:</label>
						<slider min="0" max="100" level="39"/>

						<label>Intelligence:</label>
						<slider min="0" max="100" level="74"/>
					</colgroup>
				</hgroup>
			</register>
		</vgroup>
	</window>
</application>



