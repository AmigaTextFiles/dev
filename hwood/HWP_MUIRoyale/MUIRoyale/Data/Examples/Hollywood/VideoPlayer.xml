<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="VIDEOPLAYER" menustrip="menu">

	<menustrip id="menu">

		<menu title="Project">
			<item id="mn_last" notify="selected" disabled="true" shortcut="l">Last</item>
			<item id="mn_play" notify="selected" disabled="true" shortcut="p">Play</item>
			<item id="mn_pause" notify="selected" disabled="true" shortcut="e">Pause</item>
			<item id="mn_stop" notify="selected" disabled="true" shortcut="s">Stop</item>
			<item id="mn_next" notify="selected" disabled="true" shortcut="n">Next</item>
			<item/>
			<item id="mn_about" notify="selected" shortcut="?">About...</item>
			<item id="mn_aboutmui" notify="selected">About MUI...</item>
			<item id="mn_aboutmuiroyale" notify="selected">About MUI Royale...</item>
			<item/>
			<item id="mn_quit" notify="selected" shortcut="Q">Quit</item>
		</menu>

		<menu title="Playlist">
			<item id="mn_add" notify="selected" shortcut="a">Add...</item>
			<item id="mn_mvup" notify="selected" disabled="true" shortcut="u">Move up</item>
			<item id="mn_mvdn" notify="selected" disabled="true" shortcut="d">Move down</item>
			<item id="mn_rem" notify="selected" disabled="true" shortcut="r">Remove</item>
		</menu>

		<menu title="View">
			<item id="mn_aa" notify="selected" type="toggle" selected="false">Use antialias interpolation</item>
			<item id="mn_pl" notify="selected" type="toggle" selected="true">Playlist</item>
		</menu>

		<menu title="Settings">
			<item id="mn_muisettings" notify="selected">MUI...</item>
		</menu>

	</menustrip>

	<window id="playlist" leftedge="0" topedge="delta:0" title="Playlist" muiid="PLST" activate="false" notify="closerequest">
		<vgroup>

			<listview id="lv" notify="active; doubleclick" minlineheight="24" cyclechain="1">
				<column/>
			</listview>
		
			<hgroup samesize="true">
				<button id="add" notify="pressed">\33A[6] Add</button>
				<button id="mvup" disabled="true" notify="pressed">\33A[8] Move up</button>
				<button id="mvdn" disabled="true" notify="pressed">\33A[9] Move down</button>
				<button id="rem" disabled="true" notify="pressed">\33A[7] Remove</button>
			</hgroup>
		</vgroup>
	</window>

	<window id="main" title="VideoPlayer" muiid="VIDP" activate="true" notify="closerequest">
		<vgroup>
			<hollywood display="1" maxwidth="16384" maxheight="16384" minwidth="16" minheight="16" frame="readlist"/>
			<slider id="time" font="big" disabled="true" notify="stringify; level" stringify="p_Milliseconds2Time" format="00:00:00" cyclechain="1"/>
			<slider id="vol" font="big" disabled="true" notify="level" min="0" max="64" level="64" cyclechain="1"/>
			<hgroup samesize="true">
				<button id="last" disabled="true" notify="pressed">\33A[1] Last</button>
				<button id="play" disabled="true" notify="pressed">\33A[2] Play</button>
				<button id="pause" disabled="true" notify="pressed">\33A[3] Pause</button>
				<button id="stop" disabled="true" notify="pressed">\33A[4] Stop</button>
				<button id="next" disabled="true" notify="pressed">\33A[5] Next</button>
			</hgroup>
		</vgroup>
	</window>
</application>

