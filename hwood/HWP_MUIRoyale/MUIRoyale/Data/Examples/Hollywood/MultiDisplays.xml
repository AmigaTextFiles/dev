<?xml version="1.0" encoding="iso-8859-1"?>
<application base="mycoolapp" id="app">
	<window title="MultiDisplays" notify="closerequest">
		<hgroup>
			<rectangle/>
			
			<vgroup>
				<rectangle/>

				<vgroup frame="group" frametitle="Hollywood is magic" background="groupback">

					<cycle id="cy" notify="active" cyclechain="1">
						<item>Mixed</item>
						<item>Display 1</item>
						<item>Display 2</item>
						<item>Display 3</item>
						<item>Display 4</item>
					</cycle>

					<colgroup columns="2">
						<hollywood id="hwmcc1" display="1"/>
						<hollywood id="hwmcc2" display="2"/>
						<hollywood id="hwmcc3" display="3"/>
						<hollywood id="hwmcc4" display="4"/>
					</colgroup>

					<hgroup samesize="true">
						<button id="ok" notify="pressed">OK</button>
						<button id="cancel" notify="pressed">Cancel</button>
					</hgroup>
				</vgroup>

				<rectangle/>
			</vgroup>

			<rectangle/>
		</hgroup>
	</window>
</application>

