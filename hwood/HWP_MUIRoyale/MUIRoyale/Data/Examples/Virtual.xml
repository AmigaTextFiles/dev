										<label key="c">Computer:</label>
										<cycle controlchar="c" cyclechain="1">
											<item>Amiga 500</item>
											<item>Amiga 600</item>
											<item>Amiga 1000 :)</item>
											<item>Amiga 1200</item>
											<item>Amiga 2000</item>
											<item>Amiga 3000</item>
											<item>Amiga 4000</item>
											<item>Amiga 4000T</item>
											<item>Atari ST :(</item>
										</cycle>

										<label key="p">Printer:</label>
										<cycle controlchar="p" cyclechain="1">
											<item>HP Deskjet</item>
											<item>NEC P6</item>
											<item>Okimate 20</item>
										</cycle>

										<label key="d">Display:</label>
										<cycle controlchar="d" cyclechain="1">
											<item>A1081</item>
											<item>NEC 3D</item>
											<item>A2024</item>
											<item>Eizo T660i</item>
										</cycle>
									</colgroup>

									<listview active="0" cyclechain="1">
										<column>
											<item>Amiga 500</item>
											<item>Amiga 600</item>
											<item>Amiga 1000 :)</item>
											<item>Amiga 1200</item>
											<item>Amiga 2000</item>
											<item>Amiga 3000</item>
											<item>Amiga 4000</item>
											<item>Amiga 4000T</item>
											<item>Atari ST :(</item>
										</column>
									</listview>
								</vgroup>
							</hgroup>

							<colgroup columns="4" frame="group" frametitle="Button Field" background="groupback">

								<button>Button</button>
								<button>Button</button>
								<button>Button</button>
								<button>Button</button>

								<button>Button</button>
								<button>Button</button>
								<button>Button</button>
								<button>Button</button>

								<button>Button</button>
								<button>Button</button>
								<button>Button</button>
								<button>Button</button>

							</colgroup>
						</vgroup>
					</virtgroup>
				</scrollgroup>

				<scrollgroup>

					<virtgroup columns="3" frame="virtual" spacing="10">

						<vgroup frame="group">
							<hgroup>
								<hspace width="0"/>
								<imagebutton id="bt1" source="arrowup" notify="pressed"/>
								<hspace width="0"/>
							</hgroup>

							<hgroup>
								<imagebutton id="bt2" source="arrowleft" notify="pressed"/>
