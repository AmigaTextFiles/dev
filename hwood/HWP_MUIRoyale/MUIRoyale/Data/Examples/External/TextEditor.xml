<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="TextEditor-Demo">
	<window id="win" title="TextEditor-Demo" muiid="MAIN" notify="closerequest; mouseobject">
		<vgroup>
			<vgroup background="groupback" frame="group">

				<toolbar id="tb" horiz="true" viewmode="gfx">
					<button id="tb_clear" image="1" disimage="15" notify="pressed" shorthelp="Clear document contents"/>
					<button id="tb_load" image="2" disimage="16" notify="pressed" shorthelp="Load text from file"/>
					<button/>
					<button id="tb_cut" image="3" disimage="17" notify="pressed" shorthelp="Cut marked text"/>
					<button id="tb_copy" image="4" disimage="18" notify="pressed" shorthelp="Copy marked text"/>
					<button id="tb_paste" image="5" disimage="19" notify="pressed" shorthelp="Paste from clipboard"/>
					<button id="tb_undo" image="6" disimage="20" notify="pressed" shorthelp="Undo last change"/>
					<button/>
					<button id="tb_bold" image="7" disimage="21" notify="selected" shorthelp="Bold text" toggle="true" userdata="stylebold"/>
					<button id="tb_italic" image="8" disimage="22" notify="selected" shorthelp="Italic text" toggle="true" userdata="styleitalic"/>
					<button id="tb_underline" image="9" disimage="23" notify="selected" shorthelp="Underlined text" toggle="true" userdata="styleunderline"/>
					<button id="tb_color" image="10" disimage="24" notify="selected" shorthelp="Colored text" toggle="true" userdata="stylecolor"/>
					<button/>
					<button id="tb_left" image="11" disimage="25" notify="selected" shorthelp="Left aligned" toggle="true" selected="true" userdata="_left" exclude="49152"/>
					<button id="tb_center" image="12" disimage="26" notify="selected" shorthelp="Centered" toggle="true" userdata="_center" exclude="40960"/>
					<button id="tb_right" image="13" disimage="27" notify="selected" shorthelp="Right aligned" toggle="true" userdata="_right" exclude="24576"/>
					<button/>
					<button id="tb_runrexx" image="14" disimage="28" notify="pressed" disabled="true" shorthelp="Run an ARexx script"/>
				</toolbar>

				<texteditor id="editor" scrollbar="true" cyclechain="1" notify="areamarked; undoavailable; stylebold; styleitalic; styleunderline; color; align" notifydata="stylebold: tb_bold; styleitalic: tb_italic; styleunderline: tb_underline"/>

				<text id="status"/>
			</vgroup>
		</vgroup>
	</window>
</application>

