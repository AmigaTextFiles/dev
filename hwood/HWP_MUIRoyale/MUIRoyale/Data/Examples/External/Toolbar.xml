<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="THEBAREXAMPLE">
	<window title="TheBar Demo1" muiid="MAIN" notify="closerequest">
		<vgroup>
			<toolbar id="tb" horiz="true">
				<button image="1" selimage="12" disimage="23" shorthelp="Pread mail.">_Pred</button>
				<button image="2" selimage="13" disimage="24" shorthelp="Next mail.">_Next</button>
				<button image="3" selimage="14" disimage="25" shorthelp="Move somewhere.">_Move</button>
				<button/>
				<button image="4" selimage="15" disimage="26" shorthelp="Forward somewhere.">_Forw</button>
				<button image="5" selimage="16" disimage="27" shorthelp="Find something.">F_ind</button>
				<button image="6" selimage="17" disimage="28" shorthelp="Save mail.">_Save</button>
			</toolbar>

			<vgroup frame="group" frametitle="Settings" background="groupback">
				<hgroup>
					<label doubleframe="true">Appearance</label>
					<cycle id="appearance">
						<item>Images and text</item>
						<item>Images</item>
						<item>Text</item>
					</cycle>

					<label doubleframe="true">Label pos</label>
					<cycle id="labelpos">
						<item>Bottom</item>
						<item>Top</item>
						<item>Right</item>
						<item>Left</item>
					</cycle>
				</hgroup>

				<hgroup>
					<hspace/>
					<label singleframe="true">Borderless</label>
					<checkmark id="borderless"/>

					<hspace/>
					<label singleframe="true">Sunny</label>
					<checkmark id="sunny"/>

					<hspace/>
					<label singleframe="true">Raised</label>
					<checkmark id="raised"/>

					<hspace/>
					<label singleframe="true">Scaled</label>
					<checkmark id="scaled"/>
				</hgroup>
			</vgroup>

			<button id="update" notify="pressed">_Update</button>
		</vgroup>
	</window>
</application>

