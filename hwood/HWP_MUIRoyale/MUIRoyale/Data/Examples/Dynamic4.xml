<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" base="DYNAMIC4">

	<menustrip id="strip">

		<menu id="projectmenu" title="Project">
			<item id="men_about" shortcut="?" notify="selected">About</item>
			<item id="men_separator"></item>
 			<item id="men_quit" shortcut="Q" notify="selected">Quit</item>
		</menu>
	</menustrip>

	<menuitem id="separator"></menuitem>
	<menuitem id="separator2"></menuitem>

	<window title="Dynamic 4" notify="closerequest" id="win" menustrip="strip">
		<vgroup>
			<colgroup columns="3">
				<button id="addsingle" notify="pressed">Add single item</button>
				<button id="addroot" notify="pressed">Add root menu</button>
				<button id="addsub" notify="pressed">Add sub menu</button>

				<button id="remsingle" notify="pressed">Remove single item</button>
				<button id="remroot" notify="pressed">Remove root menu</button>
				<button id="remsub" notify="pressed">Remove sub menu</button>
			</colgroup>
		</vgroup>
	</window>
</application>

