<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	<window title="Scrollbar demo" width="400" height="600">
		<vgroup>
	
			<hgroup>
				<vgroup>
					<hollywood id="thumbs" display="1" fixwidth="false" fixheight="false"/>
					<scrollbar id="hscroll" range="342" target="thumbs" notify="level" horiz="true"/>					
				</vgroup>
				<scrollbar id="vscroll" range="6562" target="thumbs" notify="level"/>
			</hgroup>
									
			<button id="close">Close</button>
		</vgroup>
	</window>
</application>
