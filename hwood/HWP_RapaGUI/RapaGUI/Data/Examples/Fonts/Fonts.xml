<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	<window height="480" title="Fonts">
		<vgroup>
			<texteditor>This widget uses a normal font size</texteditor>
			<texteditor fontsize="big">This widget uses a bigger font size</texteditor>
			<texteditor fontsize="small">This widget uses a smaller font size</texteditor>	
			<texteditor fontstyle="fixed">This widget uses a monospace font</texteditor>								
			<hgroup>
				<button fontstyle="bold">Button with bold text</button>
				<button fontstyle="italic">Button with italic text</button>
				<button fontstyle="underlined">Button with underlined text</button>
			</hgroup>
		</vgroup>	
   	</window>
</application>
