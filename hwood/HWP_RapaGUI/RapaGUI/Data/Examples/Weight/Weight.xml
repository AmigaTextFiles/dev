<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	<window title="Weight" width="1024" height="768">
		<vgroup>
			<!-- NB: we don't set the text in the XML to workaround this wxWidgets bug: https://trac.wxwidgets.org/ticket/18809 -->
			<textview id="text" weight="20"/>						
			<hgroup>
				<textview>One</textview>
				<textview weight="200">Two</textview>
				<textview>Three</textview>
			</hgroup>	
			<hgroup>
				<button>One</button>
				<button weight="200">Two</button>
				<button>Three</button>
			</hgroup>
		</vgroup>	
   	</window>
</application>
