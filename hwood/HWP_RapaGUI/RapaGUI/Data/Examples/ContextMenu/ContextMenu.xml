<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	
	<menu title="Context menu" id="mn">
		<item id="normal">Normal item</item>
		<item/>
		<item id="toggle" type="toggle">Toggle item</item>
		<item/>
		<item id="radio1" type="radio">Radio item 1</item>
		<item id="radio2" type="radio">Radio item 2</item>
		<item id="radio3" type="radio">Radio item 3</item>
		<item/>
		<menu title="Submenu">
			<item id="sub_normal">Normal item</item>
			<item/>
			<item id="sub_toggle" type="toggle">Toggle item</item>
			<item/>	
			<item id="sub_radio1" type="radio">Radio item 1</item>
			<item id="sub_radio2" type="radio">Radio item 2</item>
			<item id="sub_radio3" type="radio">Radio item 3</item>
		</menu>			
	</menu>
		
	<menu title="Context menu 2" id="mn2">
		<item id="alternate">Alternate item</item>
	</menu>
			
	<window title="Context menu">
		<vgroup>
			<texteditor id="text1" contextmenu="mn">First text widget - try my context menu!</texteditor>
			<texteditor id="text2" contextmenu="mn">Second text widget - try my context menu!</texteditor>
			<texteditor id="text3" contextmenu="mn">Third text widget - try my context menu!</texteditor>
			<hgroup>
				<button id="but1" notifydata="pressed:toggle">Toggle item</button>
				<button id="but3" notifydata="pressed:radio">Cycle radio items</button>
				<button id="but5" notifydata="pressed:normal">Toggle disable state</button>
			</hgroup>
			<hgroup>
				<button id="but2" notifydata="pressed:sub_toggle">Toggle item (submenu)</button>
				<button id="but4" notifydata="pressed:sub_radio">Cycle radio items (submenu)</button>
				<button id="but6" notifydata="pressed:sub_normal">Toggle disable state (submenu)</button>
			</hgroup>
			<hgroup>
				<button id="but7" notifydata="pressed:mn">Set default context menu</button>
				<button id="but8" notifydata="pressed:mn2">Set alternate context menu</button>				
				<button id="but9" notifydata="pressed:(none)">Kill context menu</button>
			</hgroup>							
		</vgroup>	
   	</window>
</application>
