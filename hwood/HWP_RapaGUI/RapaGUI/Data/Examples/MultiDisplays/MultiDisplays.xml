<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	<window title="MultiDisplays">
		<hgroup>
			<rectangle/>
			
			<vgroup>
				<rectangle/>

				<vgroup frame="true" frametitle="Hollywood is magic">

					<choice id="cy" notify="active">
						<item>Mixed</item>
						<item>Display 1</item>
						<item>Display 2</item>
						<item>Display 3</item>
						<item>Display 4</item>
					</choice>

					<colgroup columns="2">
						<hollywood id="hwmcc1" display="1"/>
						<hollywood id="hwmcc2" display="2"/>
						<hollywood id="hwmcc3" display="3"/>
						<hollywood id="hwmcc4" display="4"/>
					</colgroup>

					<hgroup samesize="true">
						<button id="ok">OK</button>
						<button id="cancel">Cancel</button>
					</hgroup>
				</vgroup>

				<rectangle/>
			</vgroup>

			<rectangle/>
		</hgroup>
	</window>
</application>

