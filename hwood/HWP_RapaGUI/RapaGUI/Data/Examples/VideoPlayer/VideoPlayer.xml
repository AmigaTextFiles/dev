<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" useicons="true">

	<menubar id="menu">

		<menu title="_File">
			<item id="mn_last" disabled="true">_Last</item>
			<item id="mn_play" disabled="true">_Play</item>
			<item id="mn_pause" disabled="true">Pa_use</item>
			<item id="mn_stop" disabled="true">_Stop</item>
			<item id="mn_next" disabled="true">_Next</item>
			<item/>
			<item id="mn_quit" type="quit">_Quit</item>
		</menu>

		<menu title="_Playlist">
			<item id="mn_add" shortcut="F1">Add...</item>
			<item id="mn_mvup" shortcut="F2" disabled="true">Move up</item>
			<item id="mn_mvdn" shortcut="F3" disabled="true">Move down</item>
			<item id="mn_rem" shortcut="F4" disabled="true">Remove</item>
		</menu>

		<menu title="_View">
			<item id="mn_aa" type="toggle" selected="false">Use antialias interpolation</item>			
			<item id="mn_pl" type="toggle" selected="true">Playlist</item>
		</menu>
		
		<menu title="?">
			<item id="mn_about" type="about">_About...</item>
			<item id="mn_aboutrapagui">About Rapa_GUI...</item>			
		</menu>	
	</menubar>
				
	<window parent="main" id="playlist" left="0" top="delta:0" title="Playlist" activate="false" notify="closerequest" toolwindow="true">
		<vgroup>

			<listview id="lv" notify="active; doubleclick">
				<column icon="true"/> 
			</listview>
		
			<hgroup>
				<button id="add" icon="6">Add</button>
				<button id="mvup" icon="8" disabled="true">Move up</button>
				<button id="mvdn" icon="9" disabled="true">Move down</button>
				<button id="rem" icon="7" disabled="true">Remove</button>
			</hgroup>
		</vgroup>
	</window>

	<window id="main" title="VideoPlayer" activate="true" menubar="menu">
		<vgroup>
			<hollywood display="1" fixwidth="false" fixheight="false"/>
			
			<colgroup columns="2">
				<label id="timelab">00:00:00</label>				
				<slider id="time" disabled="true" notify="level;release" quiet="true"/>
	
				<label id="vollab">64</label>
				<slider id="vol" disabled="true" notify="level" min="0" max="64" level="64" quiet="true"/>
			</colgroup>			
			
			<hgroup>
				<button id="last" icon="1" disabled="true">Last</button>
				<button id="play" icon="2" disabled="true">Play</button>
				<button id="pause" icon="3" disabled="true">Pause</button>
				<button id="stop" icon="4" disabled="true">Stop</button>
				<button id="next" icon="5" disabled="true">Next</button>
			</hgroup>
		</vgroup>
	</window>
</application>

