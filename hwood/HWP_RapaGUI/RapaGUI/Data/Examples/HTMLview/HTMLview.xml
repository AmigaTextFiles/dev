<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" useicons="true">
	
	<menubar id="menu">
		<menu title="File">
			<item id="mn_about" help="About this program" type="about">_About...</item>
			<item id="mn_aboutrapagui" help="About the RapaGUI toolkit">About _RapaGUI...</item>
			<item/>
			<item id="mn_exit" help="Quit program" type="quit">E_xit</item>
		</menu>
	</menubar>
		
	<window title="HTML View" width="800" height="600" menubar="menu" singlemenu="true">
		<vgroup>
			<toolbar>
				<button id="tb_back" icon="1" help="Go backward" disabled="true"/>
				<button id="tb_forward" icon="2" help="Go forward" disabled="true"/>							
				<button/>
				<button id="tb_reload" icon="3" help="Reload page"/>
				<button/>
				<button id="tb_home" icon="4" help="Go to home"/>
				<button/>
				<button id="tb_amiga" icon="5" help="Go to www.amigaworld.net"/>
				<button id="tb_google" icon="6" help="Go to www.google.com"/>
				<button id="tb_wiki" icon="7" help="Go to www.wikipedia.org"/>
				<button id="tb_yahoo" icon="8" help="Go to www.yahoo.com"/>																	
			</toolbar>			
			
			<hgroup>
				<label>URL:</label>
				<textentry id="url">about:blank</textentry>
				<button id="go" weight="10">GO!</button>
			</hgroup>
			
			<htmlview id="hv" notify="cangoback;cangoforward"/>	
			
			<statusbar>
				<item>Ready</item>
			</statusbar>	
		</vgroup>	
	</window>
</application>


