<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" useicons="true">
	<window title="Dynamic listview columns" width="500" height="320" id="win" defaultobject="lv">
		<vgroup>
			<listview id="lv" forcemode="dataview">
				<column title="Old column" id="oldcol">
					<item>One</item>
					<item>Two</item>
					<item>Three</item>
				</column>
			</listview>
			<vgroup>
				<colgroup columns="2">
					
					<button id="insert">Insert column</button>
					<hgroup>
						<textentry id="insertnum" accept="0123456789">1</textentry>
						<choice id="coltype">
							<item>Text</item>
							<item>Icon</item>
							<item>Checkbox</item>
						</choice>
					</hgroup>
												
					<button id="remove">Remove column</button>
					<textentry id="removenum" accept="0123456789">1</textentry>						
				</colgroup>	
				
				<button id="insertentry">Insert row</button>
				<button id="clear">Clear all rows</button>
			</vgroup>
		</vgroup>
	</window>
</application>

