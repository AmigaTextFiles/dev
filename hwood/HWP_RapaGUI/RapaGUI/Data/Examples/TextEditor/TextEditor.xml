<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app" useicons="true">
		
	<menubar id="menu">
		<menu title="File">
			<item id="mn_new" help="Start new document">_New</item>
			<item/>
			<item id="mn_open" help="Load document from file">_Open...</item>
			<item id="mn_close" help="Close document" disabled="true">_Close</item>
			<item/>
			<item id="mn_save" help="Save document" disabled="true">_Save</item>
			<item id="mn_saveas" help="Save document to a different location" disabled="true">Save _as...</item>
			<item/>
			<item id="mn_exit" help="Quit program" type="quit">E_xit</item>
		</menu>
		
		<menu title="Edit">
			<item id="mn_undo" help="Undo last change" disabled="true" shortcut="Ctrl+Z">Undo</item>
			<item id="mn_redo" help="Redo last change" disabled="true" shortcut="Ctrl+Y">Redo</item>
			<item/>
			<item id="mn_cut" help="Cut marked text" disabled="true" shortcut="Ctrl+X">Cut</item>
			<item id="mn_copy" help="Copy marked text" disabled="true" shortcut="Ctrl+C">Copy</item>
			<item id="mn_paste" help="Paste from clipboard" shortcut="Ctrl+V">Paste</item>
		</menu>
		
		<menu title="Style">
			<item id="mn_bold" help="Bold text" type="toggle">Bold</item>
			<item id="mn_italic" help="Italic text" type="toggle">Italic</item>
			<item id="mn_underline" help="Underlined text" type="toggle">Underlined</item>
			<item/>
			<item id="mn_left" help="Left aligned" type="radio" selected="true">Left</item>
			<item id="mn_center" help="Centered" type="radio">Center</item>
			<item id="mn_right" help="Right aligned" type="radio">Right</item>			
		</menu>
			
		<menu title="?">
			<item id="mn_about" help="About this program" type="about">About...</item>
			<item id="mn_aboutrapagui" help="About the RapaGUI toolkit">About RapaGUI...</item>
		</menu>
	</menubar>
				
	<window id="win" menubar="menu" title="TextEditor - Unnamed" width="800" height="600" notify="closerequest">
		<vgroup>
			<toolbar>
				<button id="tb_new" icon="1" help="Start new document"/>
				<button id="tb_open" icon="2" help="Load document from file"/>
				<button id="tb_close" icon="3" help="Close document" disabled="true"/>				
				<button id="tb_save" icon="4" help="Save document" disabled="true"/>
				<button id="tb_saveas" icon="5" help="Save document to a different location" disabled="true"/>										
				<button/>
				<button id="tb_cut" icon="6" help="Cut marked text" disabled="true"/>
				<button id="tb_copy" icon="7" help="Copy marked text" disabled="true"/>
				<button id="tb_paste" icon="8" help="Paste from clipboard"/>
				<button/>
				<button id="tb_undo" icon="9" help="Undo last change" disabled="true"/>
				<button id="tb_redo" icon="10" help="Redo last change" disabled="true"/>					
				<button/>
				<button id="tb_bold" icon="11" help="Bold text" type="toggle"/>
				<button id="tb_italic" icon="12" help="Italic text" type="toggle"/>
				<button id="tb_underline" icon="13" help="Underlined text" type="toggle"/>
				<button/>
				<button id="tb_left" icon="14" help="Left aligned" type="radio" selected="true"/>
				<button id="tb_center" icon="15" help="Centered" type="radio"/>
				<button id="tb_right" icon="16" help="Right aligned" type="radio"/>
			</toolbar>

			<texteditor id="editor" notify="cursorpos;undoavailable;redoavailable;italic;bold;underline;areamarked;haschanged" styled="true" nowrap="true"/>

			<statusbar>
				<item>Ready</item>
				<item id="cursorpos" width="100">X: 1 Y: 1</item>
			</statusbar>	
		</vgroup>
	</window>
</application>
