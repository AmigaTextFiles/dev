<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
						
	<window title="Sortable listview columns" width="500" height="320" id="win" defaultobject="lv">
		<vgroup>
			<listview forcemode="dataview" id="lv" notify="sortcolumn">										
				<column title="Author" sortable="true">
					<item>Charles Dickens</item>
					<item>George Elliot</item>
					<item>James Joyce</item>
					<item>William Thackeray</item>
					<item>Oscar Wilde</item>
					<item>William Wordsworth</item>																																		
				</column>			
				<column title="Work" sortable="true">				
					<item>David Copperfield</item>
					<item>Middlemarch</item>
					<item>Ulysses</item>
					<item>Vanity Fair</item>
					<item>The Picture of Dorian Gray</item>
					<item>I Wandered Lonely as a Cloud</item>										
				</column>
				<column title="Year" sortable="true">
					<item>1849</item>
					<item>1871</item>
					<item>1922</item>
					<item>1848</item>
					<item>1890</item>
					<item>1807</item>
				</column>										
			</listview>
		</vgroup>
	</window>
</application>

