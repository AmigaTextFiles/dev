<?xml version="1.0" encoding="iso-8859-1"?>	
<dialog id="dlg" title="Add customer" width="400">
	<vgroup>			
		<colgroup columns="2">
				
			<label>Last name</label>
			<textentry id="lastname" advanceoncr="true"/>
				
			<label>First name</label>
			<textentry id="firstname" advanceoncr="true"/>
			
			<label>Street</label>
			<textentry id="street" advanceoncr="true"/>
			
			<label>City</label>
			<textentry id="city" advanceoncr="true"/>
			
			<label>ZIP</label>
			<textentry id="zip" advanceoncr="true"/>

			<label>Country</label>
			<textentry id="country" advanceoncr="true"/>												
		</colgroup>	
			
		<hgroup>
			<button id="ok" hint="positive">OK</button>
			<button id="cancel" hint="negative">Cancel</button>
		</hgroup>	
	</vgroup>					
</dialog>
