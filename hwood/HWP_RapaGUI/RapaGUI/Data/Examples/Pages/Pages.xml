<?xml version="1.0" encoding="iso-8859-1"?>
<application id="app">
	<window title="Character Definition" id="window" width="400">
		<vgroup>
			<colgroup columns="2">
				
				<label>Name:</label>
				<textentry>Hamlet</textentry>

				<label>Sex:</label>
				<choice>
					<item>male</item>
					<item>female</item>
				</choice>
			</colgroup>

			<vspace height="2"/>

			<pageview>

				<hgroup title="Race">
					<rectangle/>
					<radio>
						<item>Human</item>
						<item>Elf</item>
						<item>Dwarf</item>
						<item>Fairy</item>
						<item>Gnome</item>
					</radio>
					<rectangle/>
				</hgroup>

				<hgroup title="Class">
					<rectangle/>
					<radio>
						<item>Warrior</item>
						<item>Rogue</item>
						<item>Bard</item>
						<item>Monk</item>
						<item>Magician</item>
						<item>Archmage</item>
					</radio>
					<rectangle/>
				</hgroup>

				<hgroup title="Armor">
					<colgroup columns="2">
						<label>Cloak:</label>
						<checkbox selected="true"/>

						<label>Shield:</label>
						<checkbox selected="true"/>

						<label>Gloves:</label>
						<checkbox selected="true"/>

						<label>Helmet:</label>
						<checkbox selected="true"/>
					</colgroup>
				</hgroup>

				<hgroup title="Level">
					<colgroup columns="2">
						<label>Experience:</label>
						<slider min="0" max="100" level="3"/>

						<label>Strength:</label>
						<slider min="0" max="100" level="42"/>

						<label>Dexterity:</label>
						<slider min="0" max="100" level="24"/>

						<label>Condition:</label>
						<slider min="0" max="100" level="39"/>

						<label>Intelligence:</label>
						<slider min="0" max="100" level="74"/>
					</colgroup>
				</hgroup>
			</pageview>
		</vgroup>
	</window>
</application>



