@require "sqlite3"

local db = sqlite3.open_memory()

db:exec("CREATE TABLE test (col1, col2)")
db:exec("INSERT INTO test VALUES (1, 2)")
db:exec("INSERT INTO test VALUES (2, 4)")
db:exec("INSERT INTO test VALUES (3, 6)")
db:exec("INSERT INTO test VALUES (4, 8)")
db:exec("INSERT INTO test VALUES (5, 10)")

block

  local square_error_sum = 0

  local function stepfunc(ctx, a, b)
    local error        = a - b
    local square_error = error * error
    square_error_sum   = square_error_sum + square_error
  endfunction

  local function finalfunc(ctx)
    ctx:result_number( square_error_sum / ctx:aggregate_count() )
  endfunction

  assert(db:create_aggregate("my_stats", 2, stepfunc, finalfunc))

endblock

;for a,b in db:urows("SELECT col1, col2 FROM test")
;do print("a b: ", a, b) end

for my_stats in db:urows("SELECT my_stats(col1, col2) FROM test")
	debugprint("my_stats:", my_stats)
next
