@REQUIRE "apng"

s$ = FileRequest("Select in file", "#?")
d$ = FileRequest("Select out file", "#?", #REQ_SAVEMODE)

LoadAnim(1, s$, {FromDisk = True})

w = GetAttribute(#ANIM, 1, #ATTRWIDTH)
h = GetAttribute(#ANIM, 1, #ATTRHEIGHT)
n = GetAttribute(#ANIM, 1, #ATTRNUMFRAMES)

debugprint(w, h)

BeginAnimStream(1, d$, w, h, #ANMFMT_APNG)

For Local k = 1 to n
	af = ConvertToBrush(#ANIM, 1, Nil, k)
	WriteAnimFrame(1, af)
	FreeBrush(af)
Next

FinishAnimStream(1)	

End
