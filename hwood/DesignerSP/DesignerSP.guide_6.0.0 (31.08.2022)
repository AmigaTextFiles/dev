  @{"Ejecutar el programa                      " LINK AERunProgram}
  @{"Elegir el fichero a abrir                 " LINK AEChooseFileToOpen}
  @{"Esperar                                   " LINK AEDelay}
  @{"Esperar por el barrido vertical           " LINK AEWaitVerticalRefresh}
