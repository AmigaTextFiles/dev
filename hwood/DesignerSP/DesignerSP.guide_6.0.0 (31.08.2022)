  @{"Esperar por la transición                 " LINK AEWaitFX}
  @{"Esperar por todas las transiciones        " LINK AEWaitAllFX}
  @{"Etiqueta                                  " LINK AELabel}

  @{"Iniciar la acción                         " LINK AEStartAction}
  @{"Interrumpir                               " LINK AEBreak}
  @{"Ir a                                      " LINK AEGoto}

  @{"Modificar el objeto de texto              " LINK AEEditTextObject}
