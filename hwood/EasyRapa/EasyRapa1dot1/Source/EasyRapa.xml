<?xml version="1.0" encoding="iso-8859-1"?>
<application id="EasyRapa">
		
	<menubar id="menu">
		<menu title="File" id="mb_file">
			<item id="mn_new" help="Start new document">_New</item>
			<item/>
			<item id="mn_open" help="Load document from file">_Open...</item>
			<item id="mn_close" help="Close document" disabled="true">_Close</item>
			<item/>
			<item id="mn_save" help="Save document" disabled="true">_Save</item>
			<item id="mn_saveas" help="Save document to a different location" disabled="true">Save _as...</item>
			<item/>
			<item id="mn_exit" help="Quit program">E_xit</item>
			<item id="mn_filesep"/>
			<item id="mn_lerp1">empty</item>
			<item id="mn_lerp2">empty</item>
			<item id="mn_lerp3">empty</item>
			<item id="mn_lerp4">empty</item>
		</menu>
		
		<menu id="mb_edit" title="Edit">
			<!-- <item id="mn_undo" help="Undo last change" disabled="true" shortcut="Ctrl+Z">Undo</item>-->
			<!-- <item id="mn_redo" help="Redo last change" disabled="true" shortcut="Ctrl+Y">Redo</item>-->
			<!-- <item/>-->

			<item id="mn_lineadd" help="Insert a new line" disabled="true" shortcut="Ctrl+I">Insert Line</item>
			<item id="mn_linedel" help="Delete line" disabled="true" shortcut="Ctrl+D">Delete Line</item>
			<item id="mn_lineedit" help="Edit selected line" disabled="true" shortcut="Ctrl+E">Edit Line</item>

			<!-- <item id="mn_copy" help="Copy marked text" disabled="true" shortcut="Ctrl+C">Copy</item>-->
			<!-- <item id="mn_paste" help="Paste from clipboard" shortcut="Ctrl+V">Paste</item>-->

		</menu>
		
		<menu id="mb_Easy" title="Easy Rapa">
			<item id="mn_winobj" help="Open Window definitions" disabled="true" shortcut="Ctrl+W">Window definition</item>
			<item id="mn_RunMagic" help="Generate xml/hws" disabled="true" shortcut="Ctrl+G">Run Magic</item>
			<item id="mn_TestMagic" help="Test your xml/hws" disabled="true" shortcut="Ctrl+T">Test Magic</item>
			<item id="mn_Jump" help="Jump to item" disabled="true" shortcut="Ctrl+J">Jump to item</item>
		</menu>
			
		<menu id="mb_help" title="?">
			<item id="mn_about" help="About this program">About...</item>
			<item id="mn_aboutrapagui" help="About the RapaGUI toolkit">About RapaGUI...</item>
		</menu>
	</menubar>
				
	<window id="win" menubar="menu" title="EasyRapa - Unnamed" width="900" height="600" notify="closerequest">
		<vgroup>
			<toolbar>
				<button id="tb_new" icon="1" help="Start new document"/>
				<button id="tb_open" icon="2" help="Load document from file"/>
				<button id="tb_close" icon="3" help="Close document" disabled="true"/>				
				<button id="tb_save" icon="4" help="Save document" disabled="true"/>
				<button id="tb_saveas" icon="5" help="Save document to a different location" disabled="true"/>										
				<button/>
				<button id="tb_linedel" icon="6" help="Delete text line" disabled="true"/>
				<button id="tb_lineadd" icon="7" help="Insert a new line" disabled="true"/>

				<!-- <button id="tb_paste" icon="8" help="Paste from clipboard"/>> -->
				<!-- <button/> -->
				<!-- <button id="tb_undo" icon="9" help="Undo last change" disabled="true"/> -->
				<!-- <button id="tb_redo" icon="10" help="Redo last change" disabled="true"/> -->	 				

				<button/>
				<button id="tb_winobj" icon="24" help="Open Window definitions"/>
				<button id="tb_modobj" icon="18" help="Modify object"/>
				<button id="tb_addobj" icon="21" help="Add object"/>
				<button id="tb_RunMagic" icon="17" help="Generate xml/hws"/>
				<button id="tb_TestMagic" icon="22" help="Test your xml/hws"/>
				<button id="tb_Jump" icon="23" help="Jump to item"/>
			</toolbar>
			<pageview ID="ER_pv" notify="active">

				<hgroup ID="tab_prj" Title="ER Project">
					<vgroup>
						<!--<texteditor id="editor" fixwidth="false" fixheight="false" notify="cursorpos;undoavailable;redoavailable;italic;bold;underline;areamarked;haschanged" readonly="true" styled="true" nowrap="true"/>-->
					<listview  id="project"  MultiSelect="true" Alternate="true" notify="active">
						<column ID="prg-lines" title="Project lines" width="850" Sortable="flse"/>														
					</listview>


						<hollywood display="3"/>
					</vgroup>
				</hgroup>

				<hgroup ID="tab_l_o" title="Lay-Out">
						<radio ID="LO_pages" title= "Page" notify="active">
							<item>0</item>
							<item>1</item>
							<item>2</item>
							<item>3</item>
							<item>4</item>
							<item>5</item>
							<item>6</item>
							<item>7</item>
							<item>8</item>
							<item>9</item>
							<item>10</item>
							<item>11</item>
							<item>12</item>
							<item>13</item>
							<item>14</item>
							<item>15</item>
							<item>16</item>
							<item>17</item>
							<item>18</item>
							<item>19</item>
							<item>20</item>
						</radio>
					<vgroup>


						<hollywood display="1" fixwidth="false" fixheight="false"/>
						<hollywood display="2"/>
					</vgroup>
				</hgroup>

				<hgroup ID="tab_xml" title="XML">
					<textview ID="xml" styled="true"> </textview> 
				</hgroup>

				<hgroup ID="tab_hws" title="HWS">
					<textview ID="hws" styled="true"> </textview>
				</hgroup>

				<hgroup ID="tab_menu" title="Menu">
				<vgroup>
					<treeview id="tv" editablenodes="true">
						<column title="Item" editable="true"/>
						<column title="ID" editable="true"/>
						<column title="shortcut" editable="true"/>
						<column title="Help" editable="true"/>
						<column title="Disabled" checkbox="true"/>
						<column title="macro" editable="true" width="400"/>
						
						<node name="My Menu" id="tv_my_Menu">
							<node name="File" id="mn_n_File">
								<leaf id="mn_i_open">
									<item>Open</item>
									<item>mn_open</item>
									<item>Ctrl+O</item>
									<item>Open a new project</item>
									<item>False</item>
								</leaf>
								<leaf id="mn_i_close">
									<item>Close</item>
									<item>mn_close</item>
									<item></item>
									<item>Close project</item>
									<item>True</item>
								</leaf>						
							</node>
							
							<node name="Help" id="mn_n_Help">
								<leaf id="mn_i_About">
									<item>About...</item>
									<item>mn_about</item>
									<item></item>
									<item>About this program</item>
									<item>False</item>				
								</leaf>
								<leaf id="mn_i_Aboutrapagui">
									<item>About RapaGUI...</item>
									<item>mn_aboutRG</item>
									<item></item>
									<item>About RapaGUI</item>
									<item>False</item>				
								</leaf>
							</node>		
						</node>
					</treeview>
					
					<hgroup>
						<button id="mn_addnode">Add Node</button>
						<button id="mn_additem">Add Item</button>
						<button id="mn_delete">Delete </button>
						<button id="mn_edit">Edit </button>
					</hgroup>	
				</vgroup>							
				</hgroup>

				<hgroup ID="tab_icons" title="Icons">
				<vgroup>
					<text ID="ic_title" align="Left">Icons selection:</text>
					
					<listview  id="ic_sel" VRules="True" MultiSelect="false" Alternate="true">
						<column ID="ic_icon" title="Icon" width="80" Sortable="true" icon="true"/>	
						<column ID="ic_path" title="Path" width="400"/>	
						<column ID="ic_toolbar" title="Toolbar" checkbox="true"/>
						<column ID="ic_id" title="ID" width="100"/>
						<column ID="ic_help" title="Help" width="300"/>
						<column ID="ic_macro" title="macro" width="400"/>
					</listview>

					<hgroup>
						<button id="ic_addline">Add Line</button>
						<button id="ic_delete">Delete </button>
						<button id="ic_edit">Edit </button>
					</hgroup>	
				
				</vgroup>


				</hgroup>

				<vgroup ID="tab_prefs" title="Prefs" valign="top">
					<hgroup >
						<text>   </text>						
						<button id="prf_save">Save and Use Preferences</button>
						<button id="prf_use">Use Preferences</button>
						<text>   </text>						
					</hgroup >
						<text>   </text>						
						<text>   </text>						
					<vgroup frame="true" frametitle=" Project data: ">

						<hgroup >
							<label ID="prf_prj_name_lbl" align="Right">Project name:</label>
							<text ID="prf_prj_name">                   </text>
							<label ID="prf_prj_lastupd_lbl" align="Right">Last update:</label>
							<text ID="prf_prj_lastupd">                   </text>
						</hgroup>
						<hgroup>
							<label ID="prf_prj_fullpath_lbl" align="Right">Project full path:</label>
							<text ID="prf_prj_fullpath"></text>
						</hgroup>
						<hgroup>
							<label ID="prf_user_path_lbl" align="Right">ER Project default path:</label>
							<textentry ID="prf_user_path"></textentry>
							<button id="Prf_path_btn" icon="2" weight="5"/>

						</hgroup>
					</vgroup>
					<text>   </text>						
					<vgroup frame="true" frametitle=" User data: ">

						<hgroup >
							<label ID="prf_user_name_lbl" align="Right">User name:</label>
							<textentry ID="prf_user_name"></textentry>
							<text>   </text>						
						</hgroup>
						<hgroup>
							<label ID="prf_user_mail_lbl" align="Right">User mail:</label>
							<textentry ID="prf_user_mail"></textentry>
						</hgroup>
					</vgroup>
					<text>   </text>						
					<vgroup frame="true" frametitle=" Hollywood: ">
						<hgroup>
							<label ID="prf_Hol_path_lbl" align="Right">Hollywood path:</label>
							<textentry ID="prf_Hol_path" ></textentry>
							<button id="Hol_path_btn" icon="2" weight="5"/>
							<label ID="prf_Hol_ver_lbl" align="Right">your H. vers:</label>
							<textentry ID="prf_Hol_ver" accept="0123456789." weight="10"></textentry>
						</hgroup>

						<hgroup>
							<label ID="prf_Hol_cat_lbl" align="Right">Catalog language:</label>
							<combobox ID="prf_Hol_cat" notify="value"></combobox>
							<text>                              </text>
							<label ID="prf_RG_ver_lbl" align="Right">your R.G. vers:</label>
							<textentry ID="prf_RG_ver" accept="0123456789." weight="10"></textentry>
						</hgroup>
					</vgroup>
					<text>   </text>						
					<vgroup frame="true" frametitle=" Indentation method: ">
						<hgroup >
							<label ID="prf_tab_tab_lbl" align="Right">Use tab to indent</label>
							<checkbox ID="prf_tab_tab" notify="selected"></checkbox >
							<label ID="prf_tab_spc_lbl" align="Right" >or n.of spaces to indent</label>
							<textentry ID="prf_tab_spc" Accept="1234567890" weight="5" notify="Acknowledge"></textentry>
							<text>   </text>						
						</hgroup >
					</vgroup>
				</vgroup>
				<vgroup ID="tab_catlog" title="Catalogs">
					<label align="Left">Fill the translations for the form items (list is refreshed activating the tab)</label>
					<listview id="cat_lv" hrules="true" vrules="true" notify="ValueChange">
					   <column id="cat_Default" title="Default" width="250" editable="false">
					   </column>
					   <column id="cat_Transl" title="Translation" width="250" editable="true">
					   </column>
					   <column id="cat_usedin" title="Used in" width="150" editable="false">
					   </column>
					</listview>
					

				</vgroup>

			</pageview>
			<progressbar id="prgbar" notify="level"/>

			<statusbar>
				<item id="message">Ready</item>
				<item id="cursorpos" width="100">X: 1 Y: 1</item>
				<item id="time" width="100">Time</item>
			</statusbar>	
		</vgroup>
	</window>
</application>