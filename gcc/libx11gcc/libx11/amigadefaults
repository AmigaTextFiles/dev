! Get some debug output with:
!Amiga.debug: True
! Get rid og the chunky to planar stuff that gfxcards apparently chokes on:
!Amiga.nochunkytoplanar: True
! Make screen openings use the ASL screen requester
!Amiga.askmode: True
! Get rid of those 'awful' X11 cursors..
!Amiga.cursors: 0
! Make programs stick to this public screen:
!Amiga.usepubscreen: Workbench
! Force libX11 to use this deep screen (maybe useful on some gfxcards)
!Amiga.displaydepth: 8
! Font mappings
fontmap.courier: courier.font
fontmap.helvetica: helvetica.font
fontmap.times: times.font
fontmap.lucidabright: PostPalatino.font
! lucidabright is supposed to look like the Postscript Palatino font
fontmap.symbol: PostSymbol.font
fontmap.newcentury: PostNewCentury.font
fontmap.zapfdingbats: PostZapfDingbats.font
fontmap.bookman: PostBookman.font
fontmap.schumacher: PostAvantGarde.font
! schumacher is supposed to look like the Postscript AvantGarde font
fontmap.zapfchancery: PostZapfChancery.font
! some xv defs
! xv.force8: true
! xv.display: PST
! Xmgr resources
XMgr.maxSets: 15
XMgr.maxGraphs: 5
!Fig.debug: True
Fig.exportLanguage:		eepic
