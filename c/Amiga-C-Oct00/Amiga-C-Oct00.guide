#define MULT 69069L

LONG Unique (ULONG &mcgn, ULONG &srgn)
{
    ULONG r0 = (srgn >> 15);
    ULONG r1 = srgn ^ r0;
    r0 = (r1 << 17);
    srgn = r0 ^ r1;
    mcgn = MULT * mcgn;
    r1 = mcgn ^ srgn;

