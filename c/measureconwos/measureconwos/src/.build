# Build file
# Use a make utility!

proj=measurecontextwos

$(proj): $(proj).o $(proj)68k.o $(proj)ppc.o
 echo "*nLinking $(proj)"
 vlink -bamigaehf -o$(proj) -s vlib:startup.o vlib:amiga.lib vlib:vc.lib $(proj).o $(proj)68k.o $(proj)ppc.o

$(proj).o: $(proj).c
 echo "*nCompiling $(proj).c"
 vc -c $(proj).c

$(proj)68k.o: $(proj)68k.asm
 echo "*nCompiling $(proj)68k.asm"
 phxass noexe ds opt 3 q $(proj)68k.asm

$(proj)ppc.o: $(proj)ppc.pasm
 echo "*nCompiling $(proj)ppc.pasm"
 pasm -F 2 $(proj)ppc.pasm

