#Sc:C/Smake
#
#   Simple Makefile to create Matrix Link Library in C
#		       for SAS/C
#
#   Makefile by Nick d'Alterio 26/11/94
#
# $Id$
#

OBJS    = 	MatAlloc.o \
	   	MatFree.o \
          	MatMul.o \
     	   	MatAdd.o \
          	MatSub.o \
	   	MatSwapRow.o \
	   	MatPPivot.o \
	   	MatLUdecomp.o \
		MatBackSub.o \
		MatForSub.o \
		MatDet.o \
		MatInv.o \
		MatSimul.o \
		MatInvIt.o \
		VecDot.o \
		VecMod.o \
		MatConst.o \
		MatCmp.o \
		MatPrint.o

LIBRARY = matrix.lib

CC      = sc
CFLAGS  = 

all: $(OBJS) $(LIBRARY)

.c.o:
	$(CC) $(CFLAGS) $< OBJNAME=$@

MatAlloc.o:		MatAlloc.c
MatFree.o:		MatFree.c
MatMul.o:		MatMul.c
MatSub.o:		MatSub.c
MatAdd.o:		MatAdd.c
MatSwapRow.o:		MatSwapRow.c
MatPPivot.o:		MatPPivot.c
MatLUdecomp.o:		MatLUdecomp.c
MatBackSub.o:		MatBackSub.c
MatForSub.o:		MatForSub.c
MatDet.o:		MatDet.c
MatInv.o:		MatInv.c
MatSimul.o:		MatSimul.c
MatInvIt.o:		MatInvIt.c
VecDot.o:		VecDot.c
VecMod.o:		VecDot.o
MatConst.o:		MatConst.c
MatCmp.o:		MatCmp.c
MatPrint.o:		MatPrint.c


$(LIBRARY): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) OBJLIB=$(LIBRARY)
