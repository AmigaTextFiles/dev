# Define Macros
SOURCE = sc:Projects/IFFC2/
GENAM  = Devpac:Tools/GenAm

IFFConverter: IFFStartup.o      IFFconverter.o  OpenCloseLibs.o
IFFConverter: WindowScreenMaintenace.o          MemoryManagement.o
IFFConverter: Gadgets.o         DiskFonts.o     HandleIntuiMessages.o
IFFConverter: LoadSavePicture.o AslManagement.o PaletteMaintenance.o
IFFConverter: Decompic.o        Misc.o          SavePicture.o
        slink FROM IFFStartup.o IFFConverter.o OpenCloseLibs.o WindowScreenMaintenace.o               \
                   MemoryManagement.o Gadgets.o DiskFonts.o HandleIntuiMessages.o LoadSavePicture.o   \
                   AslManagement.o PaletteMaintenance.o Decompic.o Misc.o SavePicture.o               \
              TO IFFConverter                                                                         \
              LIB LIB:sc.lib LIB:amiga.lib


IFFStartup.o: $(SOURCE)IFFStartup.a
   $(GENAM) FROM $(SOURCE)IFFStartup.a                                                                \
            TO   $(SOURCE)IFFStartup.o

IFFConverter.o: $(SOURCE)IFFConverter.c $(SOURCE)ErrorText.h
   sc $(SOURCE)IFFConverter.c

OpenCloseLibs.o: $(SOURCE)OpenCloseLibs.c
   sc $(SOURCE)OpenCloseLibs.c

WindowScreenMaintenace.o: $(SOURCE)WindowScreenMaintenace.c
   sc $(SOURCE)WindowScreenMaintenace.c

MemoryManagement.o: $(SOURCE)MemoryManagement.c
   sc $(SOURCE)MemoryManagement.c

Gadgets.o :$(SOURCE)Gadgets.c $(SOUCRE)Gadgets.h $(SOURCE)Gadgets_enum.h
   sc $(SOURCE)Gadgets.c

DiskFonts.o: $(SOURCE)DiskFonts.c
   sc $(SOURCE)DiskFonts.c

HandleIntuiMessages.o: $(SOURCE)HandleIntuiMessages.c $(SOURCE)Gadgets_enum.h
   sc $(SOURCE)HandleIntuiMessages.c

LoadSavePicture.o: $(SOURCE)LoadSavePicture.c $(SOURCE)Gadgets_enum.h
   sc $(SOURCE)LoadSavePicture.c

AslManagement.o: $(SOURCE)AslManagement.c
   sc $(SOURCE)AslManagement.c

PaletteMaintenance.o: $(SOURCE)PaletteMaintenance.c
   sc $(SOURCE)PaletteMaintenance.c

Misc.o: $(SOURCE)Misc.c $(SOURCE)Gadgets_enum.h
   sc $(SOURCE)Misc.c

Decompic.o: $(SOURCE)Decompic.a
   $(GENAM) FROM $(SOURCE)Decompic.a                                                                  \
            TO   $(SOURCE)Decompic.o

SavePicture.o: $(SOURCE)SavePicture.a
   $(GENAM) FROM $(SOURCE)SavePicture.a                                                               \
            TO   $(SOURCE)SavePicture.o

