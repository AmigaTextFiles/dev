TMPDIR  = T:
SRCS    = easysound.c
LLIBS   = easysounds.lib easysoundsr.lib easysoundl.lib easysoundlr.lib
CFLAGS  = -3.0 -mi -f -v -//
LIBS    = easysounds.lib easysoundsr.lib easysoundl.lib easysoundlr.lib copy iff2src example1 example2

all : $(LIBS)

easysounds.lib : $(SRCS)
        dcc $(CFLAGS) -o %(left) -c %(right) -md

easysoundsr.lib : $(SRCS)
        dcc $(CFLAGS) -o %(left) -c %(right) -md -mRR

easysoundl.lib : $(SRCS)
        dcc $(CFLAGS) -o %(left) -c %(right) -mD

easysoundlr.lib : $(SRCS)
        dcc $(CFLAGS) -o %(left) -c %(right) -mD -mRR

copy : $(LLIBS)
        copy %(right) dlib:

example1 : example1.c
        dcc $(CFLAGS) -o %(left) %(right) -leasysound

example2 : example2.c
        dcc $(CFLAGS) -o %(left) %(right) -leasysound

iff2src : iff2src.c
        dcc $(CFLAGS) -o %(left) %(right)

new :
      DMake clean
      DMake all

