  //////////////////////////////////////////////////////////////////////////////
  // 3D Status Bar

  class AF3DStatus : public AFStatus
  {
  public:
    ~AF3DStatus();

    virtual char *ObjectType() { return "3DStatus"; };
    virtual void Create(AFWindow* pwindow, AFRect *rect, ULONG id,
                      UBYTE penDone, UBYTE penToGo);
    AFPanel m_panel;
  };

