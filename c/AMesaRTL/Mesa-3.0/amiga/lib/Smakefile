# Makefile for LIB files

TMP_FILE = T:MesaTMP_SCOPTS


LIBRARYSCFLAGS = idlen=63

all: AmigaLibrary Mesa.LIB GLUT.LIB DeleteTMP

Mesa.LIB: Mesa.c MesaAuto.c glu.c
      sc Mesa.c with $(TMP_FILE)
      sc MesaAuto.c with $(TMP_FILE)
      sc glu.c with $(TMP_FILE)
      oml Mesa.LIB R mesa.o mesaauto.o glu.o

GLUT.LIB: GlutAuto.c
      sc GlutAuto.c with $(TMP_FILE)
      oml GLUT.LIB R GlutAuto.o

AmigaLibrary:
    @echo >$(TMP_FILE) "$(LIBRARYSCFLAGS)"

DeleteTMP:
    @delete $(TMP_FILE)

