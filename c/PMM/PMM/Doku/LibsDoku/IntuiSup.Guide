@node IRefreshGadgets "IntuiSup/IRefreshGadgets"
@toc funcs

NAME
	IRefreshGadgets

SYNOPSIS
	IRefreshGadgets( gl )
	                 a0

	VOID IRefreshGadgets( APTR );

FUNCTION
	Refresh images of ALL gadgets from given internal data structure.
	ONLY NEEDED FOR WINDOWREFRESH OR NEWSIZE IDCMP EVENTS.

INPUTS
	gl - pointer to internal data structure returned by @{"ICreateGadgets" link ICreateGadgets}

RETURNS
	VOID

SEE ALSO
	@{"ICreateGadgets" link ICreateGadgets}, @{"IFreeGadgets" link IFreeGadgets}, @{"IDisplayGadgets" link IDisplayGadgets}, @{"IModifyGadget" link IModifyGadget},
	@{"ISetGadgetAttributes" link ISetGadgetAttributes}, @{"IActivateInputGadget" link IActivateInputGadget}, @{"IGadgetAddress" link IGadgetAddress},
	@{"IRemoveGadgets" link IRemoveGadgets}
EXAMPLE
	struct IntuiMessage *im;

	while (im = IGetMsg(win->UserPort)) {
	   switch (im->Class) {
	      case REFRESHWINDOW :
	      case NEWSIZE :
		  BeginRefresh(win);

		  /* Refresh ISUP gadget list(s) displayed on this window */
		  IRefreshGadgets(gl1);
		  IRefreshGadgets(gl2);
		     :
		  IRefreshGadgets(gln);

		  /* Custom window refresh */
		     :
		  EndRefresh(win);
		  break;

	      /* Handle other IDCMP events */
		     :
	   }
	   IReplyMsg(im);
	}
@endnode


