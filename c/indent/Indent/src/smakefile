#### makefile 2/2001 mail@dietmar-eilert.de (Dietmar Eilert) ###

OBJ = o/
CC  = sc

OBJECTS = $(OBJ)args.o $(OBJ)backup.o $(OBJ)comments.o $(OBJ)globs.o $(OBJ)indent.o $(OBJ)io.o $(OBJ)parse.o $(OBJ)lexi.o

all: indent

indent: $(OBJECTS)
	@$(CC) LINK TO $@ $(OBJECTS)

.c.o:
	@$(CC) $< $(DEFS) OBJNAME=$@

$(OBJ)args.o     : args.c sys.h config.h indent.h lexi.h io.h args.h globs.h
$(OBJ)backup.o   : backup.c sys.h config.h backup.h io.h indent.h lexi.h globs.h
$(OBJ)comments.o : comments.c sys.h config.h indent.h lexi.h io.h comments.h globs.h parse.h
$(OBJ)globs.o    : globs.c sys.h config.h indent.h lexi.h io.h globs.h
$(OBJ)indent.o   : indent.c sys.h config.h indent.h lexi.h io.h backup.h globs.h parse.h comments.h args.h
$(OBJ)io.o       : io.c sys.h config.h indent.h lexi.h io.h globs.h
$(OBJ)lexi.o     : lexi.c sys.h config.h indent.h
$(OBJ)parse.o    : parse.c sys.h config.h indent.h lexi.h io.h parse.h globs.h
