; $VER: Install_MBE_Developer 1.0 (31.08.94)
; Installation script for MUI-Brush Expander
; Copyright © 1994 by Johannes Beigel

( set @default-dest "MUI:" )

(complete 0 )

( welcome "This is the installation script for\n"
          "\n"
          "    MBE - MUI-Brush Expander, developer version\n"
          "    Copyright © 1994 by Johannes Beigel\n"
          "\n"
)

( copylib
  ( prompt "Copying developer prefs editor." )
  ( source "MUI/MBE_Developer" )
  ( dest "MUI:" )
  ( infos )
  ( confirm )
  ( help @copylib-help )
)

( complete 33 )

( copylib
  ( prompt "Copying C include file \"MBE_mcc.h\"." )
  ( source "Include/MUI/MBE_mcc.h" )
  ( dest "INCLUDE:MUI" )
  ( confirm )
  ( help @copylib-help )
)

( complete 67 )

( set adocdir
  ( askdir
    ( prompt "Select directory for Autodoc file." )
    ( default "MUI:Developer/Autodocs" )
    ( help @askdir-help )
  )
)

( copyfiles
  ( prompt "Copying Autodoc file \"MCC_MBE.doc\"." )
  ( source "Docs/MCC_MBE.doc" )
  ( dest adocdir )
  ( confirm )
  ( help @copyfiles-help )
)

( complete 100 )
