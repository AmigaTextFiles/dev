CFLAGS = -O2 -c -I/include2/ -I/include/C -D__NOLIBBASE__
LFLAGS = -nostdlib

# the directory, where destination library is stored
DDIR = /libs/

$(DDIR)example.library: libinitvbcc.o examplefuncsvbcc.o
	vc $(LFLAGS) -o $@ libinitvbcc.o examplefuncsvbcc.o
	
libinitvbcc.o: libinfo.h libinit.c
	vc $(CFLAGS) -o $@ libinit.c

examplefuncsvbcc.o: libinfo.h examplefuncs.c
	vc $(CFLAGS) -o $@ examplefuncs.c

clean:
	delete libinitvbcc.o examplefuncsvbcc.o
