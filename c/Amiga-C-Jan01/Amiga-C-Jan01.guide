BOOL pointer_invisible( struct Window *window )
{
   Object *pointerobject;
   struct BitMap *bitmap;
   BOOL fail = TRUE;

   if( bitmap = AllocBitMap( 1, 1, 1, BMF_CLEAR, NULL ) )
   {
      if( pointerobject = NewObject( NULL, POINTERCLASS,
         POINTERA_BitMap, bitmap,
         POINTERA_XOffset, 0,
