# Build file
# Use a make utility!

proj=measurecontextpup

$(proj): $(proj).o $(proj)68k.o $(proj).elf
 echo "*nLinking $(proj)"
 vlink -bamigaos -o$(proj) vlib:startup.o vlib:amiga.lib vlib:vc.lib $(proj).o $(proj)68k.o

$(proj).o: $(proj).c
 echo "*nCompiling $(proj).c"
 vc -c $(proj).c

$(proj)68k.o: $(proj)68k.asm
 echo "*nCompiling $(proj)68k.asm"
 phxass noexe ds opt 3 q $(proj)68k.asm

$(proj).elf: $(proj)ppc.c
 echo "*nCompiling $(proj)ppc.c"
 vc +PPC $(proj)ppc.c -o=$(proj).elf

