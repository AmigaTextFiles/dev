
(set #dst
	(askdir
		(prompt "Please locate the AmigaOS4 SDK")
		(help "The installation of nuqneH is done as an addition to the AmigaOS4 Software Development Kit (SDK). For this purpose, the relevant files will be installed in the \"Local\" drawer of the SDK. If you do not have the SDK installed, you should abort the install script and install nuqneH manually in the location of your choice.")
		(default "SDK:")
	)
)

(set #dst (tackon #dst "Local"))

(set #installbits
	(askoptions
		(prompt "Select files to install")
		(choices "Program" "Header" "Documentation" "Example")
		(help "Select which parts of the nuqneH package to install. Possible choices are:\n\nProgram - the nuqneH compiler binary.\nHeader - The nuqneH.h header.\nDocumentation - Manual.\nExample - An example illustrating the use of nuqneH.\n")
	)
)

(if (IN #installbits 0)
	(copyfiles
		(source "nuqneH")
		(dest (tackon #dst "C"))
		(optional "askuser")
	)
)

(complete 25)

(if (IN #installbits 1)
	(copyfiles
		(source "nuqneH.h")
		(dest (tackon #dst "common/include"))
		(optional "askuser")
	)
)

(complete 50)


(if (IN #installbits 2)
	(copyfiles
		(source "nuqneH.pdf")
		(dest (tackon #dst "Documentation"))
		(optional "askuser")
		(infos)
	)
)

(complete 75)

(if (IN #installbits 3)
	(
		(makedir (tackon #dst "Examples/nuqneH")
			(infos)
		)
		(copyfiles
			(source "example1.c")
			(dest (tackon #dst "Examples/nuqneH"))
			(optional "askuser")
			(infos)
		)
	)
)

(complete 100)


