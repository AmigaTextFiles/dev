(if (IN DOCS 1)
	(
		(makedir DOCSDIR (infos))
		(copyfiles(source	ASCIIPATH)
							(dest		DOCSDIR)
							(prompt (cat ABOUTTOTXT ASCII))
							(infos)
		)
	)
)
(complete (/ (* (set sofar (+ sofar ASCIISIZE)) 100) done))

