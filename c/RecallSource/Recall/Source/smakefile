#
# Recall smakefile V3.1
#

PREFSOBJS=		TASK_Main.o TASK_Text.o TASK_Date.o TASK_Attrib.o \
							TASK_Find.o TASK_About.o MainMenu.o \
							Asl.o HandleModules.o Dirs.o Clipboard.o Prefs.o \
							List.o myDoubleClick.o ProjectIO.o	PrefsIO.o \
							Find.o GUI_Environment.o \
							myinclude:Exists.o RecallModules.o myinclude:myIFFFunctions.o \
							myinclude:Execute.o myinclude:myDebug.o Prefs_locale.o \
							cursorHook.o makekey:UnlockKey.o

RECALLSOBJS=	Recall.o AdjustYear.o DateList.o MakeTime.o hotkey.o \
							CheckDateTime.o MakeDate.o ProjectIO.o CalcField.o Recall_locale.o \
							myinclude:myDebug.o

all: Prefs copy 

copy:
	copy Prefs /
#	copy Recall /

clear:
	@delete *.o
	@smake links

links:
	@echo "*e[32mMaking the linkable catalogs*e[0m"
	@catcomp recloc:Prefs.cd CFILE Prefs_locale.h	OBJFILE Prefs_locale.o
	@catcomp recloc:Recall.cd CFILE Recall_locale.h	OBJFILE Recall_locale.o

Prefs: $(PREFSOBJS)
   sc link to Prefs with <<
$(PREFSOBJS)
<
TASK_Main.o:			System_Prefs.h TASK_Main.h TASK_Main.c GUI_Environment.o
TASK_Text.o:			System_Prefs.h TASK_Text.h TASK_Text.c GUI_Environment.o
TASK_Date.o:			System_Prefs.h TASK_Date.h TASK_Date.c GUI_Environment.o
TASK_Attrib.o:		System_Prefs.h TASK_Attrib.h TASK_Attrib.c GUI_Environment.o
TASK_Assign.o:		System_Prefs.h TASK_Assign.h TASK_Assign.c GUI_Environment.o
TASK_About.o:			System_Prefs.h TASK_About.h TASK_About.c GUI_Environment.o
TASK_Find.o:			System_Prefs.h TASK_Find.h TASK_Find.c GUI_Environment.o

MainMenu.o: 			System_Prefs.h MainMenu.h MainMenu.c PrefsIO.h \
									TASK_Main.h TASK_Text.h TASK_Attrib.h TASK_Date.h TASK_Find.h \
									Asl.h HandleModules.h GUI_Environment.o
Asl.o: 						System_Prefs.h Asl.h Asl.c GUI_Environment.o
HandleModules.o:	System_Prefs.h HandleModules.h HandleModules.c \
									RecallModules.o
Dirs.o:						System_Prefs.h Dirs.h Dirs.c myDoubleClick.h
Clipboard.o:			System_Prefs.h Clipboard.c list.h Prefs_locale.h

Prefs.o:					System_Prefs.h Prefs.c ProjectIO.h ProjectIO.c \
									PrefsIO.h PrefsIO.c HandleModules.h HandleModules.c  GUI_Environment.o

List.o: List.c System_Prefs.h list.h TASK_Main.h Dirs.h \
        myinclude:mydebug.h Myinclude:BitMacros.h \
        Recall_REV.h eg:macros.h Prefs_locale.h makekey:Key.h

myDoubleClick.o: myDoubleClick.c System_Prefs.h myDoubleClick.h myinclude:mydebug.h \
                 Myinclude:BitMacros.h Recall_REV.h TASK_Main.h eg:macros.h \
                 list.h

ProjectIO.o:				System_Prefs.h ProjectIO.h ProjectIO.c
GUI_Environment.o:	System_Prefs.h GUI_Environment.h GUI_Environment.c myinclude:mylist.c
Recall_AREXX.o:			System_Prefs.h TASK_Main.o TASK_Text.o TASK_Attrib.o TASK_Date.o
Prefs_AREXX.o:			System_Prefs.h TASK_Main.o TASK_Text.o TASK_Attrib.o TASK_Date.o
PrefsIO.o:					System_Prefs.h PrefsIO.c PrefsIO.h
Find.o:							System_Prefs.h TASK_Find.h TASK_Find.c Find.h Find.c
RecallModules.o:		System_Prefs.h RecallModules.c
cursorHook.o:				System_Prefs.h cursorHook.h cursorHook.c
myinclude:Exists.o:	myinclude:Exists.h myinclude:Exists.c
myinclude:MyIFFFunctions.o:	myinclude:myIFFFunctions.h myinclude:myIFFFunctions.c
myinclude:Execute.o:	myinclude:Execute.h myinclude:Execute.c
myinclude:myDebug.o:	myinclude:myDebug.h myinclude:myDebug.c
makekey:UnlockKey.o:	makekey:Key.h makekey:UnlockKey.c

Recall: $(RECALLOBJS)
   sc link to Recall with <<
$(RECALLOBJS)
<
Recall.o:							System_Prefs.h Recall.c
AdjustYear.o:					System_Recall.h System_Recall.h AdjustYear.c AdjustYear.h
DateList.o:						System_Recall.h DateList.h DateList.c
CalcField.o:					System_Recall.h CalcField.h CalcField.c
MakeDate.o:						System_Recall.h MakeDate.h MakeDate.c
MakeTime.o:						System_Recall.h MakeTime.h MakeTime.c
hotkey.o:							System_Recall.h Hotkey.h Hotkey.c
CheckDateTime.o:			System_Recall.h CheckDateTime.h CheckDateTime.c 
myinclude:myDebug.o:	myinclude:myDebug.h myinclude:myDebug.c
