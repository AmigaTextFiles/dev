# -------------------------------------
# SAS-C Makefile for the Recall modules
# -------------------------------------

MODULE		=Operator
MODULEDIR	=Operators

all: Sort Purge

sort: Sort.c
	@echo "*e[32mCompiling $* $(MODULE) module...*e[0m"
	@sc $*.c
	@revco Sort REVISION
 	@move Sort rec:/$(MODULEDIR)/Sort

Purge: Purge.c
	@echo "*e[32mCompiling $* $(MODULE) module...*e[0m"
	@sc $*.c
	@revco Purge REVISION
 	@move Purge rec:/$(MODULEDIR)/Purge

