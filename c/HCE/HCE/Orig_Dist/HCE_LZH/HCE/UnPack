.K ""
echo "Script to unpack the HCE distribution disk by Jason Petty, 1994"
echo ""
echo "This script will do the following:"
echo ""
echo "1) Format a disk labelled HCE"
echo "2) Then unpack the HCE.LZH file to the HCE disk"
echo ""
echo "Requires one spare floppy and must be run from workbench."
echo ""
ask "Do you want to continue? (Y/N)"
if not WARN
        echo ""
	echo "Please select the window close gadget to exit."
	endcli
endif

SYS:c/Copy >NIL: SYS:c/Copy SYS:c/Delete SYS:System/Format RAM:
Path RESET
Path >NIL: RAM:

echo ""
echo ""
echo "Formatting the HCE disk."
echo ""
echo "IMPORTANT:"
echo "When asked for the disk to be formatted insert a spare floppy."
ask "(Press return to continue)"
echo ""
RAM:Format DRIVE DF0: NAME HCE NOICONS
echo ""
echo "Copying LHARC and the HCE.LZH file to RAM:"
echo " "
RAM:Copy >NIL: HCE.LZH :c/Lharc RAM:
echo "Done..."
RAM:Lharc -x -a -m x RAM:HCE.LZH HCE:

RAM:Delete >NIL: RAM:HCE.LZH
RAM:Delete >NIL: RAM:Lharc RAM:Copy RAM:Format RAM:Delete

echo "All Done...."
echo "You should now unpack the documents and examples disk and"
echo "go from there. (select the window close gadget to exit)"

endcli
