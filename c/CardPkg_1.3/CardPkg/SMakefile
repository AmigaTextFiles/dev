OPT= noicons "LinkerOptions=chip" ErrorRexx
CC= sc

all: trimline Hello_V Hello_H Hello_VBig
vertical:   Hello_V
horizontal: Hello_H
big:        Hello_VBig

trimline: trimline.c
   $(CC) link trimline.c

CardHBrush.c: CardHBrush trimline
    ILBMtoC   CardHBrush
    trimline <CardHBrush.c >t:x
    copy t:x  CardHBrush.c
    delete t:x

CardVBrush.c: CardVBrush trimline
    ILBMtoC   CardVBrush
    trimline <CardVBrush.c >t:x
    copy t:x  CardVBrush.c
    delete t:x

CardVBigBrush.c: CardVBigBrush trimline
    ILBMtoC   CardVBigBrush
    trimline <CardVBigBrush.c >t:x
    copy t:x  CardVBigBrush.c
    delete t:x

CardHImages.o: CardHImages.c CardHImages.h Cards.h CardHBrush.c
        $(CC) $(OPT) CardHImages.c

Cards.o      : Cards.c Cards.h
        $(CC) $(OPT) Cards.c

CardVImages.o: CardVImages.c CardVImages.h Cards.h CardVBrush.c
        $(CC) $(OPT) CardVImages.c

CardVBigImages.o: CardVBigImages.c CardVBigImages.h Cards.h CardVBigBrush.c
        $(CC) $(OPT) data=far CardVBigImages.c

Hello_H.o: Hello_H.c CardHImages.h Cards.h
    $(CC) $(OPT) Hello_H.c

Hello_H: Hello_H.o CardHImages.o Cards.o
    $(CC) LINK $(OPT) Hello_H.o CardHImages.o Cards.o

Hello_V.o: Hello_V.c CardVImages.h Cards.h
    $(CC) $(OPT) Hello_V.c

Hello_V: Hello_V.o CardVImages.o Cards.o
    $(CC) LINK $(OPT) Hello_V.o CardVImages.o Cards.o

Hello_VBig.o: Hello_VBig.c CardVBigImages.h Cards.h
    $(CC) $(OPT) Hello_VBig.c

Hello_VBig: Hello_VBig.o CardVBigImages.o Cards.o
    $(CC) LINK $(OPT) Hello_VBig.o CardVBigImages.o Cards.o

clean:
    Delete Hello_H.lnk CardHImages.o Hello_H.o \
           Hello_V.lnk CardVImages.o Hello_V.o \
           Hello_VBig.lnk CardVBigImages.o Hello_VBig.o \
           Cards.o trimline.o
