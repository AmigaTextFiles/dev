#!/bin/sh



#
# Benchmark 1
#

time ./bm1 > bm1.out1 < in1.txt
time ./bm1.gcc > bm1.out2 < in1.txt
diff -u bm1.out1 bm1.out2

RESULT=$?

  if [ $RESULT -gt 0 ]; then
     echo "Benchmark 1 FAILED"
     exit
  fi

  echo "Benchmark 1 PASSED"

