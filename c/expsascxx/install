.bra [
.ket ]

echo ""
echo "This script will patch the SC driver and SLINK"
echo "to provide support for implicit template declarations."
echo ""
echo "Please view the read.me file for other installation"
echo "instructions."
echo ""
ask "Apply SC and SLINK patch?"

if warn

if exists sc:c/sc
echo Patching SC
decompress SASC_6.50_Disk_1:Compiler/c_files t: sc
spatch -osc:c/sc -ppatches/sc.pch t:sc
delete t:sc quiet
endif

if exists sc:c/slink
echo Patching slink
decompress SASC_6.50_Disk_1:Compiler/c_files t: slink
spatch -osc:c/slink -ppatches/slink.pch t:slink
delete t:slink quiet
endif


endif
