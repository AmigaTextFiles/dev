(set @default-dest "MUI:")

(copyfiles
	(prompt "Installing TearOffPanel header files")
	(confirm)
	(source "Developer/C/include")
	(choices "tearoffpanel_mcc.h" "tearoffbay_mcc.h")
	(dest "include:mui")
	(help @copyfiles-help)
)

(copyfiles
	(prompt "Installing TearOffPanel autodocs")
	(confirm)
	(source "Developer/autodocs")
	(choices "mcc_tearoffpanel.doc" "mcc_tearoffbay.doc")
	(dest "MUI:developer/autodocs")
	(help @copyfiles-help)
)

(copyfiles
	(prompt "Installing example source")
	(confirm)
	(source "Developer/C/examples/tearoffdemo.c")
	(dest "MUI:developer/c/examples")
	(help @copyfiles-help)
)
