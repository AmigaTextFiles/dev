OPT = -O2 -m68060 -msmall-code
FLAGS = -noixemul -nostdlib -nostartfiles -IMUI:Developer/C/include/ -s
CFLAGS = $(FLAGS) $(OPT)


all: Time.mcc

Time.mcc: Time.o
	gcc $(CFLAGS) -o Time.mcc Time_mcc.o -lnix -lgcc -lamiga

Time.o: Time_mcc.h Time_mcc.c MCCLib.c
	gcc $(CFLAGS) -D__AMIGADATE__='"(28.06.97)"' -c -o Time_mcc.o Time_mcc.c

install:
	copy Time.mcc MUI:Libs/MUI quiet

clean:
	rm *.o *.mcc
