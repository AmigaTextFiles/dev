(set @default-dest "MUI:")

(copyfiles
	(prompt "Installing CompactWindow header files")
	(confirm)
	(source "Developer/C/include/compactwindow_mcc.h")
	(dest "include:mui")
	(help @copyfiles-help)
)

(copyfiles
	(prompt "Installing CompactWindow autodocs")
	(confirm)
	(source "Developer/autodocs/mcc_compactwindow.doc")
	(dest "MUI:developer/autodocs")
	(help @copyfiles-help)
)

(copyfiles
	(prompt "Installing example source")
	(confirm)
	(source "Developer/C/examples/compactwindowdemo.c")
	(dest "MUI:developer/c/examples")
	(help @copyfiles-help)
)
