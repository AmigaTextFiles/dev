;$VER: MCC_Icon Installer Script © 1996 Russell Leighton

(copyfiles 
	(help "Installing MCC_Icon Demo...")
    (prompt "Installing MCC_Icon Demo...")
	(confirm)
    (source "Demos")
    (all)
    (infos)
	(dest "MUI:Demos")
    (optional)
)
(complete 10)
(copyfiles 
    (help "Installing MCC_Icon Autodoc...")
    (prompt "Installing MCC_Icon Autodoc...")
	(confirm)
    (source "Developer/Autodocs")
    (all)
    (infos)
	(dest "MUI:Developer/Autodocs")
    (optional)
)
(complete 20)
(copyfiles 
    (help "Installing MCC_Icon C Include...")
    (prompt "Installing MCC_Icon C Include...")
	(confirm)
    (source "Developer/C/Include/MUI")
    (all)
    (infos)
	(dest "MUI:Developer/C/Include/MUI")
    (optional)
)
(complete 40)
(copyfiles 
    (help "Installing MCC_Icon C Example...")
    (prompt "Installing MCC_Icon C Example...")
	(confirm)
    (source "Developer/C/Examples")
    (all)
    (infos)
	(dest "MUI:Developer/C/Examples")
    (optional)
)
(complete 60)
(copyfiles 
    (help "Installing MCC_Icon Doc...")
    (prompt "Installing MCC_Icon Doc...")
	(confirm)
    (source "Docs/english")
    (all)
    (infos)
	(dest "MUI:Docs/english")
    (optional)
)
(complete 80)
(copylib
	(help @copylib-help)
	(prompt "Installing MCC_Icon Class...")
	(confirm)
	(source "Libs/MUI/Icon.mcc")
	(dest "MUI:Libs/MUI")
)
(complete 100)

(exit)
