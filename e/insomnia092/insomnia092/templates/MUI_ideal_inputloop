   WHILE doMethodA(application, 
                   [MUIM_Application_NewInput, 
                   {sigs}]) <> MUIV_Application_ReturnID_Quit
      IF sigs
         sigs := Wait(sigs OR SIGBREAKF_CTRL_C)
         EXIT sigs AND SIGBREAKF_CTRL_C 
      ENDIF
   ENDWHILE
         
         


