INSOMNIA_E_SOURCE_EDITOR_TEMPLATE
   REPEAT
      result := doMethodA(application, [MUIM_Application_NewInput, {sigs}]) 
      SELECT result
      CASE MUIV_Application_ReturnID_Quit
         exit := TRUE
      ENDSELECT   
      IF sigs
         sigs := Wait(sigs OR SIGBREAKF_CTRL_C)
         exit := sigs AND SIGBREAKF_CTRL_C 
      ENDIF
   UNTIL exit
   
         
         

