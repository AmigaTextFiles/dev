
# IsHex(r3:LONG)(LONG)

	.text
	.global	_IsHex

_IsHex:
	cmpwi	r3,"0"
	blt	.false
	cmpwi	r3,"9"
	ble	.true
	cmpwi	r3,"A"
	blt	.false
	cmpwi	r3,"F"
	ble	.true
	cmpwi	r3,"a"
	blt	.false
	cmpwi	r3,"f"
	bgt	.false
.true:	li	r3,-1
	blr
.false:	li	r3,0
	blr

	.type	_IsHex,@function
	.size	_IsHex,$-_IsHex
