(defun cos (a) (sin (if (> a 270) (- a 270) (+ a 90))))
(defun wait () (while (uneq (mouse) 0)))

(window 0 0 600 180 'circle')

(for n 0 360
   (line (+ 300 (/ (* 160 (cos n)) 256))
         (+ 95 (/ (* 75 (sin n)) 256))
         (+ 300 (/ (* 80 (cos n)) 256)) 
         (+ 95 (/ (* 37 (sin n)) 256)) n)
)

(for n 0 360
   (plot (+ 300 (/ (* 40 (cos n)) 256)) (+ 95 (/ (* 19 (sin n)) 256)) n)
)

(write 'click to continue')
(wait)
(while (eq (mouse) 0))
(cls)
(set m 181)
(wait)
(while (eq (mouse) 0)
  (for n 0 360
     (line (+ 300 (/ (* 160 (cos n)) 256))
           (+ 95 (/ (* 75 (sin (- 360 n))) 256)) 
           (+ 300 (/ (* 80 (cos n)) 256)) 
           (+ 95 (/ (* 37 (sin n)) 256)) 2)
     (line (+ 300 (/ (* 160 (cos m)) 256)) 
           (+ 95 (/ (* 75 (sin (- 360 m))) 256)) 
           (+ 300 (/ (* 80 (cos m)) 256)) 
           (+ 95 (/ (* 37 (sin m)) 256)) 1)
     (set m (+ m 1))
     (if (eq m 361) (set m 0))
     (if (uneq (mouse) 0) (exit))
  )
)
