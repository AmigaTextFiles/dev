OPT OSVERSION=37
- ->OPT MODULE
- ->OPT EXPORT

MODULE  'workbench/workbench',
        'exec/ports',
        'intuition/screens', 'intuition/intuition',
        'gadtools', 'libraries/gadtools',
        'newicon', 'libraries/newicon',
        'tools/easygui', 'tools/Exceptions'

CONST ICONGAD_BASE = $83030000

CONST NEWICONGAD   = PLUGIN

/*
   This is our new plugin.
   Note the PRIVATE keyword:
   we don't want the user to access these fields.
*/

OBJECT newicongad_plugin OF plugin
  PRIVATE
  dobj:PTR TO newdiskobject
  gad:PTR TO gadget

  imgnorm
  imgsel

  scr   :PTR TO screen

  disabled
ENDOBJECT

/*
    This is the init proc for the plugin.
    You must provide a valid icon name (full path)
    without the ".info" extension (it is added automagically
    by GetNewDiskObject() call)
*/
PROC init(fname, scr:PTR TO screen) OF newicongad_plugin
  IF (newiconbase:=OpenLibrary('newicon.library', 0))=NIL THEN Raise("ilib")
  self.dobj := GetNewDiskObject(fname)
  IF self.dobj = NIL THEN Raise("icon")

  IF self.dobj.normalimage = NIL THEN Raise("icon")

  self.imgnorm:=RemapChunkyImage(self.dobj.normalimage, scr)
  self.imgsel :=RemapChunkyImage(self.dobj.selectedimage, scr)

  self.scr:=scr

  self.gad:=NEW [NIL, 0, 0, self.dobj.normalimage.width,
self.dobj.normalimage.height,
                 self.dobj.normalimage.flags, GACT_RELVERIFY,
                 self.dobj.stdobject.gadget.gadgettype, -> Gadget Type
                 self.imgnorm,
                 self.imgsel,
                 NIL, 0, NIL, 0, NIL]:gadget
ENDPROC

/*
   We free all Alloc()ed resources.
   Remeber to always END your PLUGINs before program termination.
*/
PROC end() OF newicongad_plugin
  IF self.imgnorm THEN FreeRemappedImage(self.imgnorm, self.scr)
  IF self.imgsel  THEN FreeRemappedImage(self.imgsel,  self.scr)
  IF self.dobj THEN FreeNewDiskObject(self.dobj)
  IF newiconbase THEN CloseLibrary(newiconbase)
  END self.gad
ENDPROC

/* The icon cannot be stretched, so it cannot be resized... */
PROC will_resize() OF newicongad_plugin IS FALSE

/* We provide, as min size, the Icon size */
PROC min_size(ta, fh) OF newicongad_plugin IS self.gad.width,
self.gad.height

/* This is the render proc */
PROC render(ta, x,y, xs, ys, win:PTR TO window) OF newicongad_plugin
  IF self.gh    = NIL THEN RETURN
  IF win        = NIL THEN RETURN

  IF self.gad
    self.gad.leftedge:=x
    self.gad.topedge :=y
    AddGadget(win, self.gad, NIL)
- -> The final argument to RefreshGList() ought to be 1, not 0
    RefreshGList(self.gad, win, NIL, 1)

    self.change_status(win)
  ENDIF
ENDPROC

PROC change_status(win) OF newicongad_plugin
  IF self.disabled
    OffGadget(self.gad, win, NIL)
  ELSE
    OnGadget(self.gad, win, NIL)
  ENDIF
ENDPROC

/*
    And here there is the clear proc
    Since we have created a standard gadget, we simply
    remove it from the gadget list of the window.
*/
PROC clear_render(win:PTR TO window) OF newicongad_plugin
  IF self.gad THEN IF win THEN RemoveGadget(win, self.gad)
ENDPROC

PROC message_test(imsg:PTR TO intuimessage, win:PTR TO window) OF
newicongad_plugin
- -> Because we set the gadget's activation field we know we'll only get
- -> IDCMP_GADGETUP generated by our gadget.
  IF (imsg.class=IDCMP_GADGETUP) THEN RETURN imsg.iaddress=self.gad
ENDPROC FALSE

PROC message_action(a,b,c,d) OF newicongad_plugin IS TRUE

PROC disabled(dis=TRUE) OF newicongad_plugin
  IF dis<>self.disabled
    self.disabled:=dis

    IF self.gh     = NIL THEN RETURN
    IF self.gh.wnd = NIL THEN RETURN

    self.change_status(self.gh.wnd)
  ENDIF
ENDPROC

PROC main() HANDLE
  DEF scr =NIL:PTR TO screen
  DEF icon=NIL:PTR TO newicongad_plugin

  scr:=OpenScreenTagList(NIL, [SA_WIDTH,  320,
                               SA_HEIGHT, 240,
                               SA_DEPTH,    8,
                               SA_PENS,   [-1,0],
                               SA_TITLE,  'NI Test',
                               SA_SHAREPENS, TRUE,
                               NIL, NIL])

  NEW icon.init('ram:disk', scr)

  easyguiA('Test NI', [ROWS,
                        [PLUGIN, 1, icon]
                      ],

            [EG_SCRN, scr,
             NIL, NIL])

EXCEPT DO
  END icon

  IF scr THEN CloseScreen(scr)
ENDPROC

