; $VER: GTXConv Installer 1.0 (10.02.96)
; ©1997 Bugada Andrea

echo ""
echo "                 GTXConv 1.4 Installation Script"
echo "                    written by Bugada Andrea"
echo ""
echo "Welcome in the GTXConv installation script. This script will copy"
echo "all needed files in the right directories."
echo ""
ask  "Are you sure to want to install GTXConv? (Y/N)"
if WARN
   echo "Copying libraries..."
   echo "   ReqTools.library...    " NOLINE
   if not exists LIBS:reqtools.library
      copy libs/reqtools.library LIBS: QUIET
      echo "installed."
   else
      echo "already installed."
   endif
   echo "   PowerPacker.library... " NOLINE
   if not exists LIBS:powerpacker.library
      copy libs/powerpacker.library LIBS: QUIET
      echo "installed."
   else
      echo "already installed."
   endif
   echo "Copying module..." NOLINE
   if not exists EMODULES:
      echo "error!!"
      echo "   Could not find EMODULES: directory."
      echo "   Please assign EMODULES: before starting this script."
      echo "Script aborted."
   else
       copy modules/boopsi.m EMODULES: QUIET
       echo "done."
       echo "Removing unused stuff..." NOLINE
       delete libs/#? libs modules/#? modules install install.info readme.txt readme.txt.info QUIET
       echo "done."
       echo ""
       echo "Installation finished, now you can use GTXConv."
       echo "Good programming..."
   endif
else
   echo "Script aborted."
endif
