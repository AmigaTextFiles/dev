  /* base data storage object */

      OBJECT obj_base
      -> public data for updating, misc stuff
            xx:PTR TO CHAR
            xa[4]:ARRAY
            xb[4]:ARRAY
      PRIVATE
            activeflg
            name[32]:ARRAY
      ENDOBJECT

      PROC setname(x:PTR TO CHAR) OF obj_base IS AstrCopy(self.name,x,33)
      PROC getname() OF obj_base IS self.name
      PROC init() OF obj_base IS self.setname('<<< NameLess >>>') -> constructor
      PROC end() OF obj_base IS self.deactivate()
      PROC clear() OF obj_base
            self.xx:=NIL
            clrmem(self.xa,4)
            clrmem(self.xb,4)
            clrmem(self.name,33)
            self.activeflg:=FALSE
      ENDPROC
      PROC activate() OF obj_base
            self.activeflg:=TRUE
      ENDPROC TRUE
      PROC deactivate() OF obj_base
            self.activeflg:=FALSE
      ENDPROC

