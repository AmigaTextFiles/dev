# AudioSTREAM build file v 1.0

compiler=EBIN:EC
opts=ERRLINE IGNORECACHE OPTI QUIET 
# ALL: we need audiostream and libraries


global.m:   global.e
      echo ""
      echo "Attempting to build global.m..."
      echo ""
      $(compiler) $(opts) global.e


aboutimage.m:     aboutimage.e global.m
      echo ""
      echo "Attempting to build aboutimage.m..."
      echo ""
      $(compiler) $(opts) aboutimage.e


libs/asmisc.m:    libs/asmisc.e aboutimage.m global.m
      echo ""
      echo "Attempting to build libs/asmisc.library..."
      echo ""
      $(compiler) $(opts) libs/asmisc.e


gui_declarations.m:     gui_declarations.e global.m
      echo ""
      echo "Attempting to build gui_declarations.m..."
      echo ""
      $(compiler) $(opts) gui_declarations.e


declarations.m:   declarations.e global.m
      echo ""
      echo "Attempting to build declarations.m..."
      echo ""
      $(compiler) $(opts) declarations.e


common.m:   common.e gui_declarations.m declarations.m global.m
      echo ""
      echo "Attempting to build common.m..."
      echo ""
      $(compiler) $(opts) common.e

sampleio.m:   sampleio.e common.m global.m
      echo ""
      echo "Attempting to build sampleio.m..."
      echo ""
      $(compiler) $(opts) sampleio.e

rta.m:   rta.e common.m global.m
      echo ""
      echo "Attempting to build rta.m..."
      echo ""
      $(compiler) $(opts) rta.e
      
customclasses.m:customclasses.e gui_declarations.m common.m declarations.m global.m
      echo ""
      echo "Attempting to build customclasses.m..."
      echo ""
      $(compiler) $(opts) customclasses.e


libs/asguisetup.m: libs/asguisetup.e gui_declarations.m libs/asmisc.m global.m
      echo ""
      echo "Attempting to build libs/asguisetup.library..."
      echo ""
      $(compiler) $(opts) libs/asguisetup.e


libs/asevents.m: libs/asevents.e gui_declarations.m global.m
      echo ""
      echo "Attempting to build libs/asevents.library..."
      echo ""
      $(compiler) $(opts) libs/asevents.e

stools.m:      stools.e declarations.m gui_declarations.m common.m global.m
      echo ""
      echo "Attempting to build stools.m..."
      echo ""
      $(compiler) $(opts) stools.e


samples.m:  samples.e rta.m stools.m sampleio.m gui_declarations.m declarations.m common.m global.m
      echo ""
      echo "Attempting to build samples.m..."
      echo ""
      $(compiler) $(opts) samples.e 

      
tracks.m:   tracks.e gui_declarations.m declarations.m common.m dsp/dummy.m global.m
      echo ""
      echo "Attempting to build tracks.m..."
      echo ""
      $(compiler) $(opts) tracks.e  


songs.m:    songs.e gui_declarations.m declarations.m common.m dsp/dummy.m global.m
      echo ""
      echo "Attempting to build songs.m..."
      echo ""
      $(compiler) $(opts) songs.e         

dsp/dummy.m: dsp/dummy.e global.m
      echo ""
      echo "Attempting to build dsp/dummy.m..."
      echo ""
      $(compiler) $(opts) dsp/dummy.e


dsp.m:      dsp.e declarations.m gui_declarations.m common.m dsp/dummy.m global.m
      echo ""
      echo "Attempting to build dsp.m..."
      echo ""
      $(compiler) $(opts) dsp.e
 
audiostream:      audiostream.e rta.m gui_declarations.m libs/asguisetup.m libs/asevents.m libs/asmisc.m declarations.m common.m tracks.m songs.m customclasses.m dsp.m samples.m global.m
      echo ""
      echo "Attempting to build AudioSTREAM executable..."
      echo ""
      $(compiler) $(opts) ADDBUF=2 audiostream.e

all:  audiostream 
      echo ""
      echo "BUILD COMPLETED"
      echo ""
