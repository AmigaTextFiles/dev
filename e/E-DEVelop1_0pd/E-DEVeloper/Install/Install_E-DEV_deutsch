        (complete 0)

	(set #WrongKickStart "\nSie müssen mindestens\nKickstart 2.04\n besitzen um den E-DEVeloeper benutzen zu können")

	(if (< (/ (getversion) 65536) 37)
	  (abort #WrongKickStart)
	)

	(message
	  "\n\n\n\n"
	  "Willkommen zum\n\nE-DEVeloper 1.pd0 \n\nInstallations Script V1.0\n"
	)

	(set edev-dest
		(askdir (prompt "Bitte Zielverzeichnis für den E-DEV auswählen, eine Schublade wird generiert")
			(help @askdir-help)
			(default "ebin:")
		)
	)

        (run (cat "c:makedir "edev-dest"E-DEVeloper"))

        (complete 15)

;       Für die Installation VON Diskette aus diesen Teil löschen
;---------->8---------->8---------->8---------->8---------->8---------->8
;

	(copyfiles 
                (prompt "\nKopiere das Schubladen-Icon...\n")
		(help @copyfiles-help)
		(source "/icons/E-DEVeloper.info")
		(dest   edev-dest)
		(files)
	)
;                      
;---------->8---------->8---------->8---------->8---------->8---------->8
;                       Bis hier hin...

        (set edev-dest (tackon edev-dest"E-DEVeloper"))

        (complete 27)

	(copyfiles 
		(prompt "\nKopiere das E-DEV-Hauptprogramm...\n")
		(help @copyfiles-help)
		(source "/E-DEV")
		(dest   edev-dest)
		(files)
	)

        (complete 35)

	(if(askbool
		(prompt "\n Wollen Sie das E-DEV-Piktogramm ins \n"edev-dest"\nVerzeichnis kopieren ?")
		(help @askbool_help)
		(default 1)) 
		(copyfiles 
			(prompt "\nKopiere das E-DEV°-Icon...\n")
			(help @copyfiles-help)
			(source "/E-DEV.info")
			(dest edev-dest)
			(files)
			(infos)
		)
	)

        (complete 50)

	(if(askbool
		(prompt "\n Wollen Sie die externen Tools \nvon E-DEV nach "edev-dest"\n kopieren ?")
		(help @askbool_help)
		(default 1)) 

			((copyfiles 
			(prompt "\nKopiere E-DEV-Tools...\n")
			(help @copyfiles-help)
			(source "/TOOLS/showprojekt")
			(dest edev-dest)
			(files)
			(infos)
                  )

			(copyfiles 
			(prompt "\nKopiere E-DEV-Tools...\n")
			(help @copyfiles-help)
			(source "/TOOLS/list2txt")
			(dest edev-dest)
			(files)
			(infos)
                  )

			(copyfiles 
			(prompt "\nKopiere E-DEV-Tools...\n")
			(help @copyfiles-help)
			(source "/TOOLS/projekt2list")
			(dest edev-dest)
			(files)
			(infos)
                  ))
	)

        (complete 65)

	(if(askbool
		(prompt "\n Wollen Sie die ARexx-Beispiele nach\n "sys:Rexx"\n kopieren ?")
		(help @askbool_help)
		(default 1)) 
			(copyfiles 
			(prompt "\nKopiere ARexx-Beispiele...\n")
			(help @copyfiles-help)
			(source "/REXX/")
			(dest "rexx:")
			(files)
			(infos)
                        (all)
                  ))

        (complete 70)

                (copyfiles 
			(prompt "\nKopiere nun des E-DEV App-Icon...\n")
			(help @copyfiles-help)
			(source "/icons/e-dev.info")
			(dest "sys:prefs/presets/")
			(files)
                  )

        (complete 75)

	(if(askbool
		(prompt "\n Wollen Sie die E-DEV-Anleitung installieren ?\n")
		(help @askbool_help)
		(default 1)) 
		(
			(set edevdoc-dest
				(askdir (prompt "Bitte das Zielverzeichnis für die Dokomentation angeben")
					(help @askdir-help)
					(default "edocs:")
				)
			)
			(copyfiles 
			(prompt "\nKopiere E-DEV.guide...\n")
			(help @copyfiles-help)
			(source "/DOKS/E-DEV_deutsch.guide")
			(dest   edevdoc-dest)
			(files)
			(infos))
		)
	)

        (complete 99)

(run (cat "c:makedir "edev-dest"/Projekte"))

(startup "EDEV"
	(prompt " \n\nEs muß jetzt noch \n\nein Assign in die \n\n  s:User-StartUP eingefügt\n\n werden, dieser Assign wird automatisch\n\n Geadded")
	(help @startup-help)
	(command "if exists "edev-dest"/Projekte \n" )
	(command "   assign eprojects: "edev-dest"/Projekte  \n" )
	(command "endif" )
)

	(set @default-dest edev-dest)

	(complete 100)

(exit "\n\nBevor sie anfangen mit dem E-DEV zu arbeiten \n\n sollten sie neu booten, damit der Projekt-Pfad\n\n vom System erkannt wird\n\n")
