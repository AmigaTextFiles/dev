@Node "hookFunc()" "/hookFunc"

@{b}   NAME@{ub}
       hookFunc() -- Hook function for requesters.

@{b}   SYNOPSIS@{ub}
       hookFunc(LONG, PTR TO anchorpath, LONG)

       hookFunc(type, obj, fr)

@{b}   FUNCTION@{ub}
       Used when displaying the file requesters.

@{b}   NOTES@{ub}
       Stolen from JRH's rkrm examples. Dunno how it works, so this autodoc
       lacks the input description :-(

@{b}   SEE ALSO@{ub}
       @{"getFileWithPattern()" Link "getFileWithPattern()"}, rkrm examples
@EndNode

@Node "asl()" "asl/asl"

@{b}   NAME@{ub}
@{b}     asl of library@{ub}

@{b}   PURPOSE@{ub}
@{b}     Object for handling the asl.library.@{ub}

@{b}   ATTRIBUTES@{ub}
@{b}     patbuffer[MAXPATTERNLENGTH]:ARRAY OF CHAR -- buffer to store the file@{ub}
         pattern in.

@{b}     lastFileChosen[MAXFILELENGTH]:ARRAY OF CHAR -- buffer to store the name@{ub}
         of the file that was chosen in the last requester.

@{b}     lastDirChosen[MAXDIRLENGTH]:ARRAY OF CHAR -- buffer to store the name@{ub}
         of the directory that was chosen in the last requester.

@{b}   NOTES@{ub}
@{b}     Not all functions of the asl.library are implemented.@{ub}

@{b}   SEE ALSO@{ub}
       library

@EndNode

