;
;   $VER: Install_EasyPLUGINs (Deutsch) 1.5 (20.2.98)
;

(complete 0)

; set language strings

(set #MODULES_PROMPT "Installieren der EasyPLUGINs Module?")
(set #MODULES_HELP   "Ich denke du willst sie installieren, sonst hättest du das Installationsskript nicht gestartet :)")

(set #DEST_PROMPT    "Wähle den Pfad aus wohin die Quellcodes und Dokumentationen installiert werden sollen. Wenn das Verzeichnis EasyPLUGINs noch nicht existiert wird es angelegt.")

(set #GUIDE_PROMPT   "Installieren der EasyPLUGINs Hauptdokumentation?")
(set #GUIDE_HELP     "Du solltest sie vielleicht lesen.")

(set #DOCS_PROMPT    "Installieren der Dokumentationen für die PLUGINs?")
(set #DOCS_HELP      "Du solltest sie vielleicht lesen.")

(set #EXAMP_PROMPT   "Installieren der EasyPLUGINs-Beispiel Quellcodes?")
(set #EXAMP_HELP     "Sehr empfehlenswert.")

(set #SOURCE_PROMPT  "Installieren der Quellcodes für die EasyPLUGINs Module?")
(set #SOURCE_HELP    "Du kannst sie verändern wenn du willst - lies dazu die Dokumentation für die Nutzungsbedingungen.")

(set #BIN_PROMPT     "Hilfsprogramme für EasyPLUGINs Programmierer installieren ?")
(set #BIN_HELP       "Du solltest sie installieren, wenn du einfach PLUGINS im EasyPLUGINs Style Guide Format programmieren möchtest.")


; copy the modules to EModules:

(copyfiles (prompt #MODULES_PROMPT)
           (source "modules/")
           (all)
           (dest   "EModules:EasyPLUGINs")
           (confirm)
           (help   #MODULES_HELP)
)

(complete 10)

; get the installation directory

(set #DESTINATION
          (askdir (prompt  #DEST_PROMPT)
                  (help    @default-help)
                  (default @default-dest)
          )
)

(complete 15)

; Find/make main directory, install main .guide

(set #DEST_MAIN     (tackon #DESTINATION "EasyPLUGINs"))

(copyfiles (prompt  #GUIDE_PROMPT)
           (source  "EasyPLUGINs.guide")
           (dest    #DEST_MAIN)
           (infos)
           (confirm)
           (help    #GUIDE_HELP)
)

(complete 35)

; install the documentation for the PLUGINs

(copyfiles (prompt  #DOCS_PROMPT)
           (source  "docs")
           (all)
           (dest    (tackon #DEST_MAIN   "docs"))
           (confirm)
           (help    #DOCS_HELP)
)

(complete 50)

; install the sources of the PLUGINs

(copyfiles (prompt  #SOURCE_PROMPT)
           (source "source")
           (all)
           (dest    (tackon #DEST_MAIN   "source"))
           (confirm)
           (help    #SOURCE_HELP)
)

(complete 70)

; install the program(s) in the /bin directory

(copyfiles (prompt  #BIN_PROMPT)
           (source "bin")
           (all)
           (dest    (tackon #DEST_MAIN   "bin"))
           (confirm)
           (help    #BIN_HELP)
)

(complete 75)

; install the examples for the PLUGINs

(copyfiles (prompt  #EXAMP_PROMPT)
           (source  "examples")
           (all)
           (dest    (tackon #DEST_MAIN   "examples"))
           (confirm)
           (help    #EXAMP_HELP)
)

(complete 100)
(exit)

