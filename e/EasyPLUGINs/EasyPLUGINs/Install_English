;
;   $VER: Install_EasyPLUGINs (English) 1.5 (20.2.98)
;

(complete 0)

; set language strings

(set #MODULES_PROMPT "Install the EasyPLUGINs modules?")
(set #MODULES_HELP   "I guess you want to install these, otherwise you wouldn't be running the install script :)")

(set #DEST_PROMPT    "Choose the path where the source code and documentation will be installed. If the EasyPLUGINs directory does not exist, it will be created.")

(set #GUIDE_PROMPT   "Install the main EasyPLUGINs documentation?")
(set #GUIDE_HELP     "You should probably read this.")

(set #DOCS_PROMPT    "Install the documentation for the PLUGINs?")
(set #DOCS_HELP      "You should probably read these.")

(set #SOURCE_PROMPT  "Install the source code to the EasyPLUGINs modules?")
(set #SOURCE_HELP    "You might want to modify these - read the documentation for the conditions of use.")

(set #EXAMP_PROMPT   "Install the EasyPLUGINs example source code?")
(set #EXAMP_HELP     "Extremely recommended.")

(set #BIN_PROMPT     "Install support utilities for EasyPLUGINs programmers?")
(set #BIN_HELP       "You should install these if you are likely to be programming further PLUGINs in EasyPLUGINs Style Guide format.")


; copy the modules to EModules:

(copyfiles (prompt #MODULES_PROMPT)
           (source "modules/")
           (all)
           (dest   "EModules:EasyPLUGINs")
           (confirm)
           (help   #MODULES_HELP)
)

(complete 10)

; get the installation directory

(set #DESTINATION
          (askdir (prompt  #DEST_PROMPT)
                  (help    @default-help)
                  (default @default-dest)
          )
)

(complete 15)

; Find/make main directory, install main .guide

(set #DEST_MAIN     (tackon #DESTINATION "EasyPLUGINs"))

(copyfiles (prompt  #GUIDE_PROMPT)
           (source  "EasyPLUGINs.guide")
           (dest    #DEST_MAIN)
           (infos)
           (confirm)
           (help    #GUIDE_HELP)
)

(complete 35)

; install the documentation for the PLUGINs

(copyfiles (prompt  #DOCS_PROMPT)
           (source  "docs")
           (all)
           (dest    (tackon #DEST_MAIN   "docs"))
           (confirm)
           (help    #DOCS_HELP)
)

(complete 50)

; install the sources of the PLUGINs

(copyfiles (prompt  #SOURCE_PROMPT)
           (source "source")
           (all)
           (dest    (tackon #DEST_MAIN   "source"))
           (confirm)
           (help    #SOURCE_HELP)
)

(complete 70)

; install the program(s) in the /bin directory

(copyfiles (prompt  #BIN_PROMPT)
           (source "bin")
           (all)
           (dest    (tackon #DEST_MAIN   "bin"))
           (confirm)
           (help    #BIN_HELP)
)

(complete 75)

; install the examples for the PLUGINs

(copyfiles (prompt  #EXAMP_PROMPT)
           (source  "examples")
           (all)
           (dest    (tackon #DEST_MAIN   "examples"))
           (confirm)
           (help    #EXAMP_HELP)
)

(complete 100)
(exit)

