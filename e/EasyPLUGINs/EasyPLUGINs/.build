
all:
    Build source NOHEAD
    FlushCache >NIL:
    Build examples NOHEAD

source:
        CD source/
        List P="#?.e" LFORMAT "EC %s OPTI" >T:ep_src_build
        Execute T:ep_src_build
        CD /
        Copy source/#?.m modules/
        Copy source/#?.m Emodules:easyplugins
        Delete source/#?.m
        Delete T:ep_src_build

examples:
        CD examples/
        List P="#?.e" LFORMAT "EC %s OPTI" >T:ep_exa_build
        Execute T:ep_exa_build
        CD /
        Delete T:ep_exa_build

