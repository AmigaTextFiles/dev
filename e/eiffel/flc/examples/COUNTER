
-- counter class

indexing
  author: "Guichard Damien";
  created: 7,November,1995;
  modified: 7,November,1995

class COUNTER
  -- Basic counter
feature {ANY}
  count:INTEGER;
    -- Current counter value.
  start is
    -- Set counter to 0.
    do
      count := 0
    ensure
      -- count = 0
    end;  -- start
  forth is
    -- Increment the counter.
    do
      count := count + 1
    ensure
      -- count = old count + 1
    end   -- forth
invariant
  -- count >= 0
end  -- class 'COUNTER'

