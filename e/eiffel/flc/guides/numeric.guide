@node Main "NUMERIC class short form"
-- Objects amenable to basic arithmetic operation
@{b}deferred class interface@{ub} NUMERIC @{b}exported features@{ub}
    @{b}infix@{ub} "+" (other:NUMERIC):NUMERIC
        -- Sum of current object and 'other'
      @{b}deferred@{ub}
    @{b}infix@{ub} "-" (other:NUMERIC):NUMERIC
        -- Difference between current object and 'other'
      @{b}deferred@{ub}
    @{b}infix@{ub} "*" (other:NUMERIC):NUMERIC
        -- Product of current object by 'other'
      @{b}deferred@{ub}
    @{b}prefix@{ub} "+":NUMERIC
        -- Unary addition applied to current object
      @{b}deferred@{ub}
    @{b}prefix@{ub} "-":NUMERIC
        -- Unary substraction applied to current object
      @{b}deferred@{ub}
@{b}end interface@{ub} -- class 'NUMERIC'
@endnode
