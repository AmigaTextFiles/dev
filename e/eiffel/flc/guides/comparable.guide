@node Main "COMPARABLE class short form"
-- Objects which may be compared for a total order relation
@{b}deferred class interface@{ub} COMPARABLE @{b}exported features@{ub}
    @{b}infix "<"@{ub} (other:@{b}like@{ub} Current):BOOLEAN
        -- Is current object less than 'other'?
      @{b}deferred@{ub}
    @{b}infix "<="@{ub} (other:@{b}like@{ub} Current):BOOLEAN
        -- Is current object less than or equal to 'other'?
      @{b}deferred@{ub}
    @{b}infix ">"@{ub} (other:@{b}like@{ub} Current):BOOLEAN
        -- Is current object greater than 'other'?
      @{b}deferred@{ub}
    @{b}infix ">="@{ub} (other:@{b}like@{ub} Current):BOOLEAN
        -- Is current object greater than or equal to 'other'?
      @{b}deferred@{ub}
@{b}end interface@{ub} -- class 'COMPARABLE'
@endnode
