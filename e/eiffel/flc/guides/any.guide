@node Main "ANY class short form"
-- Universal features.
-- Every class inherit from ANY.
@{b}class interface@{ub} ANY @{b}exported features@{ub}
    is_equal, frozen standard_is_equal (other:@{b}like@{ub} Current):@{"BOOLEAN" LINK boolean.guide/main}
        -- Is 'other' attached to an object identical field by field to current object?
    copy, frozen standard_copy (other:@{b}like@{ub} Current)
        -- Copy all fields of 'other' to corresponding fields of current object.
    lastchar:@{"CHARACTER" LINK character.guide/main}
        -- Last character read by 'readchar'.
    lastint:@{"INTEGER" LINK integer.guide/main}
        -- Last integer read by 'readint'.
    laststring:@{"STRING" LINK string.guide/main}
        -- Last string read by 'readstring'.
    new_line
        -- Write line feed at end of default output.
    putchar(c:@{"CHARACTER" LINK character.guide/main})
        -- Write 'c' at end of default output.
    putint(i:@{"INTEGER" LINK integer.guide/main})
        -- Write 'i' at end of default output.
    putstring(s:@{"STRING" LINK string.guide/main})
        -- Write 's' at end of default output.
    readchar
        -- Read a new character from standard input.
    readint
        -- Read a new integer from standard input.
    readstring
        -- Read a new string from standard input.
    bit_size:@{"INTEGER" LINK integer.guide/main}
        -- Bit number used to store current object.
@{b}end interface@{ub} -- class 'ANY'
@endnode
